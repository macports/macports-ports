# $Id$

PortSystem 1.0
name		xastir
version		1.8.0
categories	science
maintainers	shadow@dementia.org
description	Amateur Radio APRS tracking software
platforms	darwin
homepage	http://www.xastir.org/
master_sites	sourceforge
checksums	md5 7da1eb2de7e912d9b9eb08f087664832

depends_lib     lib:libX11.6:XFree86 port:openmotif \
		port:libgeotiff port:freetype port:ImageMagick port:gdal \
		port:pcre port:db4 port:tiff port:proj port:shapelib

pre-configure    { cd ${worksrcpath}
                   system "sh ./bootstrap.sh" }

configure.args	CFLAGS="-I${prefix}/include" LDFLAGS="-L${prefix}/lib" \
		CPPFLAGS="-I${prefix}/include"

build.target     all



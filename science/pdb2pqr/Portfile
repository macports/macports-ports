# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem              1.0
PortGroup               python 1.0
PortGroup               github 1.0

name                    pdb2pqr
revision                0

supported_archs         noarch
platforms               {darwin any}
license                 BSD
maintainers             {gmail.com:howarth.at.macports @jwhowarth} openmaintainer

description             Preparation of protein structures for electrostatics calculations
long_description        {*}${description}

# The PyPi copy of pdb2pqr has its testsuite in DOS format which
# makes it unpatchable under unix. So use the pdb2pqr from the 
# Electrostatics GitHub

github.setup            Electrostatics pdb2pqr 3.6.1 v
github.tarball_from     releases
distfiles               pdb2pqr-v${version}.tar.gz:pdb2pqr

checksums               rmd160  bdd66b7cc6ecf069c709bb5b8eb0665ec42602d2 \
                        sha256  48ab09877e9c35dad4c46459ad31422013ea153e3681fc2cace5bf68ce352d75 \
                        size    13389894

python.versions         312

patchfiles              skip-network-tests.patch
patch.pre_args          -p1

depends_lib-append      port:py${python.version}-numpy \
                        port:py${python.version}-pandas \
                        port:py${python.version}-pdbx \
                        port:propka \
                        port:py${python.version}-requests \
                        port:py${python.version}-testfixtures

test.run                yes

post-destroot {
                        ln -fs ${prefix}/${frameworks_dir}/Python.framework/Versions/3.12/bin/pdb2pqr ${destroot}/${prefix}/bin/pdb2pqr 
}

post-patch {
file delete  ${worksrcpath}/pdb2pka
}

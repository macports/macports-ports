PortSystem    1.0

name          lalapps
version       5.2
categories    science
platforms     darwin
maintainers   ram

description   LSC Algorithm Library Applications
long_description \
  LALApps is a set of codes for gravitational wave data analysis, \
  written in ANSI C89 against the LSC Algorithm Library.

homepage      http://www.lsc-group.phys.uwm.edu/daswg/projects/lalapps.html
master_sites  http://www.lsc-group.phys.uwm.edu/daswg/download/software/source/

checksums     md5 088cddeabcf39f08d92426795497906d \
              sha1 27c41c50785ef65a130468eb2a74ab279f08b791 \
              rmd160 9809c577370230f82e894faade1c0d74fc542c20

depends_lib   port:pkgconfig \
              port:python25 \
              port:gsl \
              port:fftw-3 \
              port:fftw-3-single \
              port:libframe \
              port:metaio \
              port:lal \
              port:glue

configure.env    PYTHON=${prefix}/bin/python2.5
configure.args   --mandir=${prefix}/share/man

livecheck.check  regex

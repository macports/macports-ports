# $Id$

PortSystem    1.0

name          lalapps
version       6.8.1
categories    science
platforms     darwin
maintainers   ram
license       GPL

description   LSC Algorithm Library Applications
long_description \
  LALApps is a set of codes for gravitational wave data analysis, \
  against the LSC Algorithm Library.

homepage      https://www.lsc-group.phys.uwm.edu/daswg/projects/lalsuite.html
master_sites  http://www.lsc-group.phys.uwm.edu/daswg/download/software/source/lalsuite/

checksums     rmd160 919e79dd36407bfdb203b8518a807f87c22dacaa \
              sha256 db4caa4ce33907e8bc0809130f076953001e95d0f12622089b603fdfdce38399

depends_build port:pkgconfig

depends_lib   port:python27 \
              port:gsl \
              port:fftw-3 \
              port:fftw-3-single \
              port:libframe \
              port:metaio \
              port:lal \
              port:lalframe \
              port:lalmetaio \
              port:lalxml \
              port:lalsimulation \
              port:lalburst \
              port:lalinspiral \
              port:lalpulsar \
              port:lalinference \
              port:lalstochastic \
              port:glue

configure.python ${prefix}/bin/python2.7
configure.args   --mandir=${prefix}/share/man \
                 --disable-silent-rules \
                 --enable-lalxml \
                 --disable-gcc-flags \
                 --disable-debug

use_parallel_build yes

livecheck.type   regex
livecheck.url    ${master_sites}
livecheck.regex  {lalapps-(\d+(?:\.\d+)*).tar.gz}

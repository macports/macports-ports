# $Id$

PortSystem    1.0
PortGroup     active_variants 1.1

name          lalapps
version       6.16.0
categories    science
platforms     darwin
maintainers   ram
license       GPL-2+

description   LSC Algorithm Library Applications
long_description \
  LALApps is a set of codes for gravitational wave data analysis, \
  against the LSC Algorithm Library.

homepage      https://www.lsc-group.phys.uwm.edu/daswg/projects/lalsuite.html
master_sites  http://software.ligo.org/lscsoft/source/lalsuite/

checksums     rmd160 32697b93e6b3268f64dbd037cf4a13aa7f146e37 \
              sha256 267738efbd0c93cfed569f19c8a8441047f669c2d24f3a1569173bb90bb96686

depends_build port:pkgconfig

depends_lib   port:python27 \
              port:gsl \
              port:fftw-3 \
              port:fftw-3-single \
              port:libframe \
              port:metaio \
              port:libxml2 \
              port:lal \
              port:lalframe \
              port:lalmetaio \
              port:lalxml \
              port:lalsimulation \
              port:lalburst \
              port:lalinspiral \
              port:lalpulsar \
              port:lalinference \
              port:lalstochastic \
              port:glue

configure.python ${prefix}/bin/python2.7
configure.args   --mandir=${prefix}/share/man \
                 --disable-silent-rules \
                 --disable-gcc-flags \
                 --disable-debug

use_parallel_build yes

set pythondir "${frameworks_dir}/Python.framework/Versions/2.7/lib/python2.7/site-packages"
destroot.args-append \
              pythondir="${pythondir}" \
              pyexecdir="${pythondir}" \
              pkgpythondir="${pythondir}/${name}" \
              pkgpyexecdir="${pythondir}/${name}"


#    xinstall -W ${worksrcpath} C/xcrys bin/xcrys
#    system -W ${worksrcpath}/tests "sh run_test.sh structures"
#}

livecheck.type      regex
livecheck.url       [lindex ${master_sites} 0]
livecheck.regex     xcrysden-(\[0-9.\]+)${extract.suffix}

                    sha1    d7f860313d5cc226c51f868bbe9bb930d143ab9c \
                    rmd160  2390548f7a30e709e22b3ee12f21ec9f7e45def7

depends_lib         port:guile

compilers.choose    f77
compilers.setup     require_fortran

livecheck.type      regex

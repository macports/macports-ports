if {${subport} ne ${name}} {
    depends_build-append \
                    port:py${python.version}-setuptools

    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} README.rst NEWS COPYING \
            ${destroot}${docdir}
    }

    livecheck.type  none
}

        } elseif {${python.version} eq 39} {
            master_sites \
                    https://files.pythonhosted.org/packages/3e/26/9d5ad7ff877fe0e006529d3860f78c9c2a848cd47dca54dfaacd011b1959/
            checksums \
                    rmd160  82b073a9301f6902d270881548f9e6a4f545edae \

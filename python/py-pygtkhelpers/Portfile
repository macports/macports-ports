if {${name} ne ${subport}} {
    depends_lib         port:py${python.version}-setuptools
    livecheck.type      none
} else {
    livecheck.type      regex
    livecheck.url       ${master_sites}
    livecheck.regex     "${real_name}-(\\d+(?:\\.\\d+)*)${extract.suffix}"

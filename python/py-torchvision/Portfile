if {${name} ne ${subport}} {

    depends_build-append \
        port:py${python.version}-setuptools

    depends_lib-append \
        port:py${python.version}-Pillow \
        port:py${python.version}-pytorch
    
    build.cmd    "${python.bin} setup.py"
    destroot.cmd "${python.bin} setup.py install"

    livecheck.type none 


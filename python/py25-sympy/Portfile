  move ${destroot}${prefix}/bin/isympy \
    ${destroot}${prefix}/bin/isympy2.5
  move ${destroot}${prefix}/share/man/man1/isympy.1 \
    ${destroot}${prefix}/share/man/man1/isympy2.5.1
}

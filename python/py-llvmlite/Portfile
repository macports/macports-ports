if {${name} ne ${subport}} {
    set llvm_version    20

    depends_build-append \
                        path:bin/cmake:cmake

    build.env-append    LLVM_DIR=${prefix}/libexec/llvm-${llvm_version}/lib/cmake

    depends_lib-append  port:llvm-${llvm_version} \
                        port:zlib \
                        port:zstd

    livecheck.type      none
}

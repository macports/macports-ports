    post-destroot {
        xinstall -m 644 -W ${worksrcpath} \
            CHANGES.rst README.rst \
            ${destroot}${prefix}/share/doc/${subport}
        move ${destroot}${python.pkgd}/cherrypy/tutorial \
            ${destroot}${prefix}/share/doc/${subport}
    }

    livecheck.type  none
}

if {${name} ne ${subport}} {
    test.run        yes
    test.cmd        ${python.bin} test_futures.py
    test.target

    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} README.rst LICENSE \
            ${destroot}${docdir}
    }

    livecheck.type  none

PortSystem          1.0
PortGroup           python 1.0

name                py-spyder-kernels
version             2.1.3
revision            0
epoch               1

categories-append   devel
platforms           darwin
supported_archs     noarch
license             MIT
maintainers         {reneeotten @reneeotten} openmaintainer

description         Jupyter kernels for Spyder's console.
long_description    ${description}

homepage            https://github.com/spyder-ide/spyder-kernels

checksums           rmd160  2099645e810fa750463df6d18d9faab34e3618f2 \
                    sha256  ab5c2a90d44f0a26e7a6862e3cb73bb2d7084bc72f9336d8c2d2a78c145c4645 \
                    size    65850

python.versions     36 37 38 39

if {${name} ne ${subport}} {
    if {${python.version} in "36 37 38"} {
        conflicts   py${python.version}-spyder-kernels-devel
    }

    depends_build-append \
                    port:py${python.version}-setuptools

    depends_lib-append \
                    port:py${python.version}-cloudpickle \
                    port:py${python.version}-ipykernel \
                    port:py${python.version}-ipython \
                    port:py${python.version}-jupyter_client \
                    port:py${python.version}-wurlitzer \
                    port:py${python.version}-zmq

    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} AUTHORS.txt CHANGELOG.md \
            LICENSE.txt README.md ${destroot}${docdir}
    }

    livecheck.type  none
}

python.versions     27

if {${name} ne ${subport}} {
    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -m 644 -W ${worksrcpath} README.rst ${destroot}${docdir}
        copy ${worksrcpath}/docs ${destroot}${docdir}
        system "chmod -R a+r ${destroot}${python.prefix}/share/moin/underlay/pages"
    }
}

livecheck.name      moin

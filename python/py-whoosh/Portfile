python.versions     27 35 36 37

if {${name} ne ${subport}} {
    depends_build-append \
                    port:py${python.version}-setuptools

    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} README.txt LICENSE.txt \
            ${destroot}${docdir}
    }

    livecheck.type  none
}

                    size    1525177
distname            SQLObject-${version}

python.versions     27 37

if {${name} ne ${subport}} {
    depends_build-append \
                    port:py${python.version}-setuptools

    depends_lib-append \
                    port:py${python.version}-dispatcher \
                    port:py${python.version}-formencode

    post-destroot {

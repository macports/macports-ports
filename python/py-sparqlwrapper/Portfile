if {${name} ne ${subport}} {
    depends_run-append \
                    port:py${python.version}-rdflib

    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} README.rst MANAGEMENT.md \
            LICENSE.txt ChangeLog.txt AUTHORS.md ${destroot}${docdir}

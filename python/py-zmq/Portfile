        set setup_cfg ${worksrcpath}/setup.cfg
        file copy ${worksrcpath}/setup.cfg.template ${setup_cfg}
        reinplace "s|/usr/local|${prefix}|g" ${setup_cfg}
    }

    livecheck.type      none

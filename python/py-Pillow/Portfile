# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           active_variants 1.1
PortGroup           python 1.0

name                py-Pillow
version             7.2.0
revision            1
categories-append   devel
platforms           darwin
license             BSD

python.versions     27 35 36 37 38

maintainers         {stromnov @stromnov} openmaintainer

description         Python Imaging Library (fork)
long_description    ${description}

homepage            https://github.com/python-imaging/Pillow

checksums           rmd160  22e3635abca20eec5eefb93c9c7a4ed12f658aff \
                    sha256  97f9e7953a77d5a70f49b9a48da7776dc51e9b738151b22dacf101641594a626 \
                    size    39081948

if {${name} ne ${subport}} {
    conflicts           py${python.version}-pil

    if {${python.version} < 36} {
        version             6.2.1
        revision            0
        distname            ${python.rootname}-${version}
        checksums           rmd160  b6a0743f45072e5000f4d985dc1274d32bb7a40b \
                            sha256  bf4e972a88f8841d8fdc6db1a75e0f8d763e66e3754b03006cbc3854d89f1cb1 \
                            size    37673162
    }

    depends_build-append \
                        port:py${python.version}-setuptools
    depends_lib-append  port:py${python.version}-tkinter \
                        port:py${python.version}-olefile \
                        port:zlib \
                        port:jpeg \
                        port:tiff \
                        port:lcms2 \
                        port:webp \
                        port:openjpeg \
                        port:freetype

    patchfiles          patch-setup.py.diff

    post-patch {
        reinplace "s|@prefix@|${prefix}|g" ${worksrcpath}/setup.py
    }

    # When built against a Tk using X11, Pillow will pick up some
    # extra libraries, such libxcb. Tk's quartz variant doesn't depend
    # on these libraries, so we add matching variants here.
    variant x11 conflicts quartz {
    }

    variant quartz conflicts x11 {
        require_active_variants tk quartz x11
    }

    if {![catch {set result [active_variants tk quartz x11]}] && $result} {
        default_variants +quartz
    } else {
        default_variants +x11
    }

    livecheck.type      none
}

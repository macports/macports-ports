distname            Pillow-${version}

checksums           rmd160  0472271299a2c212e85a5a2377329820cdab34b0 \
                    sha256  c733088b9a6f856386d3fcff8c54b3c1bc623a69f7481348fe36320513d98076

if {$subport != $name} {
    use_zip             yes

    conflicts       py${python.version}-pil

    depends_build       port:py${python.version}-setuptools
    depends_lib-append  port:py${python.version}-tkinter \
                        port:zlib \
                        port:jpeg \
                        port:tiff \
                        port:lcms \
                        port:webp \
                        port:freetype

    patchfiles          patch-setup.py.diff

    post-patch {
        reinplace "s|@prefix@|${prefix}|g" ${worksrcpath}/setup.py
    }

    livecheck.type      none
} else {
    livecheck.type      regex
    livecheck.url       ${master_sites}
    livecheck.regex     "Pillow-(\\d+(?:\\.\\d+)*)\.\[tz\]"
}

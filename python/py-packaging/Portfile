PortSystem          1.0
PortGroup           python 1.0

name                py-packaging
version             20.4
revision            0
platforms           darwin
supported_archs     noarch
maintainers         nomaintainer
license             {BSD Apache-2}

description         Core utilities for Python packages

long_description    $description

homepage            https://pypi.python.org/pypi/packaging/
master_sites        pypi:p/packaging
distname            ${python.rootname}-${version}

checksums           rmd160  570cb61f1cb0b903dc777f98673c259d8b393130 \
                    sha256  4357f74f47b9c12db93624a82154e9b120fa8293699949152b22065d556079f8 \
                    size    74402

python.versions     27 35 36 37 38 39

if {$subport ne $name} {
    depends_lib-append  port:py${python.version}-attrs \
                        port:py${python.version}-parsing \
                        port:py${python.version}-six
    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} CHANGELOG.rst LICENSE LICENSE.APACHE LICENSE.BSD README.rst \
           ${destroot}${docdir}
    }
}

if {$subport ne $name} {

    depends_build-append port:pkgconfig

    depends_lib-append \
      port:blitz \
      port:cmake \
      path:lib/libavcodec.dylib:ffmpeg \
      port:matio \
      port:jpeg \
      port:netpbm \
      port:libpng \
      port:tiff \

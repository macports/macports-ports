    platform darwin {
        if {${os.major} < 13} {
            depends_build-replace \
                    port:npm10 \
                    port:npm8

            depends_run-replace \
                    path:bin/node:nodejs22 \
                    path:bin/node:nodejs14
        }

        if {${os.major} < 16} {
            depends_build-replace \
                    port:npm10 \
                    port:npm9

            depends_run-replace \
                    path:bin/node:nodejs22 \

    select.group    panel
    select.file     ${filespath}/py${python.version}-panel

    platform darwin {
        if {${os.major} < 13} {
            depends_build-replace \
                    port:npm11 \
                    port:npm8

            depends_run-replace \
                    path:bin/node:nodejs24 \
                    path:bin/node:nodejs14
        }

        if {${os.major} < 16} {
            depends_build-replace \
                    port:npm11 \
                    port:npm9

            depends_run-replace \
                    path:bin/node:nodejs24 \
                    path:bin/node:nodejs18
        }

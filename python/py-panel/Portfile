    python.pep517_backend \
                    hatch

    depends_build-append \
                    port:npm10 \
                    port:py${python.version}-hatch-vcs

    depends_run-append \
                    path:bin/node:nodejs22 \
                    port:panel_select \
                    port:py${python.version}-bleach \
                    port:py${python.version}-bokeh \
                    port:py${python.version}-linkify-it-py \

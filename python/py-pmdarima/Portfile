if {${name} ne ${subport}} {
    depends_build-append \
                    path:bin/cython-${python.branch}:py${python.version}-cython

    depends_run-append \
                    port:py${python.version}-packaging \
                    port:py${python.version}-cython \
                    port:py${python.version}-statsmodels \

if {${name} ne ${subport}} {
    depends_lib-append	port:py${python.version}-mx

    post-destroot	{
        xinstall -m 644 -W ${worksrcpath} INSTALL NEWS README \
            ${destroot}${prefix}/share/doc/${subport}
    }

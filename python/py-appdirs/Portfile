if {$subport ne $name} {
    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 644 -W ${worksrcpath} CHANGES.rst LICENSE.txt README.rst \
           ${destroot}${docdir}
    }
}

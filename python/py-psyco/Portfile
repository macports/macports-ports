extract.post_args       "| tar -xf - --exclude '.cvsignore'"

post-destroot {
        xinstall -m 644 -W ${worksrcpath} README.txt \
                 ${destroot}${prefix}/share/doc/${name}
        file copy ${worksrcpath}/doc ${destroot}${prefix}/share/doc/${name}/
}

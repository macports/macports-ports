if {${subport} ne ${name}} {
    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 644 -W ${worksrcpath} LICENSE README ${destroot}${docdir}
    }
    livecheck.type      none
} else {
    livecheck.type      regex
    livecheck.url       ${homepage}
    livecheck.regex     {PyRSS2Gen-(\d+(?:\.\d+)*)}
}

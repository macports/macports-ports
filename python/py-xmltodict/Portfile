if {${name} ne ${subport}} {
    depends_build-append \
                    port:py${python.version}-wheel
    test.run        yes

    post-destroot {
        set dest_doc ${destroot}${prefix}/share/doc/${subport}
        xinstall -d ${dest_doc}
        xinstall -m 0644 -W ${worksrcpath} \
            README.md LICENSE ${dest_doc}
    }

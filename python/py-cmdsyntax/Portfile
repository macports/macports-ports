	xinstall -m 644 -W ${worksrcpath} LICENSE.txt README.txt \
		${destroot}${prefix}/share/doc/${name}
	xinstall -m 644 -W ${worksrcpath}/examples ripoff_cmd.py test.py \
		verboseform.py ${destroot}${prefix}/share/doc/${name}/examples
}

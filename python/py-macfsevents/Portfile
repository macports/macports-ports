    depends_build-append \
                        port:py${python.version}-setuptools

    post-destroot {
        xinstall -d ${destroot}${python.prefix}/share/doc/${name}
        xinstall -m 644 -W ${worksrcpath} README.rst CHANGES.rst \
                    ${destroot}${python.prefix}/share/doc/${name}
    }

    livecheck.type      none

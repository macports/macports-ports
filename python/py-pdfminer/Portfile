if {${name} ne ${subport}} {
    depends_build-append    port:py${python.version}-setuptools
    livecheck.type          none

    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} \
            LICENSE \
            cmaprsrc/README.txt \
            README.md \
            ${destroot}${docdir}
    }

    depends_build-append    port:py${python.version}-setuptools

    test.run            yes
    test.cmd            ${python.bin} queuelib/tests/test_queue.py \
                                      queuelib/tests/test_pqueue.py
    test.env            PYTHONPATH=${worksrcpath}/build/lib
    test.target
}


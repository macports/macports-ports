if {${name} ne ${subport}} {
    test.run        yes

    post-destroot {
        set dest_doc ${destroot}${prefix}/share/doc/${subport}
        xinstall -d ${dest_doc}
        xinstall -m 0644 -W ${worksrcpath} CHANGELOG.rst \
            LICENSE.rst README.rst ${dest_doc}
    }
}

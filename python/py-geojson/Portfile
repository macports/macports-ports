PortSystem          1.0
PortGroup           python 1.0

name                py-geojson
version             3.0.1
revision            0

categories-append   gis
supported_archs     noarch
platforms           {darwin any}
license             BSD
maintainers         {petr @petrrr} openmaintainer

description         Python bindings and utilities for GeoJSON
long_description    \
    This library implements all the GeoJSON objects described in The GeoJSON \
    Format Specification. It provides functions encoding and decoding GeoJSON \
    formatted data and is an implementation of the Python __geo_interface__ \
    Specification.

homepage            https://github.com/frewsxcv/python-geojson

checksums           rmd160  b3fb2b2931e77a294bb6792a9b99739bf03a3196 \
                    sha256  ff3d75acab60b1e66504a11f7ea12c104bad32ff3c410a807788663b966dee4a \
                    size    24258

python.versions     37 38 39 310 311

if {${name} ne ${subport}} {
    depends_build-append \
                    port:py${python.version}-setuptools

    test.run        yes

    post-destroot {
        set dest_doc ${destroot}${prefix}/share/doc/${subport}
        xinstall -d ${dest_doc}
        xinstall -m 0644 -W ${worksrcpath} CHANGELOG.rst \
            LICENSE.rst README.rst ${dest_doc}
    }
}

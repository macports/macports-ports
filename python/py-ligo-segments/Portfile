patch {
    # FIXME: the upstream tarball has the wrong permissions.
    # See https://git.ligo.org/lscsoft/ligo-segments/-/issues/11
    system "find '${worksrcpath}' -type d -exec chmod go+rx {} \\;"
    system "find '${worksrcpath}' -type f -exec chmod go+r {} \\;"
}


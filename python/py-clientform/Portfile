test.target         test.py

post-destroot {
    foreach f [glob -directory ${worksrcpath}/ *.txt *.html] {
        copy $f ${destroot}${prefix}/share/doc/${name}/[file tail $f]
    }
    foreach f [glob -directory ${worksrcpath}/examples *] {
        copy $f ${destroot}${prefix}/share/doc/${name}/examples/[file tail $f]
    }
}

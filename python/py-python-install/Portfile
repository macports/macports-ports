python.versions     36 37 38 39

if {$subport ne $name} {
    depends_build-append \
                    port:py${python.version}-setuptools
    if {${python.version} <= 37} {
        depends_lib-append \
                    port:py${python.version}-importlib-metadata
    }
    livecheck.type  none
}

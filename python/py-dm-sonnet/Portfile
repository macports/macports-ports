if {${name} ne ${subport}} {
    depends_lib-append \
                    path:${python.pkgd}/tensorflow:py${python.version}-tensorflow

    test.run        yes

    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} LICENSE README.md \
            ${destroot}${docdir}
    }
}

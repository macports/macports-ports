checksums           rmd160  58e7823f4ab471d66b8038d4fb12813f27be4851 \
                    sha256  a33dc51faea11b33c59383e5684f094a0b45e63b6d4fe92748dcfa59918742c9 \
                    size    58642

python.versions     311
python.pep517       yes
python.pep517_backend   poetry

if {${name} ne ${subport}} {
    depends_lib-append \
                    port:py${python.version}-mypy \
                    port:py${python.version}-tomli

    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} README.md \
            LICENSE ${destroot}${docdir}
    }

}

    } else {
        python.pep517_backend   poetry
    }

    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} CHANGELOG.md LICENSE.txt \
            README.rst ${destroot}${docdir}
    }

    livecheck.type  none

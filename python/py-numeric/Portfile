# $Id: Portfile,v 1.4 2003/10/17 15:22:18 mww Exp $

PortSystem 1.0

name		py-numeric
version		23.1
categories	python devel
maintainers	mww@opendarwin.org
description	fast numerical array language for python
long_description	Numerical Python adds a fast, compact, \
			multidimensional array language facility to Python.

homepage	http://www.pfdubois.com/numpy/
master_sites	sourceforge:numpy
distname	Numeric-${version}
checksums	md5 5cd24ed20627f5cbc822a2bed8ff27e9

depends_lib	bin:python:python

use_configure	no

build.env	LDFLAGS="-framework vecLib"
build.cmd	python setup.py
build.target	build

destroot.cmd	python setup.py
destroot.destdir	--prefix=${destroot}${prefix}

set doc		${destroot}${prefix}/share/doc/${name}
post-destroot	{ system "cd ${worksrcpath} \
		&& install -m 755 -d ${doc} \
		&& cp -r Demo README PKG-INFO changes.txt ${doc} \
		&& install -m 755 -d ${doc}/dotblas/ \
		&& cp Packages/dotblas/doc/README.html ${doc}/dotblas/ \
		&& install -m 755 -d ${doc}/MA/ \
		&& cp -r Packages/MA/Legal.htm Packages/MA/Demo \
			Packages/MA/Legal.htm Packages/MA/changes.txt \
			${doc}/MA/ \
		&& install -m 755 -d ${doc}/RNG/ \
		&& cp -r Packages/RNG/Legal.htm ${doc}/RNG/" }


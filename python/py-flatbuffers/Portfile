PortSystem          1.0
PortGroup           python 1.0

name                py-flatbuffers
version             23.3.3
revision            0
license             Apache-2
platforms           darwin linux
maintainers         {gmail.com:herby.gillot @herbygillot} {judaew @judaew} \
                    openmaintainer

description         Python runtime library for use with the Flatbuffers \
                    serialization format.
long_description    {*}${description}

homepage            https://google.github.io/flatbuffers/

python.versions     37 38 39 310 311

checksums           rmd160  ae7aabbd62a3deac36cded6580888968c3c84b41 \
                    sha256  cabd87c4882f37840f6081f094b2c5bc28cefc2a6357732746936d055ab45c3d \
                    size    22111

if {${name} ne ${subport}} {
    depends_build-append \
                    port:py${python.version}-setuptools

    post-destroot {
        # Fix read permissions on egg-info files
        foreach d [ exec find ${destroot}${prefix}/ -type d -and -name "*egg-info" ] {
            foreach f [ glob ${d}/*] {
                system "chmod a+r ${f}"
            }
        }
    }

    python.pep517   no

    depends_build-append \
                    port:py${python.version}-pip \
                    port:py${python.version}-wheel

    build {}

    destroot.cmd    pip-${python.branch}
    destroot.args   --ignore-installed \
                    --no-cache-dir \
                    --no-dependencies \
                    --root ${destroot} \
                    ${distpath}/${distfiles}
    destroot.post_args

    livecheck.type  none
}

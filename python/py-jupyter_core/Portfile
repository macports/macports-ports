PortSystem          1.0
PortGroup           python 1.0
PortGroup           select 1.0

name                py-jupyter_core
version             4.3.0
revision            2
platforms           darwin
license             BSD
supported_archs     noarch

python.versions     27 34 35 36

maintainers         stromnov openmaintainer

description         Jupyter core package.
long_description    ${description}

homepage            http://jupyter.org
master_sites        pypi:[string index ${python.rootname} 0]/${python.rootname}

distname            ${python.rootname}-${version}

checksums           rmd160  bbecbc5f5cde82a084aa4b523212f3dc8777e956 \
                    sha256  a96b129e1641425bf057c3d46f4f44adce747a7d60107e8ad771045c36514d40

if {${name} ne ${subport}} {
    depends_lib-append  port:jupyter_core_select \
                        port:py${python.version}-setuptools \
                        port:py${python.version}-traitlets

    select.entries      [list jupyter_core py${python.version}-jupyter_core py${python.version}-jupyter_core]

    notes-append "
To make this the default Jupyter (i.e., the version run by the 'jupyter' \
command), run:

    sudo port select --set jupyter_core py${python.version}-jupyter_core
    "

    livecheck.type      none

    patchfiles-append   patch-jupyter_core-paths.py.diff

    post-patch {
        reinplace "s|%PREFIX%|${prefix}|" \
        ${worksrcpath}/jupyter_core/paths.py
    }
}

PortSystem          1.0
PortGroup           stub 1.0
PortGroup           select 1.0

name                oci-cli_select
version             0.0.1
revision            0
categories          python
supported_archs     noarch
platforms           any

description         Common files for selecting default oci CLI version
long_description    This port installs files that allow 'port select' \
                    to be used to create links to the preferred default \
                    version of 'oci' CLI.

post-destroot {
    select::install oci-cli ${filespath}/base
    select::install oci-cli ${filespath}/none
}

livecheck.type      none

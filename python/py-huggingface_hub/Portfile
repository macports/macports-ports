                    size    1482214

python.versions     38 39 310 311

if {${name} ne ${subport}} {
    depends_lib-append \
                    port:py${python.version}-setuptools

    depends_run-append \
                    port:py${python.version}-filelock \
                    port:py${python.version}-requests \
                    port:py${python.version}-tqdm

    depends_test-append \

if {${name} ne ${subport}} {
    depends_build-append \
                    port:py${python.version}-setuptools_scm

    test.run        yes

    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} README.rst CHANGELOG.rst \
            LICENSE.txt ${destroot}${docdir}
    }
}

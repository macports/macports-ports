PortSystem          1.0
PortGroup           python 1.0

name                py-awscli
version             1.15.16
platforms           darwin
supported_archs     noarch
license             Apache-2
maintainers         {pixilla @pixilla} openmaintainer

description         Universal Command Line Environment for AWS.
long_description    ${description}

homepage            https://aws.amazon.com/cli/
master_sites        pypi:a/awscli
distname            awscli-${version}

checksums           rmd160 41a691db4389b5fadfea6a6dfe53b19217934dc1 \
                    sha256 0c471b208505ac0dbc967ba2e485fe278ca376005aa8d92909ef8f160731f4e8 \
                    size   593977

python.versions     27 35 36

if {${name} ne ${subport}} {

    PortGroup           select 1.0

    depends_build-append \
                        port:py${python.version}-setuptools
    depends_lib-append \
                        port:py${python.version}-botocore \
                        port:py${python.version}-colorama \
                        port:py${python.version}-docutils \
                        port:py${python.version}-rsa \
                        port:py${python.version}-s3transfer \
                        port:py${python.version}-yaml

    depends_run-append  port:awscli_select

    select.group        awscli
    select.file         ${worksrcpath}/${subport}

    post-extract {
        copy -force ${filespath}/awscli ${worksrcpath}/${subport}
    }

    post-patch {
        reinplace \
            "s,@PYTHON_BRANCH@,${python.branch},g" \
             ${worksrcpath}/${subport}
    }

    livecheck.type      none
}

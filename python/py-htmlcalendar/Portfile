if {${name} ne ${subport}} {
    depends_lib-append	port:py${python.version}-htmltemplate

    post-destroot	{
        xinstall -m 644 -W ${worksrcpath} License.txt Manual.txt README.txt \
            ${destroot}${prefix}/share/doc/${subport}

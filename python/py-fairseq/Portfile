                    port:py${python.version}-tqdm

    depends_test-append \
                    port:py${python.version}-pytest

    # https://github.com/pytorch/fairseq#requirements-and-installation
    configure.cxx_stdlib \
                    libc++

    use_parallel_build \
                    no

    test.run        yes
    test.cmd        py.test-${python.branch}
    test.target     tests

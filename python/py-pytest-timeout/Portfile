if {${name} ne ${subport}} {

    if {${python.version} eq 27} {
        github.setup \
                    pytest-dev pytest-timeout 1.4.2
        revision    0

        checksums   rmd160  014e79115a4ff422b1bcfa46f4251c9cd23be8ae \
                    sha256  9a7c7f476c28fb29c60c6808ddafcf993552c08aedef5a67c01883a5baf95761 \
                    size    13288

    }

    depends_build-append \
                    port:py${python.version}-setuptools

    if {${python.version} ne 27} {
        depends_test-append \
                    port:py${python.version}-ipdb \
                    port:py${python.version}-pexpect \
                    port:py${python.version}-pytest \
                    port:py${python.version}-pytest-cov

        test.run    yes
        test.env    PYTHONPATH=${worksrcpath}/build/lib \
                    PYTEST_PLUGINS=pytest_timeout
        test.cmd    py.test-${python.branch}
        test.target

        pre-test {
            # See https://docs.pytest.org/en/stable/pythonpath.html
            delete ${test.dir}/${test.target}/__init__.py
        }
    }

    livecheck.type  none
}

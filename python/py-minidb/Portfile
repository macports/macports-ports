if {${name} ne ${subport}} {
    depends_test-append \
                    port:py${python.version}-nose

    test.run        yes
    test.cmd        nosetests-${python.branch}
    test.target
    test.env        PYTHONPATH=${worksrcpath}/build/lib

    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} README \
            ${destroot}${docdir}
    }

    livecheck.type  none

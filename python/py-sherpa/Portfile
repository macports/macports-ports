PortSystem          1.0
PortGroup           python 1.0
PortGroup           github 1.0
PortGroup           compilers 1.0
name                py-sherpa
version             1.2
maintainers         gmail.com:Deil.Christoph openmaintainer

dist_subdir         ${name}/${version}

categories-append   science
description         Sherpa is a modeling and fitting application for Python
long_description    Sherpa is a modeling and fitting application for Python. \
                    It enables the user to construct complex models from \
                    simple definitions and fit those models to data, using a \
                    variety of statistics and optimization methods.

platforms           darwin
license             GPL3+

homepage            https://github.com/sherpa/sherpa
github.setup        sherpa sherpa 4.9.0
checksums           md5     8e8933274cbad54cc7bb0ddb1fb6d752 \
                    rmd160  fee9ab273789526d7d87070543a4916597ef9cf6 \
                    sha256  10af3a222c5a4ddc575336c6d002d3ef8acbf85afe426d9720bc41f48521f682

python.versions     27 35 36

if {${name} ne ${subport}} {
    depends_lib-append         port:py${python.version}-numpy
    compilers.enforce_fortran  port:py${python.version}-numpy
    compilers.choose           f90

    depends_build-append  port:py${python.version}-setuptools \
                          port:py${python.version}-numpy

    depends_run-append    port:py${python.version}-numpy \
                          port:py${python.version}-six \
                          port:py${python.version}-pytest

    configure.env-append  F90=${prefix}/bin/gfortran-mp-5
    build.env-append      F90=${prefix}/bin/gfortran-mp-5

    livecheck.type  none
}

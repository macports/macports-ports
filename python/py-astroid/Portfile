                    sha256  1241ef961448c57b4616beb8dcc959724641dca1e22914663f79d67fec26f854

if {${name} ne ${subport}} {
    depends_build-append \
                        port:py${python.version}-setuptools

    depends_lib-append  port:py${python.version}-logilab-common

    post-destroot {
        xinstall -m 755 -d ${destroot}${prefix}/share/doc/${subport}
        xinstall -m 644 -W ${worksrcpath} ChangeLog README \
            ${destroot}${prefix}/share/doc/${subport}
    }

    livecheck.type      none
} else {
    livecheck.type      regex
    livecheck.url       https://pypi.python.org/pypi/astroid/json
    livecheck.regex     {astroid-(\d+(?:\.\d+)*)\.[tz]}
}

if {${name} ne ${subport}} {
    depends_build-append port:py${python.version}-pbr

    post-destroot {
        set dest_doc ${destroot}${prefix}/share/doc/${subport}
        xinstall -d ${dest_doc}
        xinstall -m 0644 -W ${worksrcpath} \
            README.rst AUTHORS LICENSE ChangeLog CONTRIBUTING.rst ${dest_doc}
    }
}

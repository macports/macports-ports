                    size    20205

python.versions     311

if {${name} ne ${subport}} {
    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} README.rst LICENSE.txt \
           COPYRIGHT.txt ${destroot}${docdir}
    }
}

PortSystem          1.0
PortGroup           python 1.0

name                py-xxhash
version             3.4.1
categories-append   devel
platforms           darwin
license             BSD
maintainers         nomaintainer

description         Python binding for xxHash
long_description    {*}${description}

homepage            https://github.com/ifduyue/python-xxhash

checksums           rmd160  96dcf51c9bf1e0fa7bf2df170d9831469948af07 \
                    sha256  0379d6cf1ff987cd421609a264ce025e74f346e3e145dd106c0cc2e3ec3f99a9 \
                    size    84220

python.versions     37 38 39 310 311

if {${name} ne ${subport}} {
    depends_build-append \
                    port:py${python.version}-setuptools_scm

    depends_lib-append \
                    port:xxhashlib

    depends_test-append \
                    port:py${python.version}-pytest

    build.env-append \
                    XXHASH_LINK_SO=1

    pre-test {
        test.env-append \
                    PYTHONPATH=[glob -nocomplain ${worksrcpath}/build/lib*]
        # See https://docs.pytest.org/en/stable/pythonpath.html
        delete ${test.dir}/${test.target}/__init__.py
    }

    test.run        yes
    test.cmd        py.test-${python.branch}
    test.target     tests
}

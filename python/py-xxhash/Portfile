PortSystem          1.0
PortGroup           python 1.0

name                py-xxhash
version             3.3.0
categories-append   devel
platforms           darwin
license             BSD
maintainers         nomaintainer

description         Python binding for xxHash
long_description    {*}${description}

homepage            https://github.com/ifduyue/python-xxhash

checksums           rmd160  d1e106179b93ccd5c3adf932fde9f7b537548bc1 \
                    sha256  c3f9e322b1ebeebd44e3d9d2d9b124e0c550c1ef41bd552afdcdd719516ee41a \
                    size    84262

python.versions     37 38 39 310 311

if {${name} ne ${subport}} {
    depends_build-append \
                    port:py${python.version}-setuptools

    depends_lib-append \
                    port:xxhashlib

    depends_test-append \
                    port:py${python.version}-pytest

    build.env-append \
                    XXHASH_LINK_SO=1

    pre-test {
        test.env-append \
                    PYTHONPATH=[glob -nocomplain ${worksrcpath}/build/lib*]
        # See https://docs.pytest.org/en/stable/pythonpath.html
        delete ${test.dir}/${test.target}/__init__.py
    }

    test.run        yes
    test.cmd        py.test-${python.branch}
    test.target     tests

    livecheck.type  none
}

if {${name} ne ${subport}} {
    depends_build-append \
                    port:py${python.version}-setuptools

    depends_test-append \
                    port:py${python.version}-coverage \
                    port:py${python.version}-invoke \
                    port:py${python.version}-path \
                    port:py${python.version}-pylint \
                    port:py${python.version}-pytest \

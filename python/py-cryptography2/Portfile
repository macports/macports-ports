PortSystem          1.0
PortGroup           python 1.0

name                py-cryptography2
version             2.9.2
revision            1
categories-append   devel
platforms           darwin
license             BSD

maintainers         {stromnov @stromnov} openmaintainer

description         Legacy support of Python cryptography.

long_description    {*}${description} See \
                    https://github.com/pyca/cryptography/blob/main/CHANGELOG.rst

homepage            https://github.com/pyca/cryptography

checksums           rmd160  61fb86fd231710d5875428a3a1cefcd5c1d0c99e \
                    sha256  a0c30272fb4ddda5f5ffc1089d7405b7a71b0b0f51993cb4e5dbb4590b2fc229 \
                    size    517571

python.versions     27 36 37 38 39

platform macosx {
    if {${os.major} < 11} {
        # https://trac.macports.org/ticket/54519
        # https://trac.macports.org/ticket/54753
        # https://trac.macports.org/ticket/55079
        patchfiles-append   patch-src__cffi_src_build_openssl.py.diff
    }
}

if {${name} ne ${subport}} {
    python.rootname cryptography

    conflicts       py${python.version}-${python.rootname}

    depends_build-append \
                    port:py${python.version}-setuptools

    depends_lib-append \
                    path:lib/libssl.dylib:openssl \
                    port:py${python.version}-asn1crypto \
                    port:py${python.version}-cffi \
                    port:py${python.version}-six

    if {${python.version} eq 27} {
        depends_lib-append \
                    port:py${python.version}-enum34 \
                    port:py${python.version}-ipaddress
    }

    livecheck.type  none

    notes           "This is a legacy version of ${python.rootname} that\
                    contains CVE CVE-2020-36242. Please install port\
                    py${python.version}-${python.rootname} for an up-to-date version."
    }
}

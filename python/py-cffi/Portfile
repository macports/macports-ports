if {$subport != $name} {
    depends_build       port:py${python.version}-setuptools
    depends_lib-append  port:libffi

    depends_run-append  port:py${python.version}-pycparser

    livecheck.type      none
} else {
    livecheck.type      regex
    livecheck.url       ${master_sites}

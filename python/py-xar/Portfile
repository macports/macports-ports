master_sites		googlecode:xar
distname		pyxar-${version}
checksums		md5 fec45900eada611df5091930598c69f4

python.versions	27

if {${name} ne ${subport}} {
	depends_lib	port:xar \
			port:py${python.version}-pyrex
}

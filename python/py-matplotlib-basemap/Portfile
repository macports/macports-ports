PortSystem        1.0
PortGroup         python24 1.0

name              py-matplotlib-basemap
version           0.9.6
categories        python graphics math
platforms         darwin
maintainers       ram openmaintainer

description       matplotlib toolkit for plotting data on map projections
long_description  Matplotlib basemap is a matplotlib toolkit python library \
                  for plotting data on map projections

homepage          http://matplotlib.sourceforge.net
master_sites      sourceforge:matplotlib
distfiles         basemap-${version}.tar.gz \
                  basemap-data-hires-${version}.tar.gz

checksums         basemap-${version}.tar.gz sha1 5f46906c1c53c3d597b83c275f2de8d6740663d6 \
                  basemap-data-hires-${version}.tar.gz sha1 3bec483cfd8e9bb8c1fd6ee1f0f950a2ae5ff766

depends_lib-append  port:py-matplotlib

worksrcdir        basemap-${version}

post-destroot {
  set data_dir ${destroot}/${python.pkgd}/matplotlib/toolkits/basemap/data
  eval xinstall -m 0644 [glob ${workpath}/*_h.txt] ${data_dir}
}

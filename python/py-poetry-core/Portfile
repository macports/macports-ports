python.pep517       yes
# Bootstraps itself, no backend dependencies needed
python.pep517_backend

if {${name} ne ${subport}} {
    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -m 0644 -W ${worksrcpath} README.md LICENSE \

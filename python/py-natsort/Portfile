    depends_lib-append \
                    port:py${python.version}-setuptools

    depends_run-append \
                    port:py${python.version}-pyicu

    if {${python.version} == 27} {
        version     6.2.1
        revision    0
        distname    ${python.rootname}-${version}
        checksums   rmd160  79f2de364df9c25343a213dab0ee5eb681b35b51 \

                    sha1 b944e08d27258e360890ab475d0063d6db960dbd \
                    rmd160 ba90e20673db05d32850afb67b6aa12292039a54

python.versions     27

if {${name} ne ${subport}} {
    depends_lib-append  port:py${python.version}-numpy
    build.env           CCFLAGS="-I${prefix}/include -L${prefix}/lib"

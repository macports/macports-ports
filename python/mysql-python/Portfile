# $Id: Portfile,v 1.2 2004/01/08 11:57:13 pguyot Exp $

PortSystem 1.0

name				mysql-python
version				0.9.2
categories			python devel database
maintainers			ryanwilcox@mac.com
description			Python interface to mysql
long_description 	A package containing a Python module that allows you to \
					connect to MySQL databases
platforms			darwin
homepage 			http://sourceforge.net/projects/mysql-python
master_sites		sourceforge
distname			MySQL-python-${version}
checksums			md5 afef758f56289f98408dd9f379d8fc8d

depends_lib			bin:python:python lib:libmysqlclient.10:mysql 

patchfiles			patch-setup.py
use_configure		no

build.cmd			python setup.py
build.target		build

destroot.destdir	--prefix=${destroot}${prefix}
destroot.cmd		python setup.py

post-patch {
	reinplace "s|__PREFIX|${prefix}|g" "${worksrcpath}/setup.py"
}

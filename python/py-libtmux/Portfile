PortSystem          1.0
PortGroup           python 1.0

name                py-libtmux
version             0.15.8
revision            0

categories-append   devel
supported_archs     noarch
license             MIT
maintainers         {@egorenar posteo.net:egorenar-dev} \
                    {@judaew judaew} openmaintainer

description         Python binding for tmux
long_description    ${description}

homepage            https://github.com/tmux-python/libtmux
master_sites        pypi:l/${python.rootname}/
distname            ${python.rootname}-${version}

checksums           rmd160  05e2b77d688bd99b601339f325b814af556e1b31 \
                    sha256  cf352a645ebeaa5046ad0593cc01d691d77f8b3af1660327a6433cc6276ab796 \
                    size    213026

python.versions     37 38 39 310

if {${name} ne ${subport}} {
    depends_build-append \
                    port:py${python.version}-setuptools

    depends_run-append \
                    port:tmux

    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} README.md LICENSE \
           CHANGES ${destroot}${docdir}
    }

    livecheck.type  none
} else {
    livecheck.type  pypi
}

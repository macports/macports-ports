if {${name} ne ${subport}} {
    depends_lib-append \
                    port:py${python.version}-h5netcdf \
                    port:py${python.version}-matplotlib \
                    port:py${python.version}-numpy \
                    port:py${python.version}-packaging \
                    port:py${python.version}-pandas \

    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} CHANGELOG.md CODE_OF_CONDUCT.md \
            CONTRIBUTING.md LICENSE README.md ${destroot}${docdir}
    }

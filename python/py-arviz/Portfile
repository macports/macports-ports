checksums           rmd160  14fb7a1f9a63f5077f31a3f7a54a2dcce3f05503 \
                    sha256  a5d4ddcd93f7120ae95de220431aa9ac995a27494a61fec308c060d05cd371f7 \
                    size    1416848

python.versions     35 36 37 38

if {${name} ne ${subport}} {
    depends_build-append \
                    port:py${python.version}-setuptools

    depends_lib-append \
                    port:py${python.version}-matplotlib \
                    port:py${python.version}-netcdf4 \
                    port:py${python.version}-numpy \
                    port:py${python.version}-packaging \
                    port:py${python.version}-pandas \
                    port:py${python.version}-scipy \
                    port:py${python.version}-xarray

    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} CHANGELOG.md CODE_OF_CONDUCT.md \
            CONTRIBUTING.md LICENSE README.md ${destroot}${docdir}
    }

    livecheck.type  none
}

    depends_build-append \
                    port:pkgconfig \
                    port:py${python.version}-setuptools

    depends_lib-append \
                    port:sentencepiece

    worksrcdir      ${distname}/python

    compiler.cxx_standard 2017

    test.run        yes

    livecheck.type  none
}

if {${name} ne ${subport}} {
    depends_build-append \
                        port:py${python.version}-setuptools
    depends_lib-append  port:file

    patchfiles          patch-prefix-lib.diff

    post-patch {
        reinplace -E "s:__PREFIX__:${prefix}:g" ${worksrcpath}/magic.py
    }

    livecheck.type      none

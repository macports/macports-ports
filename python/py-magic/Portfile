                    sha256  903d3d3c676e2b1244892954e2bbbe27871a633385a9bfe81f1a81a7032df2fe

if {$subport != $name} {
    depends_build   port:py${python.version}-setuptools
    depends_lib-append  \
                    port:file

    livecheck.type      none
} else {
    livecheck.type      regex
    livecheck.url       ${master_sites}
    livecheck.regex     {python-magic-(\d+(?:\.\d+)*)\.[tz]}

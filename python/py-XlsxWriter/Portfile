if {${name} ne ${subport}} {
    depends_build-append    port:py${python.version}-setuptools

    post-destroot {
        set DOCDIR ${destroot}${prefix}/share/doc/${subport}
        xinstall -d ${DOCDIR}
        file copy ${worksrcpath}/LICENSE.txt ${DOCDIR}
    }

    livecheck.type  none
}

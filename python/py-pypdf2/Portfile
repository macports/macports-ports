if {${name} ne ${subport}} {
    post-destroot {
        xinstall -d -m 755 ${destroot}${prefix}/share/doc/${subport}
        xinstall -m 644 -W ${worksrcpath} CHANGELOG LICENSE README.md \
            ${destroot}${prefix}/share/doc/${subport}
    }
    livecheck.type      none
} else {
    livecheck.type      regex

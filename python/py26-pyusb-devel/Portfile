worksrcdir          trunk

depends_lib-append  port:libusb

post-destroot {
   xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}
   xinstall -m 644 -W ${worksrcpath}/docs tutorial.txt \
      ${destroot}${prefix}/share/doc/${name}
}


    test.run            yes
    depends_test-append \
        port:py${python.version}-pytest \
        port:octave-signal
    # from Makefile
    test.cmd            py.test-[join [split ${python.version} {}] {.}]
    test.target
    test.env            PYTHONPATH=${worksrcpath}/build/lib
}


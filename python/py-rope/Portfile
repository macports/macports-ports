    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} CONTRIBUTORS.md COPYING \
            README.rst CHANGELOG.md ${destroot}${docdir}
    }

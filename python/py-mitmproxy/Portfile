                            port:py${python.version}-parver

    post-patch {
        # Remove all upper bounds - potential breakings are detected by test
        reinplace "s/, *<\[0-9=.\]*//" ${worksrcpath}/setup.py
    }

    test.run yes
    test.cmd py.test-${python.branch}

    livecheck.type  none
} else {
    livecheck.type  pypi

        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} AUTHORS.txt LICENSE.txt CHANGELOG.md README.md \
            ${destroot}${docdir}
    }

    livecheck.type  none

PortSystem          1.0
PortGroup           python 1.0
PortGroup           github 1.0

github.setup        rocky python-filecache 1.0.0 release-
revision            0
name                py-pyficache

platforms           darwin
supported_archs     noarch
license             GPL-3+
maintainers         nomaintainer

description         A Python module to read and cache lines and file \
                    info of a Python program
long_description    The pyficache module allows one to get any line \
                    from any file, caching lines of the file on first \
                    access to the file. Although the file may be any \
                    file, the common use is when the file is a Python \
                    script since parsing of the file is done to figure \
                    out where the statement boundaries are.

checksums           rmd160  b1f950c3ee5a043ed26795f331fb10f7a2455eaa \
                    sha256  8db3241a6648fd3ac478daa19786d722e8f6eaa3f5158af28c3ff86cfef34b1e \
                    size    43907

python.versions     27 35 36 37 38

if {${subport} ne ${name}} {
    depends_build-append \
                    port:py${python.version}-setuptools

    depends_lib-append \
                    port:py${python.version}-coverage \
                    port:py${python.version}-pygments

    depends_lib-append \
                    port:py${python.version}-nose

    test.run        yes
    test.env        PYTHONPATH=${worksrcpath}/build/lib

    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 0644 -W ${worksrcpath} COPYING ChangeLog \
           NEWS README.rst ${destroot}${docdir}
    }

    livecheck.type  none
}

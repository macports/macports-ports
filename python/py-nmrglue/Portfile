if {${name} ne ${subport}} {
    depends_lib-append  port:py${python.version}-scipy \
                        port:py${python.version}-numpy

    depends_test-append  \
                    port:py${python.version}-nose
    test.run        yes
    test.cmd        nosetests-${python.branch}

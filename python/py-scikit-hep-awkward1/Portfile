if {${name} ne ${subport}} {
    
    post-fetch {
        system -W ${worksrcpath} "git submodule update --init --recursive"
    }

    python.pep517       no

    compiler.cxx_standard 2011

    depends_build-append \
        path:bin/cmake:cmake \
        port:py${python.version}-setuptools

    depends_lib-append \
        port:py${python.version}-numpy \

if {${name} ne ${subport}} {

    # default
    depends_lib-append      port:py${python.version}-requests

    # Adding documentation
    post-destroot {
        set dest_doc ${destroot}${prefix}/share/doc/${subport}
        xinstall -d  ${dest_doc}
        xinstall -m 755 -W ${worksrcpath} \
            README.rst \
            COPYING \
            COPYING.LESSER \
                ${dest_doc}
    }

    livecheck.type  none
}

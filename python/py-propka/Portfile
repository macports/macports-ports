python.versions         38 39 310 311 312

if {${name} ne ${subport}} {
    depends_lib-append  port:py${python.version}-numpy \
                        port:py${python.version}-pytest \
                        port:py${python.version}-setuptools

    depends_run-append  port:propka3_select

    test.run        yes
    test.cmd        ${python.bin} -m pytest tests

    select.group        propka
    select.file         ${filespath}/${subport}

    notes "
To make the Python ${python.branch} version of propka the one that is run when\
you execute the commands without a version suffix, e.g. 'propka', run:

 port select --set ${select.group} [file tail ${select.file}]
"
}


python.versions     36

if {${name} ne ${subport}} {
    depends_build-append    port:py${python.version}-setuptools

    # For unknown reasons, tests pass if run directly from the terminal while
    # fail if run from `port test`
    test.run                no
    test.cmd                ${python.bin}
    test.target             -m unittest test

    livecheck.type  none
} else {
    livecheck.type  pypi
}

if {${name} ne ${subport}} {
    depends_test-append \
                    port:py${python.version}-mock \
                    port:py${python.version}-yaml

    test.run        yes

    post-destroot {
        set dest_doc ${destroot}${prefix}/share/doc/${subport}
        xinstall -d ${dest_doc}

        xinstall -m 0644 -W ${worksrcpath} LICENSE \
            README.rst ${dest_doc}
    }

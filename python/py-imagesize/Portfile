if {$subport ne $name} {
    depends_build    port:py${python.version}-setuptools
    post-destroot {
        xinstall -m 755 -d ${destroot}${prefix}/share/doc/${subport}
        xinstall -m 644 -W ${worksrcpath} README.rst \
           ${destroot}${prefix}/share/doc/${subport}
    }

if {$subport ne $name} {
    depends_build-append    port:py${python.version}-setuptools
    depends_lib-append \
        port:py${python.version}-repoze.who \
        port:py${python.version}-webob \
        port:py${python.version}-zopeinterface
    livecheck.type          none

    post-patch {
            reinplace "s|@PREFIX@|${prefix}|g" ${worksrcpath}/shapely/geos.py
            reinplace s|\\\"cython\\\"|"${python.prefix}/bin/cython"| ${worksrcpath}/setup.py
    }

    livecheck.type      none

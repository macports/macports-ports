                    -DQSCINTILLA_INCLUDE_DIR=${prefix}/libexec/qt5/include \
                    -DQSCINTILLA_LIBRARY=${prefix}/libexec/qt5/lib/libqscintilla2_qt5.dylib \
                    -DQT_LRELEASE_EXECUTABLE=${prefix}/libexec/qt5/bin/lrelease \

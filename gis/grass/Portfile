post-patch {
    reinplace "s|@@APPLICATIONS_DIR@@|${applications_dir}|" ${worksrcpath}/configure
    # http://trac.osgeo.org/grass/ticket/2169
    reinplace "s|CC=gcc|CC=${configure.cc}|" ${worksrcpath}/gem/Makefile
}


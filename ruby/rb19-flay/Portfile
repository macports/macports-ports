                    sha1    9a41bdccdc36aa2026c24b4a6e390cd00e0369e0 \
                    rmd160  4d46387745cbfb4cdd87617ecca2167787537cba

depends_run         port:rb19-parser \
                    port:rb19-sexp_processor \
                    port:rb19-hoe 

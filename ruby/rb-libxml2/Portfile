configure.cmd          ${ruby.bin} -rvendor-specific ext/xml/extconf.rb
configure.args-append  --with-zlib-dir=${prefix} \
                       --with-iconv-dir=${prefix} \
                       --with-xml2-include=${prefix}/include/libxml2 \
                       --with-xml2-lib=${prefix}/lib

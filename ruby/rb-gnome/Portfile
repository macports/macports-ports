# $Id: Portfile,v 1.4 2004/04/30 04:02:26 rshaw Exp $
PortSystem 1.0

name			rb-gnome
version			0.8.1
revision		2
categories		ruby gnome
maintainers		darwin@otierney.net
description		Gnome2 libraries for ruby
long_description	Gnome2 libraries for ruby including gtk2, gstreamer, \
			gconf, gnomevfs and more.
homepage		http://ruby-gnome2.sourceforge.jp/
platforms		darwin 
master_sites		sourceforge
master_sites.mirror_subdir	ruby-gnome2
distname		ruby-gnome2-all-${version}
dist_subdir		ruby
checksums		md5 8e5bdd7c7d87040e1473821eb52fdfbc
worksrcdir		ruby-gnome2-all-${version}

set ruby ${prefix}/bin/ruby
depends_lib		lib:libruby.1.8:ruby \
			lib:gnome-session:gnome-session \
			lib:libgtkglext:gtkglext \
			lib:libgtkhtml:libgtkhtml \
			lib:libglib.2:glib2 \
			lib:libpango:pango \
			lib:libgtk.2:gtk2 \
			lib:libgconf-2:gconf \
			lib:libgnomecanvas-2:libgnomecanvas \
			lib:libgnomevfs-2:gnome-vfs \
			lib:libart_lgpl_2:libart_lgpl \
			lib:libglade.2:libglade2

depends_build		path:${ruby}:ruby

patchfiles		patch-rbgconf.h \
				patch-gnomevfs.h \
				patch-extconf.rb

configure.cmd	${ruby} -rvendor-specific extconf.rb
configure.pre_args

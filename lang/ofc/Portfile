post-patch {
    reinplace "s|/usr/local|${prefix}|" ${worksrcpath}/Makefile

    if {${os.platform} eq "darwin" && ${os.major} < 11} {
        reinplace "s|LDFLAGS = -lm|LDFLAGS = -lm -lMacportsLegacySupport|" ${worksrcpath}/Makefile
    }
}

                    -DCMAKE_BUILD_TYPE=Release \
                    -DCMAKE_INCLUDE_PATH=${prefix}/include \
                    -DCMAKE_LIBRARY_PATH=/usr/lib:${prefix}/lib

livecheck.type      regex

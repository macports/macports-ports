PortSystem 1.0

name 		g77
version 	3.1-20020420

description		gnu fortran 77 comiler
categories		lang

maintainers		mike+g77@gene-hacker.net

master_sites		http://west.dl.sourceforge.net/sourceforge/fink/

distname		gcc-3.1-20020420-1151
worksrcdir		gcc3

checksums		md5 62f378e83bc60942cbf664d17994eafe
patchfiles		patch-configure.in

configure.args	--enable-languages=f77 --infodir='${prefix}/share/info'

pre-configure	{system "cd ${workpath} && mkdir darwin"}

configure.dir	${workpath}/darwin
configure.cmd	../gcc3/configure

build.dir		${workpath}/darwin
build.target.all bootstrap-lean

build.target.install install prefix=${prefix}


post-install {	system "cd ${prefix}/bin && /bin/rm -f gcc gccbug cpp gcov powerpc-apple*"
				system "ln -s ${prefix}/lib/gcc-lib/powerpc-apple-darwin6.0/3.1/include/g2c.h ${prefix}/include/g2c.h"
				system "/bin/rm -rf ${prefix}/share/locale ${prefix}/man"
				system "/bin/rm -f ${prefix}/lib/charset.alias"
				system "/bin/rm -f ${prefix}/share/info/gcc* ${prefix}/share/info/cpp*"

}

include contents

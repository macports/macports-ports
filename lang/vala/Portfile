use_xz              yes

checksums           rmd160  cad4608c1502428168053f9a8cfec90a02ba1c85 \
                    sha256  28de33e28da24500cc1675c3a6ced1301c9a6a5e6dd06193569001f9ce9a5c53 \
                    size    3460968


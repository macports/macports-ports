# $Id$

PortSystem              1.0

set new_version         3.4

set llvm_version        2.9
version                 ${llvm_version}
revision                15
epoch                   1
name                    llvm-${llvm_version}
subport                 clang-${llvm_version} {}
categories              lang
platforms               darwin
license                 NCSA

if {${subport} == "clang-${llvm_version}"} {
    replaced_by clang-${new_version}
} else {
    replaced_by llvm-${new_version}
}

PortGroup               obsolete 1.0

                    size    96273336 \
                    ${go_amdbin_dist} \
                    rmd160  e23fdc08d58540e6e00b7e97e57b12d3241406df \
                    sha256  c93b8ced9517d07e1cd4c362c6e2d5242cb139e29b417a328fbf19aded08764c \

		  --docdir=${prefix}/share/doc/bigloo \
		  --lispdir=${prefix}/share/emacs/site-lisp/bigloo \
		  --jvm=yes \
		  --native-default-backend \
		  --finalization=yes \
		  --stack-check=no

build.target

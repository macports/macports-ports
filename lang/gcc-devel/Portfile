                    ftp://gcc.gnu.org/pub/gcc/releases/gcc-${version}/ \
                    gnu:gcc/gcc-${version}
    # snapshots and RC candidates
    master_sites-append \
                    https://mirror.koddos.net/gcc/snapshots/${version}/ \

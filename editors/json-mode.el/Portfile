# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem 1.0
PortGroup           github 1.0

github.setup        joshwnj json-mode 1.8.0 v
name                ${github.project}.el
categories          editors
maintainers         nomaintainer
supported_archs     noarch
license             GPL-3+

description         Major mode for editing JSON files with emacs
long_description    {*}${description}. Extends the builtin js-mode to \
                    add better syntax highlighting for JSON and some \
                    nice editing keybindings.

checksums           rmd160  5a490715cd2979a6e8680f8d22f1e371b247fa5e \
                    sha256  1a277fc07ab26ea4b9d6e01210aa95f5678ec6fe555d2adcca015ab616fc061e \
                    size    3642

depends_lib         port:emacs

depends_run         port:json-reformat.el \
                    port:json-snatcher.el

use_configure       no

build {}

pre-destroot {
    xinstall -d ${destroot}${prefix}/share/emacs/site-lisp \
        ${destroot}${prefix}/share/${name}
}

destroot {
    xinstall -m 0644 ${worksrcpath}/${name} \
        ${destroot}${prefix}/share/emacs/site-lisp
    xinstall -m 0644 ${worksrcpath}/README.md \
        ${destroot}${prefix}/share/${name}
}

notes "
To use this mode, put the following in your ~/.emacs:

(require 'json-mode)

To automatically handle files ending in '.json, add something like:

(add-to-list 'auto-mode-alist '(\"\\\\.json$\" . json-mode))
"

                    port:lua-luafilesystem \
                    port:ncurses

patchfiles          patch-pmfile.diff
post-patch {
    reinplace "s|@@DESTROOT@@|${destroot}|g" ${worksrcpath}/pmfile
    reinplace "s|@@PREFIX@@|${prefix}|g" ${worksrcpath}/pmfile
    }

PortSystem 1.0
PortGroup           github 1.0

github.setup        gongo json-reformat 0.0.6
name                ${github.project}.el
categories          editors
maintainers         nomaintainer
supported_archs     noarch
license             MIT

description         Reformat tool for JSON
long_description    {*}${description}

checksums           rmd160  b7f1da1d00c94dd4cee02fce865449d8ede246e4 \
                    sha256  658f7dc073e9592e401ae89dbe77c91ec52d203c07e264eed5baf6d865f3c7db \
                    size    146829

depends_lib         port:emacs

use_configure       no

build {}

pre-destroot {
    xinstall -d ${destroot}${prefix}/share/emacs/site-lisp \
        ${destroot}${prefix}/share/${name}
}

destroot {
    xinstall -m 0644 ${worksrcpath}/${name} \
        ${destroot}${prefix}/share/emacs/site-lisp
    xinstall -m 0644 ${worksrcpath}/README.md \
        ${destroot}${prefix}/share/${name}
}

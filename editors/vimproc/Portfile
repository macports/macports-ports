# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4

PortSystem 1.0

name				vimproc
version				9.3
revision			1
categories			editors
platforms			darwin
maintainers			openmaintainer krischik
description			vimproc is a great asynchronous execution library for Vim.
long_description	vimproc is a great asynchronous execution library for Vim.	\
					It is a fork of proc.vim by Yukihiro Nakadaira. I added		\
					some features and fixed some bugs and I'm maintaining it	\
					now. Instead of an external shell (example: 'shell'),		\
					vimproc uses an external DLL file.							\
					Currently ony compatible with MacVim. If you want / need	\
					vim or neovim support: It's openmaintainer, just do it.

homepage			https://github.com/Shougo/vimproc.vim
master_sites		https://github.com/Shougo/vimproc.vim/archive
distfiles			ver.${version}.tar.gz
worksrcdir			vimproc.vim-ver.${version}

checksums           md5     5727304c5edb71441a9d8d4814bdd3e0					\
                    sha1    91c984eba92c6938f2ffc7bb2d81dff5d0e88fdf			\
                    rmd160  1ae0a42a51cf819c89262289d2cf1f3a6701ecb7			\
                    sha256  bd4140b2407da6802b1dd6e6586aceb763182157a9004133e0d1288a8faface8

depends_lib			port:MacVim

configure {
	# Nothing to configure
}

build {
	system "cd ${worksrcpath}; make"
}

destroot {
	xinstall -d ${destroot}${applications_dir}/Contents/Resources/vim/runtime/lib
	xinstall -d ${destroot}${applications_dir}/Contents/Resources/vim/runtime/doc
	xinstall -d ${destroot}${applications_dir}/Contents/Resources/vim/runtime/plugin
	xinstall -d ${destroot}${applications_dir}/Contents/Resources/vim/runtime/autoload/vimproc

	xinstall		  ${worksrcpath}/lib/vimproc_mac.so			${destroot}${applications_dir}/Contents/Resources/vim/runtime/lib
	xinstall		  ${worksrcpath}/doc/vimproc.txt			${destroot}${applications_dir}/Contents/Resources/vim/runtime/doc
	xinstall		  ${worksrcpath}/plugin/vimproc.vim			${destroot}${applications_dir}/Contents/Resources/vim/runtime/plugin
	xinstall		  ${worksrcpath}/autoload/vimproc.vim		${destroot}${applications_dir}/Contents/Resources/vim/runtime/autoload
	xinstall {*}[glob ${worksrcpath}/autoload/vimproc/*.vim]	${destroot}${applications_dir}/Contents/Resources/vim/runtime/autoload/vimproc
}


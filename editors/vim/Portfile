package	require port 1.0
portname		vim
set vim_patchlevel	158
portversion		6.1.${vim_patchlevel}
categories		editors
maintainers		jkh@opendarwin.org
master_sites		ftp://nuxi.ucdavis.edu/pub/vim/unix/ \
			ftp://relay.nuxi.com/pub/vim/unix/ \
			ftp://ftp.vim.org/pub/vim/unix/  \
			ftp://ftp.is.co.za/applications/editors/vim/unix/  \
			ftp://ftp.prz.tu-berlin.de/pub/unix/editors/vim/unix/  \
			ftp://ftp.mirror.ac.uk/sites/ftp.vim.org/pub/vim/unix/

dist_subdir		vim

patch_sites		[strsed ${master_sites} g/unix/patches/]

patchfiles		[exec /usr/bin/jot -s " " -w \
			[ strsed ${portversion} {s/\.[0-9]*$//}].%03d \
			${vim_patchlevel} 1 ${vim_patchlevel}]

distname		${portname}-[strsed ${portversion} {s/\.[0-9]*$//}]

worksrcdir		vim61
use_bzip2		yes
checksums		vim-6.1.tar.bz2 md5 7fd0f915adc7c0dab89772884268b030
configure.type		gnu

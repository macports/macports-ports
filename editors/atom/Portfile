PortSystem          1.0
PortGroup           github 1.0

github.setup        atom atom 1.20.0 v
categories          editors
platforms           darwin
license             MIT
maintainers         {khindenburg @kurthindenburg} openmaintainer

description         The hackable text editor
long_description    ${description}

homepage            https://atom.io

checksums           rmd160  48a500406894a8673a857e6c86ea868389fe4013 \
                    sha256  d7b37b4f756dd71ea1fad792e9ca1f74cb844d00e2ef3379724175ef7798567a

depends_lib-append  path:bin/npm:npm5 \
                    port:git \
                    port:python27

use_configure       no
build.cmd           script/build
build.env-append    CC="${configure.cc} [get_canonical_archflags cc]" \
                    CXX="${configure.cxx} [get_canonical_archflags cxx]" \
                    PYTHON="${prefix}/bin/python2.7"
build.target-delete all

universal_variant   no

destroot {
    file copy ${worksrcpath}/out/Atom.app ${destroot}${applications_dir}/Atom.app
}

livecheck.regex     {archive/v([0-9.]+).tar.gz}

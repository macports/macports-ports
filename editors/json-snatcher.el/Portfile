PortSystem 1.0
PortGroup           github 1.0

github.setup        Sterlingg json-snatcher b28d1c0670636da6db508d03872d96ffddbc10f2
name                ${github.project}.el
# version is namedversion with date of last commit as minor version
version             1.0.20200903
categories          editors
maintainers         nomaintainer
supported_archs     noarch
license             GPL-3+

description         Get the path to a JSON element in Emacs
long_description    {*}${description}

checksums           rmd160  6a30d0c0c72460c8786be4500f2ccde3a6b5417b \
                    sha256  c08432496611998bdff22b6e8458ec3912c62e8881e45fa5e37d20e9d0f5fcda \
                    size    188570

depends_lib         port:emacs

use_configure       no

build {}

pre-destroot {
    xinstall -d ${destroot}${prefix}/share/emacs/site-lisp \
        ${destroot}${prefix}/share/${name}
}

destroot {
    xinstall -m 0644 ${worksrcpath}/${name} \
        ${destroot}${prefix}/share/emacs/site-lisp
    xinstall -m 0644 ${worksrcpath}/README.md \
        ${destroot}${prefix}/share/${name}
}

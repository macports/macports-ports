# $Id: Portfile,v 1.1 2005/10/04 17:33:19 mww Exp $

PortSystem	1.0
name		avarice-devel
version		2.3cvs
categories	cross
maintainers	moll@isi.edu
description	AVR JTAG-ICE control software
long_description  AVaRICE is a program which interfaces the GNU Debugger \
		GDB with the AVR JTAG ICE available from Atmel. \
		This version from CVS contains support for the JTAG ICE mkII.
homepage	http://avarice.sourceforge.net/
fetch.type      cvs
cvs.root        :pserver:anonymous@cvs.sourceforge.net:/cvsroot/avarice
cvs.module      avarice
cvs.env         CVS_RSH=ssh
cvs.args        -D20051003
worksrcdir	avarice
use_autoconf	yes
autoconf.cmd 	./Bootstrap
autoconf.env    CPPFLAGS=-I/opt/local/include LDFLAGS="-framework IOKit -L/opt/local/lib"
configure.env   CPPFLAGS=-I/opt/local/include LDFLAGS="-framework IOKit -L/opt/local/lib"
configure.args  --mandir=${prefix}/share/man
depends_lib	port:gettext lib:libusb:libusb
depends_build	port:binutils

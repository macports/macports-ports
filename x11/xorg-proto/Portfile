fetch           { }
checksum        { }
build           { }
destroot        {
    xinstall -d ${destroot}${prefix}/share/doc/${name}
    system "echo ${long_description} > ${destroot}${prefix}/share/doc/${name}/README.txt"
}

use_configure no
if {[info exists supported_archs]} {
    supported_archs noarch
}

livecheck.type  none


PortSystem 1.0
name		gtk-engines2
version		1.9.0
categories	x11
maintainers	mij@opendarwin.org
description	Theme engine for gtk2
platforms	darwin

long_description gtk-engines2 is a theme engine for GTK+ 2.  It provides \
		the ability to change the way widgets, buttons, etc. \
		look when using GTK+ 2 applications.

master_sites	ftp://ftp.gnome.org/pub/sources/gtk-engines/1.9/

distname	gtk-engines-${portversion}
checksums	md5 d77b10a9e73226a306a32d5c89ba066d

use_bzip2	yes

patchfiles	patch-configure patch-ltmain.sh

depends_lib	lib:libgtk.2:gtk2

configure.env	LDFLAGS="-L${prefix}/lib" CFLAGS="-I${prefix}/include" \
		CPPFLAGS="-I${prefix}/include -no-cpp-precomp"

contents	lib/gtk-2.0/2.0.0/engines/libmetal.la \
		lib/gtk-2.0/2.0.0/engines/libmetal.so \
		lib/gtk-2.0/2.0.0/engines/libpixmap.la \
		lib/gtk-2.0/2.0.0/engines/libpixmap.so \
		lib/gtk-2.0/2.0.0/engines/libredmond95.la \
		lib/gtk-2.0/2.0.0/engines/libredmond95.so \
		lib/gtk-2.0/2.0.0/engines \
		share/themes/Metal/gtk-2.0/gtkrc \
		share/themes/Metal/gtk-2.0 \
		share/themes/Metal/ICON.png \
		share/themes/Metal/README.html \
		share/themes/Metal \
		share/themes/Redmond95/gtk-2.0/gtkrc \
		share/themes/Redmond95/gtk-2.0 \
		share/themes/Redmond95/ICON.png \
		share/themes/Redmond95/README.html \
		share/themes/Redmond95

PortSystem      1.0

name            libhangul
version         0.0.4
categories      x11
license         LGPL-2.1+
maintainers     nomaintainer
description     A library for hangul processing.
long_description \
                ${description}
			
homepage        http://nabi.kldp.net
master_sites    http://kldp.net/frs/download.php/3733/

depends_lib     port:libiconv
checksums       md5 a32301e03a381917cb2ec836a43a9664
patchfiles      patch-Makefile patch-test

post-patch {
    if {${os.arch} eq "powerpc"} {
        reinplace "s|__PLATFORM__|ppc|g" ${worksrcpath}/test/hangul.c
    } else {
        reinplace "s|__PLATFORM__|${os.arch}|g" ${worksrcpath}/test/hangul.c
    }
}

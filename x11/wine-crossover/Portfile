                            --with-freetype \
                            --without-gettext \
                            --without-gettextpo \
                            --without-gphoto \
                            --with-glu \
                            --with-gnutls \
                            --without-gsm \
                            --with-gstreamer \
                            --without-hal \
                            --with-jpeg \
                            --without-ldap \
                            --without-mpg123 \
                            --without-netapi \
                            --with-openal \
                            --with-opencl \
                            --with-opengl \
                            --without-osmesa \
                            --without-oss \
                            --with-pcap \
                            --with-png \
                            --with-pthread \
                            --without-pulse \
                            --without-sane \
                            --with-tiff \
                            --without-udev \
                            --without-v4l \
                            --without-xcomposite \
                            --without-xcursor \
                            --without-xinerama \
                            --without-xinput \
                            --without-xinput2 \

# $Id$

PortSystem 1.0

name		xffm
version		4.2.4
categories	x11
maintainers	nomaintainer@macports.org
description	Xffm is the integration of xftree, xfsamba and \
		xfglob with additional enhancements and use of the gtk-2.0 library.
long_description ${description}
homepage	http://www.xfce.org/
master_sites	http://www.us.xfce.org/archive/xfce-${version}/src
checksums	md5 8b2097c239104e60542c42243aa8b319 \
		sha1 f2eaa1e0aeb23bbf9cff7636c7ad93ff3db2aaae \
		rmd160 a2418f0dc11b231e5a0e7ad613cd377ae7016024
configure.args	--disable-debug --enable-final --enable-menu --enable-panel
patchfiles	uri.h-patch
depends_lib	port:xfce-mcs-manager

variant samba {
	depends_bin-append port:samba3
	configure.args-append --enable-smbbranch
}

# $Id: Portfile,v 1.3 2004/12/11 21:35:58 rshaw Exp $

PortSystem 1.0
name                fxscintilla
version             1.57
description         FOX wrapper for the Scintilla source code library
long_description    fxscintilla is a FOX wrapper for the Scintilla \
                    source code widget library.
maintainers         dports@otierney.net
categories          x11
platforms           darwin 
homepage            http://www.nongnu.org/fxscintilla
master_sites        http://pini.free.fr/fxscintilla/
checksums           md5 68aa25d2b8d626b6455736e611a3993f
depends_lib         lib:libFOX-1:fox
configure.env       CPPFLAGS=-I${prefix}/include CXX=g++ \
                    LDFLAGS=-L${prefix}/lib
configure.pre_args  --prefix=${prefix}
configure.args      --with-foxinclude=${prefix}/include \
                    --with-foxlib=${prefix}/lib

package	require port 1.0
portname		XFree86
portversion		4.2.0
categories		x11 graphics
maintainers		jkh@opendarwin.org
configure		no

if {[option_get "devel"]} {
    make.target.all World
    fetch {
	cd $portpath/$workdir
	system cvs -d :pserver:anoncvs@anoncvs.xfree86.org:/cvs login < /dev/null
	system cvs -d :pserver:anoncvs@anoncvs.xfree86.org:/cvs co -P xc
	workdir $workdir/xc
    }
} else {
    master_sites ftp://ftp.xfree86.org/pub/XFree86/4.2.0/binaries/Darwin-ppc-5.x/
    distfiles Xbin.tgz Xdoc.tgz Xetc.tgz Xf100.tgz Xfcyr.tgz \
	Xfenc.tgz Xfnts.tgz Xfscl.tgz Xfsrv.tgz Xhtml.tgz \
	Xinstall.sh Xjdoc.tgz Xlib.tgz Xman.tgz Xnest.tgz \
	Xprog.tgz Xprt.tgz Xps.tgz Xquartz.tgz Xvfb.tgz \
	Xxserv.tgz

    build	{}
    install	{ system $portdir/$workdir/Xinstall.sh }
}


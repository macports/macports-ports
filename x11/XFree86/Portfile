configure	{}
worksrcdir	xc
build.target	World

if {[regexp ^6\. ${os.version} match] == 1} {
	patchfiles patch-darwin.cf
}

# If getting the development version, check out of CVS instead
variant devel {
	fetch.type cvs
	cvs.root :pserver:anoncvs@anoncvs.xfree86.org:/cvs
	cvs.module xc
	cvs.password	anoncvs
}

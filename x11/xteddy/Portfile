                    port:xorg-libXext \
                    port:zlib

patchfiles          patch-Makefile.in.diff \
                    patch-xteddy.6.diff \
                    patch-xteddy.c.diff \
                    patch-xteddy_test.diff \
                    patch-xtoys.diff

post-patch {
    reinplace "s|__PREFIX__|${prefix}|g" \
                    ${worksrcpath}/xteddy.6 \
                    ${worksrcpath}/xteddy.c \
                    ${worksrcpath}/xteddy_test \
                    ${worksrcpath}/xtoys
}


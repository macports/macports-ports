PortSystem	1.0
name		xrender
version		0.8.2
categories	x11
maintainers	blb@pobox.com
description	X Render Extension library
long_description	${description}
homepage	http://fontconfig.org/

master_sites    http://x2.freedesktop.org/~xlibs/release/ \
		http://soupnazi.org/OSX/dports/distfiles/ \
		ftp://ftp.FreeBSD.org/pub/FreeBSD/ports/distfiles/

depends_lib	lib:libX11.6:XFree86 \
		path:${prefix}/include/X11/extensions/render.h:render
depends_build	bin:pkg-config:pkgconfig
platforms	darwin
checksums	md5 ca11dfc582a064381ec2c90349c946dd
configure.env	CPPFLAGS="-no-cpp-precomp -I${prefix}/include" \
		LDFLAGS="-L${prefix}/lib"
configure.args	--enable-static=no

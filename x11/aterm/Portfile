# $Id: Portfile,v 1.9 2004/01/17 22:32:24 toby Exp $

PortSystem 1.0
name		aterm
version		0.4.2
revision	0
categories	x11
maintainers	darwinports@opendarwin.org
description	Color vt102 terminal emu w/transparency support
long_description	\
	aterm is a color vt102 terminal emulator, based on rxvt 2.4.8 with \
	additions for fast transparency. \
	\
	It was created with AfterStep users in mind, but is not tied to any \
	libraries, and can be used anywhere.
homepage	http://aterm.sourceforge.net/
platforms	darwin
master_sites     sourceforge
checksums	md5 d046fcf7fadd661dd5efb393a43c57b1
depends_lib	\
	lib:libX11.6:XFree86 lib:libfreetype.6:freetype \
	lib:libjpeg.62:jpeg lib:libpng.3:libpng lib:libxpm.4:xpm
configure.env	\
	LDFLAGS="-L${prefix}/lib" \
	CPPFLAGS="-I${prefix}/include"
configure.args	\
	--enable-transparency --enable-background-image \
	--disable-delete-key --disable-backspace-key \
	--enable-fading --enable-utmp --enable-wtmp --with-x \
	--with-xpm --with-xpm-includes="${x11prefix}/include" \
	--with-xpm-library="${x11prefix}/lib" \
	--with-jpeg-includes="${prefix}/include" \
	--with-jpeg-library="${prefix}/lib" \
	--with-png-includes="${prefix}/include" \
	--with-png-library="${prefix}/lib"

variant menubar {
	configure.args-append	--enable-menubar
}
variant nextscroll {
	configure.args-append	--enable-next-scroll
}

                    -DBUILD_JSONCPP=OFF \
                    -DBUILD_LIBPNG=OFF \
                    -DBUILD_PHYSFS=OFF \
                    -DBUILD_PROTOBUF=OFF \
                    -DBUILD_SDL=OFF \
                    -DBUILD_XIPH=OFF \
                    -DBUILD_ZLIB=OFF


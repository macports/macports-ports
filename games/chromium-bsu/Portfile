                        --disable-glpng \
                        --disable-glut \
                        --disable-openal \
                        --disable-sdl2 \
                        --disable-sdl2image \
                        --disable-sdl2mixer \
                        --enable-ftgl \
                        --enable-sdl \
                        --enable-sdlimage \
                        --enable-sdlmixer


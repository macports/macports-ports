depends_lib             port:fontconfig \
                        port:ftgl \
                        port:libsdl \
                        port:libsdl_image \
                        port:libsdl_mixer \
                        port:mesa \
                        port:libGLU

patchfiles              patch-misc-Makefile.in.diff

post-patch {
    reinplace "s|\"../data\"|\"${prefix}/share/${name}\"|g" ${worksrcpath}/src/main.cpp
}


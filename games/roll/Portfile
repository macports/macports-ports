PortSystem          1.0
PortGroup           github 1.0

github.setup        matteocorti roll 2.1.1 v
categories          games
platforms           darwin
maintainers         corti.li:matteo
license             GPL-2

description         Dice roller

long_description    rolls a user-defined dice sequence

homepage            http://matteocorti.ch/software/roll/

checksums           rmd160  52874642efd5850640ca3db13c4096848d46a732 \
                    sha256  70b6051ca45e47c05d2280a2057d28386bafd36cd979e8e09e8d3041c3a32d15

use_parallel_build  yes

use_autoreconf      yes
depends_build       bin:lex:flex \
                    bin:bison:bison

post-destroot {
    set docdir ${prefix}/share/doc/${subport}
    xinstall -d ${destroot}${docdir}
    xinstall -m 644 -W ${worksrcpath} \
        AUTHORS \
        ChangeLog \
        COPYING \
        COPYRIGHT \
        NEWS \
        README \
        TODO \
        ${destroot}${docdir}
}

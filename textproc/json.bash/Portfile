depends_lib-append  port:bash

use_configure       no

build {}

patch {
    reinplace -W ${worksrcpath} \
        "s|#!/usr/bin/env bash|#!${prefix}/bin/bash|" ${name}
}

destroot {
    xinstall -m 0755 ${worksrcpath}/${name} ${destroot}${prefix}/bin/jb
    ln -sf ${prefix}/bin/jb ${destroot}${prefix}/bin/jb-array
}

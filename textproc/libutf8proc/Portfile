                    prefix

makefile.override-append \
                    PREFIX

post-destroot {
    set docdir ${destroot}${prefix}/share/doc/${name}
    xinstall -d ${docdir}
    xinstall -m 644 -W ${worksrcpath} \
        LICENSE.md \
        README.md \
        NEWS.md \
        ${docdir}
}

depends_test        bin:curl:curl
test.run            yes

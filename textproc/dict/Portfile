package	require port 1.0
portname		dict
portversion		1.7.1
categories		textproc spelling
maintainers		landonf@opendarwin.org
description		"Dictionary Server Protocol (RFC2229) client"
master_sites		ftp://ftp.dict.org/pub/dict/
distname		${portname}d-${portversion}
checksums		${distfiles} md5 81317b86ea0a5df0163900ad2e6bb12c
patchfiles		patch-Makefile.in patch-dict.h patch-config.guess patch-config.sub patch-libmaa-config.guess patch-libmaa-config.sub patch-darwin
configure.type		gnu
configure.args		--without-local-zlib --with-etcdir=${prefix}/etc
make.type		gnu
make.target.all		dict
make.target.install	install.dict
contents		bin/dict \
			man/man1/dict.1
post-patch {
	reinplace s|/etc/|${prefix}/etc/|g "${workpath}/${distname}/dict.1"
}

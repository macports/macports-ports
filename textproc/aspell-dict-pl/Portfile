PortSystem 1.0

set langcode        pl
name                aspell-dict-${langcode}
version             6.0_20061121-0
categories          textproc
license             {LGPL-2.1 MPL-1.1 CC-SA-1}
maintainers         nomaintainer
description         ${langcode} dictionary for aspell
long_description    ${description}
homepage	        http://aspell.net/
platforms	        darwin
supported_archs     noarch

master_sites	    gnu:aspell/dict/${langcode}
distname	        aspell6-${langcode}-${version}
checksums	        md5     3139a69a1bd9ccb1d853d30aa024fc2b \
                    sha1    907852b5fbcdc643a84389cdf412aaf2bebff0ce \
                    rmd160  4c8aaa46eafb5bef8b7c9b123a3428e20348b033

use_bzip2           yes

depends_build       port:aspell

configure.pre_args  {}
configure.args      --vars \
                    ASPELL=${prefix}/bin/aspell \
                    WORD_LIST_COMPRESS=${prefix}/bin/word-list-compress

livecheck.type      regex
livecheck.url       http://ftp.gnu.org/gnu/aspell/dict/0index.html
livecheck.regex     >aspell6-${langcode}-(.*?)\\.tar\\.

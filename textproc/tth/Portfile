PortSystem 1.0
name		tth
version         3.13
categories      print
maintainers     digdog@mac.com
description     a TeX to HTML transaltor
master_sites    http://hutchinson.belmont.ma.us/tth/tth-noncom/
distname	${portname}_C
extract.sufx	.tgz
checksums       md5 717fcb1cb35dfa15912ea4ecd2c1bf7c

configure	{}

build		{ cd ${worksrcpath}; system "cc -o ${portname} ${portname}.c" }

pre-install	{ system "install -o root -m 755 -d ${prefix}/bin";
		system "install -o root -m 755 -d ${prefix}/man/man1" }
				 
install		{ cd ${worksrcpath};
		system "install -o root -m 755 -c ${portname} ${prefix}/bin"
                system "install -o root -m 755 -c latex2gif ${prefix}/bin"
                system "install -o root -m 755 -c ps2gif ${prefix}/bin"
                system "install -o root -m 755 -c ps2png ${prefix}/bin"
		system "install -o root -m 644 -c ${portname}.1 ${prefix}/man/man1"}

contents {
		bin/tth
		bin/latex2gif
		bin/ps2gif
		bin/ps2png
		man/man1/tth.1
}

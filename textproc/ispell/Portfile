# $Id: Portfile,v 1.10 2003/08/05 09:29:37 jkh Exp $

PortSystem 1.0
name			ispell
version			3.2.06
categories		textproc spelling
platforms		darwin freebsd
maintainers		landonf@opendarwin.org
description		An interactive spelling checker for multiple languages
master_sites		http://fmg-www.cs.ucla.edu/geoff/tars/
checksums		md5 d434e1aef1a815294d5012c60c4c414a
build.env		TMPDIR=${workpath}

configure {
			cd ${workpath}/${worksrcdir}
			system "cp local.h.samp local.h"
			system "chmod 744 local.h"
			reinplace s|/usr/local|${prefix}|g local.h
}
pre-destroot           { system "install -d ${destroot}${prefix}/bin"
                        system "install -d ${destroot}${prefix}/lib"
                        system "install -d ${destroot}${prefix}/man"
                        cd ${workpath}/${worksrcdir}
                        reinplace "s|${prefix}|${destroot}${prefix}|g" config.sh}
destroot.vars      

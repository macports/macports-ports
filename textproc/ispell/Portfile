PortSystem 1.0
portname		ispell
portversion		3.2.06
categories		textproc spelling
maintainers		landonf@opendarwin.org
description		An interactive spelling checker for multiple languages
master_sites		http://fmg-www.cs.ucla.edu/geoff/tars/
checksums		md5 d434e1aef1a815294d5012c60c4c414a
build.env		TMPDIR=${workpath}
configure {
			cd ${workpath}/${worksrcdir}
			system "cp local.h.samp local.h"
			system "chmod 744 local.h"
			reinplace s|/usr/local|${prefix}|g local.h
}
contents		bin/buildhash \
			bin/deformat-c \
			bin/deformat-sh \
			bin/findaffix \
			bin/icombine \
			bin/ijoin \
			bin/ispell \
			bin/munchlist \
			bin/tryaffix \
			lib/american.hash \
			lib/americanmed.hash \
			lib/english.aff \
			lib/english.hash \
			man/man1/buildhash.1 \
			man/man1/findaffix.1 \
			man/man1/ispell.1 \
			man/man1/munchlist.1 \
			man/man1/tryaffix.1 \
			man/man4/english.4 \
			man/man4/ispell.4

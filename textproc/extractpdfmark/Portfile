                    sha256  af81f08604ea91162451d08d818f13d3f443c33832e8b9ab8ded033fde2b0298 \
                    size    298040

depends_build       port:pkgconfig

depends_lib         port:libiconv \
                    port:poppler

configure.args      --disable-codecvt

github.livecheck.regex {([0-9.]+)}

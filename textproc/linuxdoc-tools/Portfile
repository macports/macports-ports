                port:opensp \
                port:texinfo

variant universal {}

build.args      CC=${configure.cc} \
                CFLAGS="${configure.cflags} [get_canonical_archflags cc]" \
                LANG=C \
                LDFLAGS="${configure.ldflags} [get_canonical_archflags ld]" \
                LEX=${prefix}/bin/flex

livecheck.type  regex
livecheck.url   ${homepage}/tags
livecheck.regex {tags/([^"]+)"}

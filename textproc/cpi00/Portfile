destroot {
    xinstall -m 755 ${worksrcpath}/build/src/cpi00 ${destroot}${prefix}/bin
    set docdir ${prefix}/share/doc/${name}
    xinstall -d ${destroot}${docdir}
    xinstall -m 644 ${worksrcpath}/README ${destroot}${docdir}
}

makefile.prefix_name \
                    prefix

post-patch {
    reinplace "s|%PREFIX%|${prefix}|g" ${worksrcpath}/man/man1/${name}.1
}

post-destroot {
    xinstall -d ${destroot}${prefix}/share/doc/${name}
    xinstall -m 644 ${worksrcpath}/LICENSE.txt ${destroot}${prefix}/share/doc/${name}/
}

PortSystem 1.0

set langcode        mk
name                aspell-dict-${langcode}
version             0.50-0
categories          textproc
license             GPL-2+
maintainers         nomaintainer
description         ${langcode} dictionary for aspell
long_description    ${description}
homepage	        http://aspell.net/
platforms	        darwin
supported_archs     noarch

master_sites	    gnu:aspell/dict/${langcode}
distname	        aspell-${langcode}-${version}
checksums	        md5     50e15df6b68e78d1baa789f517b2401b \
                    sha1    08117e9d14543ca6d3626681d4b0eab51d53e727 \
                    rmd160  135799de20302b5c0b689eadda2561d260700be3

use_bzip2           yes

depends_build       port:aspell

configure.pre_args  {}
configure.args      --vars \
                    ASPELL=${prefix}/bin/aspell \
                    WORD_LIST_COMPRESS=${prefix}/bin/word-list-compress

livecheck.type      regex
livecheck.url       http://ftp.gnu.org/gnu/aspell/dict/0index.html
livecheck.regex     >aspell6?-${langcode}-(.*?)\\.tar\\.

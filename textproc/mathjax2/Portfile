PortSystem          1.0
PortGroup           github 1.0

name                mathjax2
categories          textproc
platforms           darwin
license             Apache-2
maintainers         nomaintainer
description         Beautiful and accessible math in all browsers 
long_description    ${description}

github.setup        mathjax MathJax 2.7.9
checksums           rmd160  391e72ec1840a10208b604a98458c357484461bc \
                    sha256  30cd37b51932309af6594e760af641f489dbf2f63395ae38735c4a3205a7c3e8 \
                    size    25710312
revision            0

use_configure       no
build {}

destroot {
    xinstall -d -m 0755 ${destroot}${prefix}/share/${name}
    xinstall -d -m 0755 ${destroot}${prefix}/share/fonts/${name}
    xinstall -d -m 0755 ${destroot}${prefix}/share/doc/${name}
    xinstall -m 0644 ${worksrcpath}/MathJax.js ${destroot}${prefix}/share/${name}
    xinstall -m 0644 ${worksrcpath}/LICENSE ${destroot}${prefix}/share/${name}
    xinstall -m 0644 ${worksrcpath}/docs/html/index.html ${destroot}${prefix}/share/doc/${name}

    file copy {*}[glob ${worksrcpath}/fonts/*] \
        ${destroot}${prefix}/share/fonts/${name}
    ln -s ${prefix}/share/fonts/${name} ${destroot}${prefix}/share/${name}/fonts
}

# There is no `make install'.
destroot {
    xinstall ${build.dir}/${name} ${destroot}${prefix}/bin

    set docdir ${prefix}/share/doc/${name}
    xinstall -d ${destroot}${docdir}
    xinstall -m 0644 -W ${worksrcpath} LICENSE ${destroot}${docdir}
}

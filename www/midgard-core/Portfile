# $Id$

PortSystem 1.0

name		midgard-core
version		8.09.4
categories	www
maintainers	jwa
description	A content management system
long_description Midgard is a content management system platform using \
    Apache, PHP and MySQL.
platforms	darwin
homepage	http://www.midgard-project.org/

master_sites	http://www.midgard-project.org/midcom-serveattachmentguid-9af6484c0f0911de86286f3b452c6f1a6f1a/

#use_bzip2	yes
checksums           md5     22bb3d209965e925446cdb03c51b7e51 \
                    sha1    a8b5a4680b5b2ed0e9e7041a7e1577ed92b7397a \
                    rmd160  f2f64c10e42f4a0ecb2821160697b20a4c3429ab

depends_lib	port:expat \
    port:gettext \
    port:glib2 \
    port:dbus \
    port:libiconv \
    port:libxml2 \
    port:mysql5 \
    port:openssl \
    port:zlib

configure.args	--sysconfdir=${prefix}/etc/midgard/ \
    --with-expat=${prefix} \
    --with-mysql-config=mysql_config5 \
    --with-iconv=${prefix}

variant check description {add unit tests} {
    depends_lib-append port:check
    configure.args-append --with-check=${prefix}
}

post-install	{
    ui_msg "NB! The other parts of the package are:"
    ui_msg "midgard-apache2, midgard-php4 and midgard-data"
}

livecheck.check	regex
livecheck.url	${homepage}download
livecheck.regex	${name}-(\[1-9\]+.\[0-9\]+.\[0-9\]+).tar.\[bg\]z

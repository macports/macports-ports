                    sha256  7692535fb0011d3ad9c6b1effd0f501c1b26baf5c720288384d459a8c8f951eb \
                    size    86996

# allow Go to fetch dependencies at build time
build.env-delete    GO111MODULE=off GOPROXY=off

build.cmd           make
build.pre_args-append \
                    VERSION=${version}
build.args          build


                    sha256  7b10fb1e7ba8ea7fed025ea9cef4d804af367f450482494d2cf61bf17b403d56 \
                    size    110335

# allow Go to fetch dependencies at build time
build.env-delete    GO111MODULE=off GOPROXY=off

build.cmd           make
build.pre_args-append \
                    VERSION=${version}
build.args          build


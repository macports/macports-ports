                    sha256  40aa9440bb8dc369f10a3e87614cf0cd1c7722ce6d8bc12b814d7793ba0766ad \
                    size    63149

# allow Go to fetch dependencies at build time
build.env-delete    GO111MODULE=off GOPROXY=off

build.cmd           make
build.pre_args-append \
                    VERSION=${version}
build.args          build


checksums           rmd160  cfaa166f21faf6a6f148ce016ff131e062a0d290 \
                    sha256  bdb5f86d787ff5c4b5c83ddfbe2ca634cbefec25ec5ab53681ab0d200de8f617 \
                    size    54141439

build.dir           ${worksrcpath}/go
build.env           GOPATH=${gopath}

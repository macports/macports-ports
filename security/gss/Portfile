                 sha1 27bdefaf3ba91c73583e18a6f0e752a424e07127 \
                 rmd160 3e6cdc6f25b3ca90fc26bb153aaf79924a8c1756
configure.args   --infodir=${prefix}/share/info \
                 --mandir=${prefix}/share/man

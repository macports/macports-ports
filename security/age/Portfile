github.livecheck.regex \
                    {([0-9.-]+)}

pre-build {
    file mkdir ${worksrcpath}/_dist
}

destroot {
    foreach age_bin [glob ${worksrcpath}/_dist/*] {
        xinstall -m 0755 ${age_bin} ${destroot}${prefix}/bin/
    }
}


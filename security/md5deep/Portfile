# $Id$

PortSystem			1.0
name				md5deep
version				1.12
categories			security sysutils
maintainers			blb@macports.org
description			Recursively compute digests on files/directories
long_description \
	md5deep is a cross-platform set of programs to recursively compute \
	MD5, SHA-1, or SHA-256 message digests on an arbitrary number of files.

platforms			darwin

homepage			http://md5deep.sourceforge.net/
master_sites		sourceforge

checksums			md5 a86d2d2b25b8dfd4cee7a130ef388b28 \
					sha1 a967f50d9aa63181351fc8ad561bae56daef174d \
					rmd160 8a17f9cfb84a45c3a615967b72de3abfb03c0c1b

use_configure		no

destroot.destdir	BIN=${destroot}${prefix}/bin \
					MAN=${destroot}${prefix}/share/man/man1

post-destroot {
	xinstall -m 755 -d ${destroot}${prefix}/share/doc/${name}
	xinstall -m 644 -W ${worksrcpath} CHANGES README \
		${destroot}${prefix}/share/doc/${name}
}

variant darwin {
	build.target	mac
}


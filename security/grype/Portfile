    -ldflags \" -w -s \
    -X ${go.package}/internal/version.version=${github.tag_prefix}${version} \
    \"

build.args-append   -o ./bin/${name}

destroot {
    xinstall -m 0755 ${worksrcpath}/bin/${name} ${destroot}${prefix}/bin/

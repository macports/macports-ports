                    sha256  4a43334f3464246e4d86859c334e18d500048b651cfe5741d965e08a91911023 \
                    size    10906

if {${perl5.major} != ""} {
    depends_lib-append \
                    port:p${perl5.major}-date-calc

    supported_archs noarch
}

                    sha256  3243449bf30b5ad5d220c2983183095dc6546b493ced8d25dd817b4b71a79672 \
                    size    11427

if {${perl5.major} != ""} {
    depends_lib-append \
                    port:p${perl5.major}-date-calc

    supported_archs noarch
}

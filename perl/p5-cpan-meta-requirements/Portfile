if {${perl5.major} != ""} {
    depends_lib-append \
                     port:p${perl5.major}-scalar-list-utils \
                     port:p${perl5.major}-version

    if {[vercmp ${perl5.major} 5.12] < 0} {
        configure.env-append \
                    PERL_NO_HIGHLANDER=1
    }
}

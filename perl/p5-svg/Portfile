if {${perl5.major} != ""} {
    post-destroot {
        set examplesdir ${destroot}${prefix}/share/perl${perl5.major}/examples/SVG
        xinstall -d ${examplesdir}
        xinstall -m 644 {*}[glob ${worksrcpath}/examples/*] ${examplesdir}
    }
}

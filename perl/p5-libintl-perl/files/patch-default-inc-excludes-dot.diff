index 898040d..5b25425 100644
--- Makefile.PL
+++ Makefile.PL
@@ -182,7 +182,7 @@ sub tools_other
 	my $fragment = $self->SUPER::tools_other (@_);
 
 	$fragment =~ s/^MOD_INSTALL\s*=\s*(.*?)-MExtUtils::Install

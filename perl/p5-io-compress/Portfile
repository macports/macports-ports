PortSystem          1.0
PortGroup           perl5 1.0

perl5.branches      5.16 5.18 5.20
perl5.setup         IO-Compress 2.068 IO/PMQS
license             {Artistic-1 GPL}
maintainers         nomaintainer
description         Perl interface to allow reading and writing of \
                    compressed data created with the zlib and bzip2 \
                    libraries.
long_description    ${description}

platforms           darwin

checksums           rmd160  b4466e5b31895ceeb092c611728098f0be63ab7e \
                    sha256  fa058d9c0c7fce95ca1387a95d7ad646c097fe68f26ae9fe742dc973e555c037

if {${perl5.major} != ""} {
    depends_lib-append \
                    port:p${perl5.major}-compress-raw-bzip2 \
                    port:p${perl5.major}-compress-raw-zlib

    supported_archs noarch
    if {[vercmp ${perl5.major} 5.16] >= 0} {
        # perl5.16 installs zipdetails
        perl5.link_binaries no
    }
}

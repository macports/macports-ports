if {${perl5.major} != ""} {
    depends_lib-append \
                    port:p${perl5.major}-term-readkey \
                    port:fontconfig \
                    port:freetype \
                    port:jpeg \
                    port:libpng \
                    port:Xft2 \
                    port:xorg-libX11

# Must specify X11INC to find freetype.h
# (can't just use X11=${prefix})
# See https://rt.cpan.org/Ticket/Display.html?id=129923
    configure.args-append \
                    XFT=1 \
                    X11INC=${prefix}/include \
                    X11LIB=${prefix}/lib
}

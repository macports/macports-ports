                    sha256  e76afc7f38a624924a77c5c988c36c9e388bfa7716e75cd397fef8e1b42ebb89

if {${perl5.major} != ""} {
    patchfiles      patch-lib-CAM-PDF.pm

    depends_lib-append \
                    port:p${perl5.major}-crypt-rc4 \
                    port:p${perl5.major}-text-pdf
}


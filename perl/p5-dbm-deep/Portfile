    depends_build-append \
                    port:p${perl5.major}-test-deep \
                    port:p${perl5.major}-test-exception \
                    port:p${perl5.major}-test-warn

    depends_lib-append \
                    port:p${perl5.major}-dbi \
                    port:p${perl5.major}-dbd-sqlite


                        sha1 aa6aae1b1cd33106ec2452376e848014ff6c61f8 \
                        rmd160 f74248cc7232c1b08d5ba9f7d5a70600d3a5f953
platforms               darwin

if {[info exists supported_archs]} {
    supported_archs noarch
} else {
    universal_variant no
}

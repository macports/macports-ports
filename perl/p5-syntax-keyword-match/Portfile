if {${perl5.major} != ""} {
    depends_build-append \
                    port:p${perl5.major}-extutils-cbuilder \
                    port:p${perl5.major}-future-asyncawait \
                    port:p${perl5.major}-test2-suite

    depends_lib-append \
                    port:p${perl5.major}-xs-parse-keyword

    # Match.xs: error: ‘for’ loop initial declaration used outside C99 mode
    # However just passing -std=c99 is not enough, it still fails:
    # Match.xs: error: ‘XSParseKeywordPiece’ has no member named ‘op’
    compiler.blacklist-append \
                    *gcc-4.*

    perl5.use_module_build
}

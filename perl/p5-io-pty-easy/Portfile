				sha1 864cf17087c621ea332425b2a079dcc8b4208f97 \
				rmd160 9762c4803cdc0c28e7ac22331a1e4bfa833f35e9
platforms		darwin

depends_lib-append		port:p5-io-tty

if {[info exists supported_archs]} {
    supported_archs noarch
} else {
    universal_variant no
}

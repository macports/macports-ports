    configure.env-append    PATH=${prefix}/lib/pgsql8/bin:$env(PATH) \
                            POSTGRES_INCLUDE="${prefix}/include/pgsql8" \
                            POSTGRES_LIB="${prefix}/lib/pgsql8 -lssl"
}


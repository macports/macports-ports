    configure.env           PATH=${prefix}/lib/postgresql12/bin:$env(PATH) \
                            POSTGRES_INCLUDE=${prefix}/include/postgresql12 \
                            "POSTGRES_LIB=${prefix}/lib/postgresql12 -lssl"

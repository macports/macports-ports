                      port:p5-class-data-inheritable \
                      port:p5-class-trigger \
                      port:p5-clone \
                      port:p5-file-temp \
                      port:p5-ima-dbi \
                      port:p5-scalar-list-utils \
                      port:p5-universal-moniker \
                      port:p5-version

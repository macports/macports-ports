                    	sha1    5b64085139ae05d5593793f21edcaa1c7867cbf9 \
                   	rmd160  62686efa2302e8246c6e190dd37bc45363b27ead

platforms               darwin
depends_lib             port:p5-sys-hostname-long port:p5-net-dns \
			port:p5-net-cidr-lite port:p5-uri


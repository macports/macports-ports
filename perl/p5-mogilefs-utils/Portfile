if {${perl5.major} != ""} {
    depends_lib-append \
                    port:p${perl5.major}-mogilefs-client \
                    port:p${perl5.major}-libwww-perl

    post-patch {
            reinplace "s|/usr/bin/perl|${perl5.bin}|" {*}[glob ${worksrcpath}/mog*]
    }

    supported_archs noarch

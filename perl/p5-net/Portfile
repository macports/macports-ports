    depends_lib-append \
                    port:p${perl5.major}-authen-sasl \
                    port:p${perl5.major}-crypt-des \
                    port:p${perl5.major}-digest \
                    port:p${perl5.major}-digest-hmac \
                    port:p${perl5.major}-digest-sha1 \
                    port:p${perl5.major}-gssapi

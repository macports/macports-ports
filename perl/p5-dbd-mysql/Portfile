PortSystem			1.0
PortGroup			perl5 1.0
perl5.setup			DBD-mysql 2.9004
revision			1
maintainers			darwinports@opendarwin.org
description			Perl5 Database Interface to the MySQL database
long_description	${description}

platforms			darwin

checksums			md5 fe3e8c65718368a3fa653e592f82248b \
					sha1 1f1d974210a1c429d3679a4fe1816a1d7e17dc24

depends_lib-append	lib:XXX:p5-dbi bin:mysql:mysql4 lib:libz:zlib

# A little kludge to work with Mac OS X Server's MySQL
post-configure {
	reinplace "s|-arch i386||g" ${worksrcpath}/Makefile
	reinplace "s|-arch ppc||g" ${worksrcpath}/Makefile
}


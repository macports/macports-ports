if {${perl5.major} != ""} {
# Alien::FFTW3 has gone AWOL from CPAN/MetaCPAN so don't depend on it
# PDL::FFTW3 can use pkg-config just as well
    depends_build-append \
                    port:p${perl5.major}-ipc-run \
                    port:pkgconfig

    depends_lib-append \
                    port:p${perl5.major}-pdl \
                    port:fftw-3 \
                    port:fftw-3-single \
                    port:fftw-3-long
}

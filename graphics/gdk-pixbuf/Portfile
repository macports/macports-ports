# $Id: Portfile,v 1.11 2005/04/04 10:08:36 jkh Exp $

PortSystem 1.0
name		gdk-pixbuf
version		0.22.0
revision	1
categories	graphics
maintainers	mij@opendarwin.org
description	generic image handling library for Gtk+ programs
homepage	http://www.gnome.org/
platforms	darwin

long_description The GdkPixBuf library provides a number of features, \
		 such as image loading facilities, a cache interface, \
		 and rendering of a GdkPixBuf into various formats.

master_sites	gnome:sources/gdk-pixbuf/0.22

use_bzip2	yes
checksums	md5 05fcb68ceaa338614ab650c775efc2f2

depends_build	lib:libtiff.3:tiff lib:libjpeg.62:jpeg lib:libpng.3:libpng \
		lib:libglib.1:glib1 lib:libgtk.1:gtk1

patchfiles	patch-Makefile.in patch-configure \
		patch-ltmain.sh patch-gdk-pixbuf-Makefile.in

configure.env	CPPFLAGS="-I${prefix}/include -no-cpp-precomp" \
		CFLAGS="-L${prefix}/lib" LIBS="-L${prefix}/lib"
configure.args	--with-html-dir=${prefix}/doc --disable-gtk-doc

platform darwin 6 { depends_lib-append lib:libdl:dlcompat }
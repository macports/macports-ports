variant smyrna description {Include the Smyrna large graph viewer} {
    configure.args-delete       --without-smyrna \
                                --without-gtk \
                                --without-gtkglext \
                                --without-glade
    configure.args-append       --with-smyrna \
                                --with-gtk \
                                --with-gtkglext \
                                --with-glade
    depends_lib-append          port:freeglut \
                                port:gtk2 \
                                port:gtkglext \
                                port:libglade2
}


# $Id$

PortSystem 1.0
name            gimp-user-manual
version         0.11
categories      graphics
maintainers     nomaintainer@macports.org
description     A multilingual user manual for the Gimp (broken).
long_description \
    The GIMP User Manual is a newly written User Manual for the GIMP. \
	It is written for the GIMP Help Browser, but can produce the Help pages \
	for other mediums as well.
homepage        http://docs.gimp.org/
platforms       darwin

distname        gimp-help-2-${version}
master_sites    ftp://ftp.gimp.org/pub/gimp/help/
checksums       md5 1becf4914fe51d8f0ce4142202c8cb92

patchfiles      patch-profile.xsl

depends_build   port:pkgconfig \
                port:docbook-xsl \
                port:gimp2

configure.args  --enable-build --enable-network \
                --with-xsl=/opt/local/share/xsl/docbook-xsl

variant without_gimp {
    configure.args-append   --without-gimp
    depends_build-delete    port:gimp2
}

# $Id: Portfile,v 1.3 2004/02/05 22:36:46 toby Exp $

PortSystem 1.0
name             gimp2
version          2.0pre3
distname         gimp-${version}
categories       graphics
maintainers      toby@opendarwin.org
description      The GNU Image Manipulation Program (version 2)
long_description \
    The GNU Image Manipulation Program (GIMP) is a powerful \
    tool for the preparation and manipulation of digital images. \
    The GIMP provides the user with a wide variety of image \
    manipulation, painting, processing, and rendering tools.
homepage         http://www.gimp.org/
platforms        darwin
master_sites     ftp://ftp.cs.umn.edu/pub/gimp/v2.0/testing/ \
                 ftp://ftp.flirble.org/pub/X/gimp/gimp/v2.0/testing/ \
                 ftp://ftp.minet.net/pub/gimp/v2.0/testing/
use_bzip2        yes
checksums        md5 f4d45d83cba87bc9d45399b0e6bce27c
depends_build    bin:pkg-config:pkgconfig
depends_lib      lib:libart_lgpl_2:libart_lgpl lib:libgtk.2:gtk2
configure.env    LDFLAGS=-L${prefix}/lib CPPFLAGS=-I${prefix}/include
configure.args   --disable-print

# for plugins
# gimp-print, gtkhtml, libmng, librsvg, libwmf

variant python {
    configure.args-append --enable-python
    depends_bin-append    bin:python:python
}

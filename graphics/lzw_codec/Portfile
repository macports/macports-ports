                    size    12876

use_configure       no

build.target        ""
build.args          CC=${configure.cc} \
                    CWFLAGS=\"${configure.cflags}\"

destroot {
    xinstall -m 755 ${worksrcpath}/${name} ${destroot}${prefix}/bin

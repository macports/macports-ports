package	require port 1.0
portname	libsdl_image
portversion	1.2.2
categories	graphics
maintainers	leimy@opendarwin.org
description	Add on library for libSDL handling several image formats
master_sites	http://www.libsdl.org/projects/SDL_image/release/
distname	SDL_image-${portversion}
checksums	${distfiles} md5 d07cb8f3f0e8bbb645ef8369d96eb7db
depends_lib	lib:libSDL:graphics/libsdl \
		lib:libpng:graphics/libpng \
		lib:libjpeg:graphics/libjpeg
configure.args	--with-sdl-prefix=${prefix} --prefix=${prefix}

contents	include/SDL/SDL_image.h \
		bin/showimage \
		lib/libSDL_image.la \
		lib/libSDL_image.a 

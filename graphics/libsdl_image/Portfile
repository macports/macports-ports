package	require port 1.0
portname	SDL_image
portversion	1.2.2
categories	graphics
maintainers	leimy@opendarwin.org
description	"Add on library for libSDL handling several image formats"
master_sites	http://www.libsdl.org/projects/SDL_image/release/
distname	${portname}-${portversion}
checksums	SDL_image-1.2.2.tar.gz md5 d07cb8f3f0e8bbb645ef8369d96eb7db
worksrcdir	${portname}-${portversion}
depends_lib	lib:libSDL:graphics/libsdl 
depends_lib	lib:libpng:graphics/libpng 
depends_lib	lib:libjpeg:graphics/libjpeg
configure	{
		system "cd ${workpath}/${portname}-${portversion}; \
		./configure --with-sdl-prefix=/opt/local/ --prefix=/opt/local"
		}
configure.type	gnu
contents	include/SDL/SDL_image.h \
		bin/showimage \
		lib/libSDL_image.la \
		lib/libSDL_image.a 

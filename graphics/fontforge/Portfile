    depends_lib-append      port:python310
    configure.args-replace  -DENABLE_PYTHON_EXTENSION=False \
                            -DENABLE_PYTHON_EXTENSION=True
    configure.args-replace  -DENABLE_PYTHON_SCRIPTING=False \

PortSystem              1.0
PortGroup               github 1.0

# Download distfiles from GitHub mirror because fetching from svn keeps being
# problematic.
github.setup            leahneukirchen netpbm-mirror 5991a720c260e171c145d035014609f18cb2eaf3
name                    netpbm
version                 10.98.02
svn.revision            4327
set source_branch       advanced
distname                ${source_branch}-r${svn.revision}
set source_distfile     ${distfiles}

set userguide_commit    61c296305814a003d4e2fad1bf8b165357eb4c79
set userguide_revision  4296
set userguide_branch    userguide
set userguide_distname  ${userguide_branch}-r${userguide_revision}
set userguide_distfile  ${userguide_distname}${extract.suffix}

checksums               ${source_distfile} \
                        rmd160  39e93c8a27333b7691e2a71714b09eea0b574484 \
                        sha256  7ed7fdfc8cae0a11f15ace63715296917a4a1f61017c06f3d09ead2d39d83320 \
                        size    2942964 \
                        ${userguide_distfile} \
                        rmd160  89e74d7b5268727707a4e15c27f65c8e6a65da33 \
                        sha256  30a422fb207f9fd02a635a9c75cbb0b24293ca2d7de8f947866ee67ce41dadde \
                        size    1809300

categories              graphics
platforms               darwin freebsd linux
maintainers             {ryandesign @ryandesign} openmaintainer

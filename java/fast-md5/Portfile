checksums		md5     30b98b28652c6eb97270e89119f563f0 \
				sha1    7339e45977adeb78f7506d70f2c6901c81decd22 \
				rmd160  0f58b021fff2a9bf19cbde07f3dadd488229ab0a

use_zip			yes

depends_build	bin:ant:apache-ant


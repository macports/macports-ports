    livecheck.regex  {"release_name": "jdk(\d+u\d+)-b\d+"}
} else {
    livecheck.url    https://github.com/AdoptOpenJDK/openjdk-jdk${major}u/releases
    livecheck.regex  (?c)jdk-(\[0-9.\]+)
}


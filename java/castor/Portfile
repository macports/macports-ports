# $Id: Portfile,v 1.1 2004/10/07 11:53:54 mww Exp $

PortSystem 1.0

name			castor
version			0.9.5.3
categories		java
platforms		darwin
maintainers		mww@opendarwin.org
description		data binding framework for Java
long_description	Castor is an Open Source data binding framework for \
				Java(tm). It's the shortest path between Java objects, XML \
				documents and relational tables. Castor provides Java-to-XML \
				binding, Java-to-SQL persistence, and more.

homepage		http://castor.exolab.org/
master_sites	ftp://ftp.exolab.org/pub/castor/castor_0.9.5.3/
extract.suffix	-src.tgz
checksums		md5 ca93b19f1300a5701d8401bcfb333402

use_configure	no

build.cmd		java -classpath lib/ant_1.5.jar:lib/xerces-J_1.4.0.jar:build/classes/ -Dant.home=lib org.apache.tools.ant.Main "$@" -buildfile src/build.xml
build.target	jar

destroot	{
	xinstall -m 755 -d ${destroot}${prefix}/share/java
	xinstall -m 644 -W ${worksrcpath}/dist castor-0.9.5.3-xml.jar \
		castor-0.9.5.3.jar ${destroot}${prefix}/share/java
}

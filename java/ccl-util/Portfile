build.env		ANT_OPTS=-Dfile.encoding=iso-8859-1
#build.args-append		-debug

destroot	{
	xinstall -m 755 -d ${destroot}${prefix}/share/java
	xinstall -m 644 ${worksrcpath}/lib/${realname}.jar \
		${destroot}${prefix}/share/java/${realname}.jar
}

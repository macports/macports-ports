build                   {}

destroot {
    # Create the target java directory
    xinstall -d ${destroot}${prefix}/share/java/${name}

    # Copy over the needed elements of our directory tree
    copy {*}[glob ${worksrcpath}/*] ${destroot}${prefix}/share/java/${name}
}

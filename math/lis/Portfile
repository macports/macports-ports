mpi.setup           require_fortran

# respect MacPorts compiler
patchfiles-append   patch-compiler.diff

# configure script sets optimization flag
configure.optflags-delete -Os

configure.args-append \
                    --enable-shared \
                    --enable-f90 \
                    --enable-complex \
                    --enable-saamg

if {[mpi_variant_isset]} {
    configure.args-append \
                    --enable-mpi
}

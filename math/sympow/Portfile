post-patch {
    reinplace {s|VERBOSE_DEFAULT 1|VERBOSE_DEFAULT 0|} ${worksrcpath}/sympow.h
}

post-destroot {
    xinstall -d -m 755 ${destroot}${prefix}/share/doc/${name}
    xinstall    -m 644 -W ${worksrcpath} COPYING README.md ${destroot}${prefix}/share/doc/${name}
}

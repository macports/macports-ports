# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:filetype=tcl:et:sw=4:ts=4:sts=4

PortSystem      1.0

name            GiNaC
version         1.8.1
revision        0
categories      math
platforms       darwin
license         GPL-2
maintainers     {mps @Schamschula} openmaintainer
description     GiNaC is C++ library that provides a set of algebraic capabilities.
long_description \
                GiNaC is an iterated and recursive acronym for GiNaC is Not a CAS, where \
                CAS stands for Computer Algebra System. Its design is revolutionary in a \
                sense that contrary to other CAS it does not try to provide extensive \
                algebraic capabilities and a simple programming language but instead \
                accepts a given language (C++) and extends it by a set of algebraic \
                capabilities. 

use_bzip2       yes
distname        ginac-${version}

homepage        http://www.ginac.de/
master_sites    ${homepage}

checksums       rmd160  b921b63ea124eeac8f3e3e95fe4d9ede19dbee95 \
                sha256  f1695dbd6b187061ef3fba507648c9d6dba438f733b058c16f9278cbdcf5e1ab \
                size    1128166

compiler.cxx_standard  2011

depends_build   port:pkgconfig
depends_lib     port:readline \
                port:cln

test.run        yes
test.target     check

variant python37 conflicts python38 python39 description {Build using Python 3.7} {
    depends_build-append \
                port:python37
    configure.env   \
                PYTHON3=${prefix}/bin/python3.7
}

variant python38 conflicts python37 python39 description {Build using Python 3.8} {
    depends_build-append \
                port:python38
    configure.env   \
                PYTHON3=${prefix}/bin/python3.8
}

variant python39 conflicts python37 python38 description {Build using Python 3.9} {
    depends_build-append \
                port:python38
    configure.env   \
                PYTHON3=${prefix}/bin/python3.9
}

if {![variant_isset python37] && ![variant_isset python38] && ![variant_isset python39]} {
    default_variants +python39
}

livecheck.type      regex
livecheck.url       ${homepage}News.html
livecheck.regex     "Version (\[0-9.\]+) released"

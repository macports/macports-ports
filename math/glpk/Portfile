                sha1 50c5e3a876a76d98b9659cd06e1058a27da3c5c7 \
                rmd160 d1f9c001842337743cad906a6be4e7402e7b931e

depends_lib     port:gmp

test.run        yes
test.target     check

livecheck.check regex

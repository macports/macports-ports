homepage            http://octave.sourceforge.net/
master_sites        sourceforge:octave

distname            linear-algebra-1.0.6

checksums \
            linear-algebra-1.0.6.tar.gz \
                md5     cb07f1a877c6de3795cb33e27c9a037f \

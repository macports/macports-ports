depends_lib-append  port:octave 

post-destroot {
    move ${destroot}${prefix}/share/octave/octave_packages ${destroot}${prefix}/share/octave/octave_packages_${name}
}

post-activate {
    system "octave --eval \"pkg rebuild\""
}

livecheck.check regex

                    size    2346368


# autoreconf to reconfigure for intltool
use_autoreconf      yes
autoreconf.args     -fvi

depends_build-append \
                    port:intltool \
                    port:pkgconfig

depends_lib-append \
                    port:libqalculate \
                    port:gtk3

notes-append "Graphical plotting is enabled by installing gnuplot.\n"

+	$(CXX) $(CPPFLAGS) $(LIB_CFLAGS) $(LIB_LDFLAGS) -dynamiclib \
+		-install_name $(libdir)/$@ \
+		-current_version $(VERSION) \
+		-compatibility_version $(SHVER).$(VMINOR) \
+		-o $@ svm.cpp

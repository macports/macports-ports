+
+svm-predict: svm-predict.c $(DYLIBFILE)
+	$(CC) $(CPPFLAGS) $(EXE_CFLAGS) $(EXE_LDFLAGS) svm-predict.c -o $@ -lm -lsvm -lstdc++
+
+svm-train: svm-train.c $(DYLIBFILE)
+	$(CC) $(CPPFLAGS) $(EXE_CFLAGS) $(EXE_LDFLAGS) svm-train.c -o $@ -lm -lsvm -lstdc++
+

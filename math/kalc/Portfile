PortSystem          1.0
PortGroup           cargo   1.0
PortGroup           github  1.0

github.setup        bgkillas kalc 1.5.0 v
github.tarball_from archive
revision            0

description         \
    a complex numbers, 2d\/3d graphing, arbitrary precision, vector, matrix, \
    tui calculator with real-time output

long_description    {*}${description}

categories          math
installs_libs       no
license             GPL-3
maintainers         {gmail.com:herby.gillot @herbygillot} \
                    openmaintainer

checksums           ${distname}${extract.suffix} \
                    rmd160  4d295c983d4800e7f320cb08c41b6eb4dfae39c1 \
                    sha256  2f7c415536a60f113fc1c335afab39d4fb89fa77bdf75eb02fad4e0f8208be32 \
                    size    56706

build.env-append    DEP_GMP_LIB_DIR=${prefix}/lib \
                    DEP_GMP_INCLUDE_DIR=${prefix}/include \
                    M4=${prefix}/bin/gm4

depends_build-append \
                    port:autoconf \
                    port:automake \
                    port:m4

post-build {
    system -W ${worksrcpath} "./target/[cargo.rust_platform]/release/${name} --man > ${name}.1"
}

destroot {
    xinstall -m 0755 \
        ${worksrcpath}/target/[cargo.rust_platform]/release/${name} \
        ${destroot}${prefix}/bin/

    xinstall -m 0644 ${worksrcpath}/${name}.1 ${destroot}${prefix}/share/man/man1
    xinstall -d ${destroot}${prefix}/share/${name}
    foreach _file {kalc.config kalc.vars README.md LICENSE} {
        copy ${worksrcpath}/${_file} ${destroot}${prefix}/share/${name}/
    }
}


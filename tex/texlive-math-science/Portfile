pre-activate {
    # Handle conflicts for TL2017 upgrade
    if { ![catch {set vers [lindex [registry_active texlive-latex-extra] 0]}]
         && ([vercmp [lindex $vers 1] 44430] < 0) } {
        registry_deactivate_composite texlive-latex-extra "" [list ports_nodepcheck 1]
    }
}



post-activate {
    texlive.mktexlsr
}

post-deactivate {
    texlive.mktexlsr
}

livecheck.type  regex
livecheck.url   http://sourceforge.net/projects/biblatex-biber/files/biblatex-biber/
livecheck.regex {a href="/projects/biblatex-biber/files/biblatex-biber/([0-9\.]+)/"}

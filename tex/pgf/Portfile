destroot {
    set r ${worksrcpath}
    file mkdir ${destroot}${texlive_texmfports}/
    file copy ${r}/doc ${destroot}${texlive_texmfports}/
    file copy ${r}/source ${destroot}${texlive_texmfports}/
    file copy ${r}/tex ${destroot}${texlive_texmfports}/
}


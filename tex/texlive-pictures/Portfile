pre-activate {
    if {![catch {set vers [lindex [registry_active texlive-latex-extra] 0]}]
        && [rpm-vercomp [lindex $vers 1] 19538] < 0} {
        registry_deactivate texlive-latex-extra "" [list ports_nodepcheck 1]
    }
}


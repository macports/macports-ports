    xinstall -W ${worksrcpath} -m 0644 detex.1 ${destroot}${prefix}/share/man/man1/
    
    set docdir ${destroot}${prefix}/share/doc/${name}
    xinstall -d ${docdir}
    xinstall -W ${worksrcpath} -m 0644 ChangeLog COPYRIGHT README ${docdir}

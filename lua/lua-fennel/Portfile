if {${subport} ne ${name}} {
    select.entries  [list ${luarocks.module} ${subport} ${subport}]

    depends_run-append \
                    port:fennel_select

    notes "
To make this the default fennel (i.e., the version run by\
the 'fennel' command), run:

    sudo port select --set fennel ${subport}
"

configure.args  --disable-python

perl5.branches  5.34

depends_build   port:intltool \
                port:pkgconfig
depends_lib     path:lib/pkgconfig/gtk+-3.0.pc:gtk3 \
                port:libxfce4util \
                port:libxfce4ui \
                port:p${perl5.major}-uri


use_bzip2	yes
checksums	md5 bd3cb0648b49be1f146fc4f675606176 \
		sha1 218f0e61e1d105f1f9aa898a56837f78ce65aaac \
		rmd160 0833a0681d5c952077bf2f220cd2f07b2df2904f


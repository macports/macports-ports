# $Id: Portfile,v 1.12 2006/03/13 10:26:22 rhwood Exp $
PortSystem 1.0
name		gnome-doc-utils
version		0.5.3
description	GNOME document utils.
long_description \
       gnome-doc-utils is a collection of documentation utilities \
	for the Gnomeproject. Notably, it contains utilities for building \
	documentation andall auxiliary files in your source tree, and it \
	contains the DocBookXSLT stylesheets that were once distributed with Yelp.
maintainers	gnome-darwinports@opendarwin.org
categories	gnome
platforms	darwin 
homepage	http://www.gnome.org/
master_sites    gnome:sources/gnome-doc-utils/0.5/

checksums	md5 54c01d6cc947d3b0d50ea3a6b0e5d00d \
		sha1 a5092fe41bd4652c2e87b3e1fe46c8802cdbca5f \
		rmd160 7bb3a1a70b8dedad9e7e21f84362fcb92bc52ea5

use_bzip2 	yes

depends_lib		port:libxml2 port:libxslt port:py-libxml2
depends_build	port:scrollkeeper

configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include"
configure.args	--disable-scrollkeeper

post-install {
	system "scrollkeeper-update"
}

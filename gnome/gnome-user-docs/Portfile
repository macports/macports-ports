installs_libs       no
homepage            http://www.gnome.org/
master_sites        gnome:sources/${name}/${branch}/

use_xz              yes

checksums           rmd160  0a63ec96261883f58da84f9dca87c6a1aa1e6ed8 \
                    sha256  ccb8043cd9cbe104a3f4ea72a2272fb764b5a6a0d2905ed2c1100d997b9130c5

depends_build       port:pkgconfig \
                    port:libxml2 \
                    port:itstool

notes "
This port provides the following documents:
    - GNOME Desktop System Administration Guide (yelp help:system-admin-guide)
    - GNOME Help (yelp help:gnome-help)
"


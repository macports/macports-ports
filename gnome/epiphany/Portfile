depends_build-append \
                    port:pkgconfig \
                    port:intltool \
                    port:gnome-common \
                    port:autoconf \
                    port:automake \
                    port:libtool \
                    port:appstream-glib \
                    port:itstool \
                    port:yelp-tools \
                    port:python36

depends_lib-append  port:desktop-file-utils \
                    port:gtk3 \
                    port:gnome-desktop \
                    port:libxslt\
                    port:libsoup \
                    port:libsecret \
                    port:port:libnotify \
                    port:gsettings-desktop-schemas \
                    port:sqlite3 \
                    port:gcr \
                    port:avahi \
                    port:xorg-libX11 \
                    port:iso-codes \

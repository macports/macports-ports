# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           meson 1.0
PortGroup           gobject_introspection 1.0

name                gjs-devel
conflicts           gjs
set my_name         gjs

version             1.74.1
revision            1
set branch          [join [lrange [split ${version} .] 0 1] .]

maintainers         {devans @dbevans} {mascguy @mascguy} openmaintainer
categories          gnome
platforms           darwin
license             LGPL-2.1+

description         GNOME JavaScript/Spidermonkey bindings
long_description    ${description}

homepage            https://wiki.gnome.org/Projects/Gjs
master_sites        gnome:sources/${my_name}/${branch}/
distname            ${my_name}-${version}
dist_subdir         ${my_name}
use_xz              yes

checksums           rmd160  1dc4e4d1b5ad9721b108040fcf6073f09f20451f \
                    sha256  f21f9cd3337a672a44c7e64bf9a8d8ad77c1b88b952b2b6184c7af9b1f3ef459 \
                    size    638536

depends_build-append \
                    port:pkgconfig \
                    port:python310

# Currently requires gobject-introspection-devel, and either glib2-devel or glib2-upstream for GBindingGroup
depends_lib-append \
                    path:lib/pkgconfig/gtk+-3.0.pc:gtk3 \
                    port:glib2-devel \
                    port:dbus \
                    port:libffi \
                    path:lib/pkgconfig/cairo.pc:cairo \
                    port:mozjs102 \
                    port:readline

compiler.cxx_standard \
                    2017

# LD_LIBRARY_PATH => DYLD_LIBRARY_PATH
patchfiles-append   patch-gjs-test.diff

# The gobject_introspection PG needs an 'introspection' option
patchfiles-append   patch-gjs-meson_options.diff

post-patch {
    reinplace "s|^#!/usr/bin/env python3|#!${configure.python}|" \
        build/compile-gschemas.py \
        build/symlink-gjs.py
}

configure.python    ${prefix}/bin/python3.10

# profiler currently only supported on Linux
configure.args-append \
                    -Dprofiler=disabled \
                    -Dbsymbolic_functions=false \
                    -Dskip_gtk_tests=true \
                    -Dskip_dbus_tests=true

gobject_introspection yes

# Note that a few tests will fail because the "macports" user
# does not have permission to open a display, issuing warnings like:
# Gtk-WARNING **: 07:57:17.013: cannot open display: /tmp/launch-vBCmUl/org.macports:0
test.run            yes
test.target         test

livecheck.type      gnome
livecheck.name      ${my_name}

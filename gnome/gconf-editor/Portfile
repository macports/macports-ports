		lib:libORBit-2.0:orbit2 lib:libgtk-2:gtk2 \
		lib:libatk:atk lib:libexpat:expat \
		lib:libfontconfig:fontconfig lib:libfreetype:freetype \
		lib:libintl:gettext lib:libgconf-2:gconf \
		lib:libIDL:libidl lib:libiconv:libiconv lib:libxml2:libxml2 \
		lib:liblinc:linc lib:libtiff:tiff \
		lib:libpng12:libpng lib:libpopt:popt lib:libpango:pango
depends_build   bin:pkg-config:pkgconfig

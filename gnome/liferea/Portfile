checksums           rmd160  1f6df1044b2e65e9cafce0653bc0f1f88efa0678 \
                    sha256  95cd13b8b1efb8e1d560bf32b861b6c1d10341520a84866905050a961c10c5cf \
                    size    1530039

depends_build       port:pkgconfig \
                    port:intltool \
                    port:autoconf \
                    port:automake \
                    port:libtool

depends_lib         port:desktop-file-utils \
                    port:gtk3 \
                    port:libxml2 \
                    port:libxslt \

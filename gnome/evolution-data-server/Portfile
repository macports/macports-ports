PortSystem          1.0
PortGroup           cmake 1.1

name                evolution-data-server
version             3.52.1
revision            0

categories          gnome
license             LGPL-2+
maintainers         {mascguy @mascguy} openmaintainer

description         Addressbook and calender libs for GNOME.
long_description    Evolution Data Server provides a central location for \
                    addressbook and calendar in the GNOME Desktop.
homepage            https://wiki.gnome.org/Apps/Evolution

set branch          [join [lrange [split ${version} .] 0 1] .]
master_sites        gnome:sources/${name}/${branch}/
use_xz              yes

checksums           rmd160  d4915d4881e648cb87227d9f13e47b9ebe637110 \
                    sha256  825b3d7d5468440a67d11dd2a23933960c07b9eecc797bb125843cb2c870a348 \
                    size    5048124

depends_build-append \
                    port:pkgconfig \
                    port:gettext \
                    port:intltool \
                    port:gperf

depends_lib-append \
                    path:lib/pkgconfig/gtk+-3.0.pc:gtk3 \
                    port:gettext-runtime \
                    port:gcr \
                    path:lib/pkgconfig/icu-uc.pc:icu \
                    port:kerberos5 \
                    port:libcanberra \
                    port:libgdata \
                    port:libical \
                    port:libiconv \
                    port:libsecret \
                    path:lib/pkgconfig/libsoup-2.4.pc:libsoup \
                    port:libxml2 \
                    port:nss \
                    port:nspr \
                    path:lib/libldap.dylib:openldap \
                    port:sqlite3 \
                    port:db53

depends_run-append \
                    port:perl5

patchfiles-append   patch-cmake-find-our-build-tools.diff
patchfiles-append   patch-remove-linker-flag-no-undefined.diff

# libphonenumber-cpp uses C++11 extensions but evolution-data-server doesn't assert -std=c++11
# this causes configuration failures when testing for libphonenumber on at least Mojave/Xcode 10
compiler.cxx_standard \
                    2011
configure.cxxflags-append \
                    -std=c++11

configure.args-append \
                    -DENABLE_SCHEMAS_COMPILE=OFF \
                    -DENABLE_GTK_DOC=OFF \
                    -DWITH_OPENLDAP=${prefix} \
                    -DENABLE_INSTALLED_TESTS=OFF \
                    -DENABLE_INTROSPECTION=OFF \
                    -DENABLE_SMIME=ON \
                    -DENABLE_GTK=ON \
                    -DENABLE_GTK4=OFF \
                    -DENABLE_EXAMPLES=OFF \
                    -DENABLE_GOA=OFF \
                    -DENABLE_IPV6=ON \
                    -DENABLE_WEATHER=OFF \
                    -DENABLE_GOOGLE=ON \
                    -DENABLE_OAUTH2_WEBKITGTK=OFF \
                    -DENABLE_VALA_BINDINGS=OFF \
                    -DLIBEXEC_INSTALL_DIR=${prefix}/libexec/${name} \
                    -DWITH_LIBDB_CFLAGS="-I${prefix}/include/db53" \
                    -DWITH_LIBDB_LIBS="-L${prefix}/lib/db53 -ldb"

# port nss is not universal
universal_variant   no

variant phonenumber description {Phone number parsing/validation using libphonenumber} {
    depends_lib-append \
                    port:libphonenumber-cpp
    configure.cxxflags-append \
                    -DI18N_PHONENUMBERS_USE_BOOST
    configure.args-append \
                    -DWITH_PHONENUMBER=${prefix}/lib
}

# TODO: Need to fix CMake detection for 'libphonenumber-cpp', before we can enable
# See: https://trac.macports.org/ticket/63788
#default_variants    +phonenumber

variant weather description {Enable support for weather info} {
    depends_lib-append \
                    port:libgweather
    configure.args-delete \
                    -DENABLE_WEATHER=OFF
}

# TODO: add a port for libgweather4, which is the requirement now.
# default_variants-append \
#                     +weather

variant google_online description {Enable Google authorization and online accounts} {
    depends_lib-append \
                    port:gnome-online-accounts \
                    port:json-glib \
                    path:lib/pkgconfig/webkit2gtk-4.0.pc:webkit2-gtk
    configure.args-delete \
                    -DENABLE_GOA=OFF \
                    -DENABLE_OAUTH2_WEBKITGTK=OFF
}

post-destroot {
    ln -s ${prefix}/lib/evolution-data-server/libedbus-private.dylib ${destroot}${prefix}/lib
}

post-activate    {
    system "${prefix}/bin/glib-compile-schemas ${prefix}/share/glib-2.0/schemas"
}

# google auth and google online accounts require webkit2gtk-4.0 >= 2.11.91
# https://trac.macports.org/ticket/69798
if {${configure.cxx_stdlib} eq "libc++"} {
    default_variants-append \
                    +google_online
}

livecheck.type      gnome

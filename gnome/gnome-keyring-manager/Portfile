# $Id$

PortSystem	1.0

name			gnome-keyring-manager
version		2.18.0
revision	0
description	A keyring management program for the GNOME Desktop.
long_description        ${description}
maintainers	rhwood@macports openmaintainer@macports.org
categories	gnome
platforms	darwin 
homepage	http://www.gnome.org/
master_sites    gnome:sources/${name}/2.18/
checksums	md5  05183cdea9d933cb1e9a8f4202c6ffc0 \
			sha1 aad959b7e2f13c880fbea336ab903845daef110b \
			rmd160 7211106e0227de7e1e15ebb373510b7005d1396c
use_bzip2 	yes

configure.args  --mandir=${prefix}/share/man \
		--disable-scrollkeeper
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" \
                CFLAGS="-no-cpp-precomp -flat_namespace -undefined suppress" 

depends_lib	port:gnome-keyring \
		port:dbus \
		port:dbus-glib

post-activate	{
	system "scrollkeeper-update"
}

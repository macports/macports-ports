# $Id: Portfile,v 1.12 2006/03/29 11:27:05 rhwood Exp $
PortSystem 1.0
name		libgsf
version		1.14.0
description	A i/o abstraction for dealing with file formats
long_description        libgsf aims to provide an efficient extensible \
			i/o abstraction for dealing with different \
			structured file formats.
maintainers	macports-dev@lists.macosforge.org
categories	gnome
platforms	darwin 
homepage	http://www.gnome.org/
master_sites    gnome:sources/libgsf/1.14/
checksums	md5 2d3b112a2c6e7e1740306c32b1ebf6e6 \
		sha1 89ab34725cf00f1380f204415ec547b19225c674 \
		rmd160 184210ca19ecd473c00c6cf84d89b972fdddb1c2
depends_lib     lib:libgnomevfs-2:gnome-vfs
use_bzip2 	yes
configure.args  --mandir=${prefix}/share/man --with-gnome
configure.env   CPPFLAGS="-L${prefix}/lib -I${prefix}/include" 

post-destroot	{
	system "cd ${destroot}${prefix}/lib
		ln -s libgsf-1.114.0.0.dylib libgsf-1.1.dylib
		ln -s libgsf-gnome-1.114.0.0.dylib libgsf-gnome-1.1.dylib"
}

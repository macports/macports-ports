# $Id$

PortSystem          1.0
PortGroup           gobject_introspection 1.0

name                totem-pl-parser
version             3.10.5
set branch          [join [lrange [split ${version} .] 0 1] .]
categories          gnome
license             LGPL-2+
maintainers         devans openmaintainer
description         Gnome Playlist parser
long_description    totem-pl-parser is a simple GObject-based library to parse \
                    a host of playlist formats, as well as save those

homepage            https://wiki.gnome.org/Apps/Videos
platforms           darwin
master_sites        gnome:sources/${name}/${branch}/

use_xz              yes

checksums           rmd160  8e3b2594d568b7641747c79ea9e1c44c1dd59dbd \
                    sha256  a746580f61b678029dadaa824a6923445afd944d12c40c5fccb27159799c8137

depends_build       port:pkgconfig \
                    port:intltool \
                    port:gtk-doc \
                    port:gnome-common \
                    port:autoconf \
                    port:automake \
                    port:libtool

depends_lib         port:libsoup \
                    port:libarchive \
                    port:libgcrypt \
                    port:libquvi \
                    port:libxml2 \
                    port:gmime

gobject_introspection yes

patchfiles          patch-plparse-plparser.symbols.diff

# reconfigure using upstream autogen.sh for intltool 0.51 compatibility

post-patch {
    xinstall -m 755 ${filespath}/autogen.sh ${worksrcpath}
}

configure.cmd       ./autogen.sh

configure.args      --enable-libarchive \
                    --enable-libgcrypt \
                    --enable-quvi \
                    --disable-silent-rules

livecheck.type      gnome

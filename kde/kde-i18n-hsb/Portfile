# $Id$

PortSystem 1.0
name           kde-i18n-hsb
version        3.5.1
categories     x11
maintainers    nomaintainer@macports.org
description    KDE upper-sorbian language files.
long_description ${description}
platforms      darwin

depends_lib    port:kdelibs3
master_sites   kde:stable/${version}/src/kde-i18n
use_bzip2      yes
checksums      md5 0b0f7122386d2774cc7f6df4b74559db

pre-configure {
    reinplace "s|doc/HTML|doc/kde|g" ${worksrcpath}/configure
}
configure.env  CC=gcc-3.3 CXX=g++-3.3 \
               HOME=/tmp \
               KDEDIR=${prefix}
configure.args --without-arts
post-configure {
    system "find ${worksrcpath} -name \*.bz2 -exec touch {} \\;"
}
build.env	   ${configure.env}
build.args     -j2

destroot.args  -j2
post-destroot {
    xinstall -d -m 755 ${destroot}${prefix}/share/doc/kde-installed-packages
    system "touch \
        ${destroot}${prefix}/share/doc/kde-installed-packages/kde-i18n-upper-sorbian"
}

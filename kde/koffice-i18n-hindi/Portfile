# $Id$

PortSystem      1.0
name            koffice-i18n-hindi
version         1.5.2
categories      kde
maintainers     nomaintainer
description     KOffice hindi language files.
long_description ${description}
platforms       darwin
homepage        http://www.koffice.org/
master_sites    kde:stable/koffice-${version}/src/koffice-l10n/:koffice163
#               opendarwin::koffice163
distname        koffice-l10n-hi-${version}
distfiles       ${distname}.tar.bz2:koffice163
use_bzip2       yes
checksums       md5 95a4edd9df2b1c4744ae0b590d68822a
depends_lib     port:koffice

patch {
    reinplace "s|doc/HTML|doc/kde|g" ${worksrcpath}/configure
}

configure.env   HOME=${workpath} KDEDIR=${prefix}
configure.args  --without-arts

build.env       ${configure.env}

post-destroot {
    xinstall -d -m 755 ${destroot}${prefix}/share/doc/kde-installed-packages
    system "touch ${destroot}${prefix}/share/doc/kde-installed-packages/koffice-i18n-hindi"
}

universal_variant   no

livecheck.type  none

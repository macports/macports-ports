                    port:libogg \
                    port:libvorbis \
                    port:ffmpeg \
                    port:taglib

configure.args-append   -DBUILD_dragonplayer=ON \
                        -DBUILD_juk=ON \
                        -DBUILD_kmix=OFF \
                        -DWITH_Taglib=ON \
                        -DWITH_PulseAudio=OFF \
                        -DWITH_MusicBrainz3=OFF \
                        -DWITH_Xine=OFF \
                        -DWITH_TunePimp=OFF \
                        -DWITH_Cdparanoia=OFF
universal_variant   no


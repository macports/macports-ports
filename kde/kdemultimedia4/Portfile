                        -DBUILD_dragonplayer=ON \
                        -DBUILD_juk=ON \
                        -DBUILD_kmix=OFF \
                        -DWITH_Taglib=ON \
                        -DWITH_MusicBrainz=OFF \
                        -DWITH_TunePimp=OFF \
                        -DWITH_Xine=OFF \
                        -DWITH_Cdparanoia=OFF

PortSystem          1.0

name                R-CRAN-recommended
version             1.0.0
revision            1
categories          R
maintainers         {i0ntempest @i0ntempest} {@barracuda156 gmail.com:vital.had} openmaintainer
license             {GPL-2 GPL-3}
description         Meta-port for CRAN-recommended R packages
long_description    This meta-port installs R packages recommended by CRAN. \
                    Tarballs from CRAN are used.
distfiles
supported_archs     noarch
platforms           any

depends_build       port:R
depends_run         port:R
depends_lib         port:R-boot \
                    port:R-class \
                    port:R-cluster \
                    port:R-codetools \
                    port:R-foreign \
                    port:R-KernSmooth \
                    port:R-lattice \
                    port:R-MASS \
                    port:R-Matrix \
                    port:R-mgcv \
                    port:R-nlme \
                    port:R-nnet \
                    port:R-rpart \
                    port:R-spatial \
                    port:R-survival

use_configure       no
build               { }

destroot        {
    file mkdir ${destroot}${prefix}/share/doc/
    system "echo ${long_description} > ${destroot}${prefix}/share/doc/${name}.README.txt"
}

livecheck.type      none

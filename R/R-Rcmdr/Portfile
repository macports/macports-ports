PortSystem          1.0
PortGroup           R 1.0

R.setup             cran r-project Rcmdr 2.9-2
revision            1
maintainers         {@barracuda156 gmail.com:vital.had} openmaintainer
license             GPL-2+
description         R Commander
long_description    A platform-independent basic-statistics GUI (graphical user interface) for R, \
                    based on the tcltk package.
homepage            https://socialsciences.mcmaster.ca/jfox/Misc/Rcmdr
checksums           rmd160  be261802b2439861167c19d07d02bbfdf9bcf490 \
                    sha256  885729b643bb4f84f171f5e78134f8de2e5b06a3d3ca2877e9478afb702cac9c \
                    size    8406345
supported_archs     noarch
platforms           {darwin any}

depends_lib-append  port:R-abind \
                    port:R-car \
                    port:R-effects \
                    port:R-lme4 \
                    port:R-RcmdrMisc \
                    port:R-relimp \
                    port:R-tcltk2

pre-fetch {
    if {![catch {set result [active_variants R "tcltk"]}]} {
        if !{$result} {
            ui_msg "Error: to install ${name}, R should be installed with +tcltk variant."
            return -code error "Required variant missing."
        }
    }
}

depends_test-append port:R-aplpack \
                    port:R-colorspace \
                    port:R-e1071 \
                    port:R-Hmisc \
                    port:R-knitr \
                    port:R-leaps \
                    port:R-lmtest \
                    port:R-markdown \
                    port:R-multcomp \
                    port:R-nortest \
                    port:R-readxl \
                    port:R-rgl \
                    port:R-rmarkdown \
                    port:R-sem

test.run            yes

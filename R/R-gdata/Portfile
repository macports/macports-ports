platform darwin {
    if {${os.major} < 10 || (${os.major} == 10 && ${build_arch} eq "ppc")} {
        depends_run-append \
                    port:perl5
        configure.perl \
                    ${prefix}/bin/perl5
    }
}

depends_lib-append  port:R-gtools

depends_test-append port:R-RUnit

test.run            yes

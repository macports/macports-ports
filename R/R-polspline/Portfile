R.setup             cran cran polspline 1.1.22
revision            1
categories-append   math
maintainers         {@barracuda156 gmail.com:vital.had} openmaintainer
license             {GPL-2 GPL-3}
description         Polynomial spline routines
long_description    {*}${description}
checksums           rmd160  4be4017ae3fbe5eab737c246805390e53b540632 \
                    sha256  b2f2198f020d7d492a87bad2b58a6cc9ae91d95b7330dd12b9b1145c72d7457b \
                    size    264839
supported_archs     noarch

compilers.setup     require_fortran

# Unclear why, but this package may build for a wrong arch when Rosetta2 is present.
# See: https://github.com/macports/macports-ports/pull/17792#issuecomment-1444361340
patchfiles          patch-cflags.diff

# R is not universal at the moment.
post-patch {
    if {!(${universal_possible} && [variant_isset universal])} {
        reinplace "s,@CFLAGS@,-arch ${build_arch}," ${worksrcpath}/src/Makevars
    }
}

test.run            yes

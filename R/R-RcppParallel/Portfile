#                         TBB_INC=${prefix}include/tbb \
#                         TBB_LIB=${prefix}/lib

depends_test-append port:R-knitr \
                    port:R-Rcpp \
                    port:R-rmarkdown \
                    port:R-RUnit

test.run            yes

PortSystem          1.0
PortGroup           R 1.0

R.setup             cran madsyair neojags 0.1.1
revision            0
categories-append   math
maintainers         {@barracuda156 gmail.com:vital.had} openmaintainer
license             GPL-2
description         Neo-normal distributions family for Markov Chain Monte Carlo (MCMC) models in JAGS
long_description    {*}${description}
checksums           rmd160  e4140c411a8be15ff8a36754da5765ffd36ca414 \
                    sha256  7201f04acebcb37364b9d90d828ec082c7d8bd093e40498c4f0ac0a4ced33bab \
                    size    414245

# Retaining this in case configure is fixed by upstream, see below.
# depends_build-append \
                    port:pkgconfig
depends_lib-append  port:jags \
                    port:R-coda \
                    port:R-rjags \
                    port:R-runjags

# configure script has been designed to sabotage the build, and it does so neatly.
# https://github.com/madsyair/neojags/issues/1
# Guess what,
post-extract {
    delete ${worksrcpath}/configure
    move ${worksrcpath}/src/Makevars.in ${worksrcpath}/src/Makevars
}

# Instead, set everything needed in Makevars.
# Notice, JAGS 4.x is assumed.
patchfiles          patch-fix-Makevars.diff

post-patch {
    reinplace "s|@PREFIX@|${prefix}|g" ${worksrcpath}/src/Makevars
}

depends_test-append port:R-knitr \
                    port:R-markdown \
                    port:R-rmarkdown \
                    port:R-spelling \
                    port:R-testthat

test.run            yes

                    size    10450
supported_archs     noarch

depends_lib-append  port:R-dat \
                    port:R-magrittr \
                    port:R-stringr

depends_test-append port:R-covr \
                    port:R-knitr \
                    port:R-rmarkdown \
                    port:R-testthat

test.run            yes

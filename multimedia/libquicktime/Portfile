# $Id$

PortSystem 1.0

name			libquicktime
version			1.1.0
revision		1
categories		multimedia
platforms		darwin
maintainers		mww
description		library for reading and writing quicktime files
long_description	${description}

homepage		http://libquicktime.sourceforge.net/
master_sites		sourceforge
checksums		sha1 4e9bdbd0776a99e1bb7712a5c7cb38145c34f830

depends_lib		port:gettext port:jpeg port:libiconv port:libpng port:zlib port:ffmpeg port:faac port:faad2 port:libvorbis port:libogg port:lame

configure.args		--without-gtk --without-alsa \
			--with-libjpeg --with-libpng --with-ffmpeg \
			--with-vorbis=${prefix} \
			--with-libiconv-prefix=${prefix} \
			--with-libintl-prefix=${prefix} \
			--without-doxygen \
			--enable-gpl


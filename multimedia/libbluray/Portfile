use_bzip2           yes

depends_build       port:pkgconfig \
                    port:perl5

depends_lib         port:libxml2 \
                    port:fontconfig \
                    port:freetype

checksums           rmd160  9f1daefee5214950eb41c0b53d6b22e6682c4392 \

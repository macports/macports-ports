package require port 1.0
portname	fetch
portversion	4.6.2-RELEASE
categories	net
maintainers	eric@opendarwin.org
description	"The FreeBSD file fetching utility"
master_sites	http://www.opendarwin.org/~eric/
checksums	${distfiles} md5 45627db03b6cf89b8dabae6d815dcd9b
worksrcdir	${portname}
configure	{}
depends_lib	lib:libfetch.3:net/libfetch
build		{ cd ${workpath}/${worksrcdir}
		  system "bsdmake CFLAGS+=-I${prefix}/include \
		  LDADD+=-L${prefix}/lib\\ -lfetch" }
install		{ cd ${workpath}/${worksrcdir}
		  system "install -o root -m 755 -d ${prefix}/bin"
		  system "install -o root -m 644 fetch ${prefix}/bin"
		  system "install -o root -m 755 -d ${prefix}/man/man1"
		  system "install -o root -m 644 -c fetch.1 \
		  ${prefix}/man/man1" }

contents	bin/fetch \
		man/man1/fetch.1

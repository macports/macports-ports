PortSystem 1.0
name		fetch
version		4.6.2-RELEASE
categories	net
maintainers	eric@opendarwin.org
description	FreeBSD file fetching utility
platforms	darwin
use_bzip2	yes
master_sites	http://distfiles.opendarwin.org/
checksums	md5 08c3a2b57be775c1d630f5a9097451d1
worksrcdir	${portname}
configure	{}
depends_lib	lib:libfetch.3:libfetch
build.type	bsd
build.args	CFLAGS+=-I${prefix}/include LDADD+=-L${prefix}/lib\\ -lfetch

install		{ cd ${workpath}/${worksrcdir}
		  system "install -o root -m 755 -d ${destroot}${prefix}/bin"
		  system "install -o root -m 555 fetch ${destroot}${prefix}/bin"
		  system "install -o root -m 755 -d ${destroot}${prefix}/man/man1"
		  system "install -o root -m 644 -c fetch.1 \
		  ${destroot}${prefix}/man/man1" }


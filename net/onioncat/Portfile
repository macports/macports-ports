                    sha256  13e1762c8c542bf03ee46d68c836636f537a4365e42fc9c697f0afec91d6eaea \
                    size    149942

depends_run         port:tuntaposx \
                    path:bin/tor:tor

patchfiles          patch-src-ocatresolv.h.diff \
                    patch-fix-DESTDIR.diff


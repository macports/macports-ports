    # install doc files
    xinstall -d ${destroot}${prefix}/share/doc/${name}
    xinstall -m 644 -W ${worksrcpath} LICENSE RELEASE_NOTES README.md \
        ${destroot}${prefix}/share/doc/${name}
}


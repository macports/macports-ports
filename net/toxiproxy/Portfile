build {
    foreach bin {cmd cli} {
        system -W ${worksrcpath}/${bin} \
            "${build.env} ${go.bin} build -ldflags='-s -w -X github.com/Shopify/toxiproxy.Version=${version}'"
    }
}

destroot {
    xinstall -m 755 ${worksrcpath}/cmd/cmd ${destroot}${prefix}/bin/${name}-server
    xinstall -m 755 ${worksrcpath}/cli/cli ${destroot}${prefix}/bin/${name}-cli
}

github.livecheck.regex {([0-9.]+)}

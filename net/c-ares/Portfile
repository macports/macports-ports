                    sha256  912dd7cc3b3e8a79c52fd7fb9c0f4ecf0aaa73e45efda880266a2d6e26b84ef5 \
                    size    1017864

depends_build-replace \
                    path:bin/cmake:cmake port:cmake-bootstrap


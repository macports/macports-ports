# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:filetype=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           compiler_blacklist_versions 1.0
PortGroup           meson 1.0

name                gssdp
version             1.6.2
revision            0
license             LGPL
set branch          [join [lrange [split ${version} .] 0 1] .]
description         A GObject-based API for handling resource discovery and announcement over SSDP.
long_description    ${description}
maintainers         {devans @dbevans} openmaintainer
categories          net gnome
homepage            https://wiki.gnome.org/Projects/GUPnP
master_sites        gnome:sources/${name}/${branch}/

use_xz              yes

checksums           rmd160  ed9d1dc32b68ad9325c6823c976ec9e7459d25e4 \
                    sha256  410b376deeced9836b57f488f80052fe4a14f89e075b1ceccf28e51f490f9fb9 \
                    size    2081568

depends_build-append \
                    port:gtk-doc \
                    port:gnome-common \
                    port:pkgconfig

depends_lib-append  port:gobject-introspection \
                    port:libsoup \
                    path:bin/vala:vala

compiler.blacklist  *gcc-3.* *gcc-4.* {clang < 300}

# Beware: while not at all obvious, manpages requires pandoc; enabling it will break the build if pandoc is unavailable.
configure.args-append \
                    -Dexamples=false \
                    -Dgtk_doc=false \
                    -Dmanpages=false \
                    -Dsniffer=false

# Sniffer requires gtk4.
variant sniffer description "Enable Sniffer" {
    depends_lib-append \
                    port:path:lib/pkgconfig/gtk+-4.0.pc:gtk4
    configure.args-replace \
                    -Dsniffer=false \
                    -Dsniffer=true
}

livecheck.type      gnome

    size    7581994

if {${os.platform} eq "darwin" && ${os.major} < 13} {
    known_fail      yes
    pre-fetch {
        ui_error "${name} @${version} is only compatible with OS X 10.9 or later"
        return -code error "incompatible OS X version"
    }
}


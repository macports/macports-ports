# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           legacysupport 1.1

# clock_gettime
legacysupport.newest_darwin_requires_legacy 15

name                knot
version             3.0.2
revision            0
categories          net
license             GPL-3+
maintainers         {mps @Schamschula} openmaintainer
description         Knot DNS is a high-performance authoritative-only DNS server which \
                    supports all key features of the modern domain name system.
long_description    ${description}
platforms           darwin
homepage            https://www.knot-dns.cz
master_sites        https://secure.nic.cz/files/knot-dns/

use_xz              yes

checksums           rmd160  7cffb6b8b92ef54c928e59b2ff15a2c2dad2850c \
                    sha256  f813a5e53263ef51d0415508e1f7d33cfbb75a139ccb10a344ae5a91689933fb \
                    size    1313864

depends_build       port:pkgconfig \
                    port:py38-sphinx

depends_lib         port:fstrm \
                    port:gnutls \
                    port:libidn \
                    port:lmdb \
                    port:nghttp2 \
                    port:protobuf-c \
                    port:userspace-rcu

if {${os.platform} eq "darwin" && ${os.major} < 15} {
    known_fail          yes
    pre-fetch {
        ui_error "${name} ${version} requires macOS 10.11 or greater."
        return -code error "incompatible macOS version"
    }
}

configure.args      --disable-silent-rules

startupitem.create      yes
startupitem.netchange   yes
startupitem.executable  ${prefix}/sbin/knotd -c ${prefix}/etc/knot.conf

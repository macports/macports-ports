# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:et:sw=4:ts=4:sts=4

PortSystem      1.0
PortGroup       github 1.0
PortGroup       qt5 1.0
PortGroup       active_variants 1.1

github.setup    qbittorrent qBittorrent 4.2.1 release-
revision        0
categories      net
maintainers     {@i0ntempest me.com:szf1234} openmaintainer
platforms       darwin
license         GPL-2

description     The qBittorrent project aims to provide an open-source software alternative to ÂµTorrent.
long_description \
                qBittorrent is a bittorrent client programmed in C++ / Qt that uses \
                libtorrent (sometimes called libtorrent-rasterbar) by Arvid Norberg. \
                It aims to be a good alternative to all other bittorrent clients out \
                there. qBittorrent is fast, stable and provides unicode support as well \
                as many features.

homepage        https://www.qbittorrent.org

checksums       rmd160  63b72794c0560a1e0ef124e997e4b3d5201ffdcb \
                sha256  02ba3693fcf48ca8f163bbc0031049579c647c79465c45b64d104df9afa316be \
                size    7824454

depends_build-append \
                port:zlib \
                port:libtorrent-rasterbar

require_active_variants \
                libtorrent-rasterbar cxx14

qt5.depends_component \
                qttools

configure.args-append \
                --disable-gui

destroot {
        if {[variant_isset gui]} {
                exec ${qt_dir}/bin/macdeployqt ${worksrcpath}/src/qBittorrent.app >/dev/null 2>/dev/null
                exec /usr/bin/codesign --force --deep --sign - ${worksrcpath}/src/qBittorrent.app
                copy ${worksrcpath}/src/qBittorrent.app ${destroot}/Applications/MacPorts/
        } else {
                exec ${qt_dir}/bin/macdeployqt ${worksrcpath}/src/qbittorrent-nox.app >/dev/null 2>/dev/null
                exec /usr/bin/codesign --force --deep --sign - ${worksrcpath}/src/qbittorrent-nox.app
                copy ${worksrcpath}/src/qbittorrent-nox.app ${destroot}/Applications/MacPorts/
        }
}

variant gui description {Enable GUI} {
                configure.args-delete --disable-gui
                qt5.depends_component qtmacextras
}

variant python38 conflicts python37 python27 \
description {Enable torrent search engine using Python 3.8} {
                depends_lib-append port:python38
}

variant python37 conflicts python38 python27 \
description {Enable torrent search engine using Python 3.7} {
                depends_lib-append port:python37
}

variant python27 conflicts python38 python37 \
description {Enable torrent search engine using Python 2.7} {
                depends_lib-append port:python27
}

default_variants \
               +python38 +gui

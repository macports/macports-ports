# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0

name                libpcap
version             1.10.0
revision            0
categories          net
maintainers         {mps @Schamschula} openmaintainer
license             BSD
description         Packet Capture library
long_description    The Packet Capture library provides a high level \
                    interface to packet capture systems.  All packets \
                    on the network, even those destined for other hosts, \
                    are accessible through this mechanism.
homepage            http://www.tcpdump.org/
platforms           darwin
master_sites        ${homepage}release/

checksums           rmd160  4f593e236c1d73adfca7316e22964d146ce0a5f5 \
                    sha256  8d12b42623eeefee872f123bd0dc85d535b00df4d42e865f993c40f7bfc92b1e \
                    size    934559

configure.args      --disable-bluetooth \
                    --disable-universal \
                    --disable-dbus \
                    --enable-ipv6

depends_build       port:bison \
                    port:flex

post-destroot {
    set docdir ${destroot}${prefix}/share/doc/${name}
    xinstall -d ${docdir}
    xinstall -m 644 -W ${worksrcpath} \
        CHANGES \
        CREDITS \
        LICENSE \
        README.md \
        TODO \
        ${docdir}
}

livecheck.type      regex
livecheck.url       [lindex ${master_sites} 0]
livecheck.regex     ${name}-(\[0-9.\]+)\\.tar

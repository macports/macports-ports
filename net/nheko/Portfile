PortSystem          1.0
PortGroup           github 1.0
PortGroup           cmake 1.1
PortGroup           qt6 1.0
PortGroup           boost 1.0

github.setup        nheko-reborn nheko 0.12.0 v
revision            0
checksums           rmd160  a496e938bdbca5164360d9f5a78e143c196594a7 \
                    sha256  a3a7578bd9386a0b9a4188fa1296fdddb7df0f846c39728b80a998f9d06f36d1 \
                    size    2094339

categories          net chat
platforms           {darwin >= 16}
license             GPL-3
maintainers         nomaintainer
description         A matrix chat client
long_description    Nheko is a native desktop matrix \
                    chat client. It aims to be more \
                    like a chat app and less like an \
                    IRC client

github.tarball_from archive

compiler.cxx_standard  2020
compiler.thread_local_storage yes

configure.cppflags-append -I${prefix}/include/lmdbxx-cxx17
configure.cxxflags-append -fno-sized-deallocation

depends_build-append \
                    port:lmdbxx-cxx17 \
                    port:tweeny

depends_lib-append  \
                    port:KDSingleApplication \
                    port:cmark \
                    port:coeurl \
                    port:fontconfig \
                    port:libsodium \
                    port:lmdb \
                    port:mtxclient \
                    port:nlohmann-json \
                    port:olm \
                    port:qtkeychain-qt6 \
                    port:spdlog

qt6.depends_lib \
                    qtmultimedia \
                    qtsvg \
                    qttools

# Match libfmt version with spdlog once there's a new release
cmake.module_path-append \
                    ${prefix}/lib/libfmt10/cmake

destroot {
    copy ${build.dir}/nheko.app ${destroot}${applications_dir}/Nheko.app
}

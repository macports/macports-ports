depends_build-append port:byacc \
                    port:flex \
                    port:gengetopt \
                    port:pkgconfig \
                    port:json-c

depends_lib-append  port:gmp \
                    port:libdnet \
                    port:libpcap \
                    port:libunistring

variant redis description {Add Redis support} {
    depends_lib-append port:redis
    depends_lib-append port:hiredis
    configure.args-append -DWITH_REDIS=ON
}

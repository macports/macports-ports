use_xcode           yes

build.cmd           "./do"
build.target
build.env-append    CC=${configure.cc}

destroot {
        xinstall -m 755 -d ${destroot}${prefix}/bin
        xinstall -m 755 -s ${worksrcpath}/cjdroute ${destroot}${prefix}/bin
}

python.link_binaries_suffix

post-destroot {
    xinstall -d ${destroot}${prefix}/share/man/man1
    xinstall -m 0444 {*}[glob ${worksrcpath}/extras/man/*.1] \
        ${destroot}${prefix}/share/man/man1
}

post-destroot {
    xinstall -d ${destroot}${applications_dir}/${name}
    move ${destroot}${prefix}/${name}.app ${destroot}${applications_dir}/${name}
    move ${destroot}${prefix}/eiskaltdcpp-daemon.app  ${destroot}${applications_dir}/${name}
}

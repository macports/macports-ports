# Id: $

PortSystem 1.0
name		ntop
version		2.2
revision	0
categories	net
maintainers	mww@opendarwin.org
description	network traffic probe
platforms	darwin
long_description	ntop is a network traffic probe that shows the network \
		usage, similar to what the popular top Unix command does.

homepage	http://www.ntop.org/
master_sites	sourceforge
extract.suffix	.tgz
checksums	md5 4586e4173fcab64d2394502603fc73aa

depends_lib	lib:libiconv.2:libiconv \
		lib:libpng3:libpng \
		lib:readline:readline \
		lib:libgdbm:gdbm

set worksrcpath	${worksrcpath}/ntop

configure.args	--with-localedir=${prefix}/share/locale \
		--with-gdbm-lib=${prefix}/lib \
		--with-gdbm-include=${prefix}/include \
		--without-curses \
		--without-gdchart \
		--mandir=${prefix}/share/man

build.dir	${configure.dir}
post-destroot	{ system "install -m 755 -d ${destroot}/${prefix}/var/ntop" }

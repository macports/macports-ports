github.setup        containers krunkit 0.1.4 v
github.tarball_from archive

revision            0

categories          emulators
license             Apache-2
maintainers         {@tsujp wz.ht:jc+macports} openmaintainer

description         Tool to launch configurable virtual machines using libkrun
long_description    {*}${description}.

# Only arm64 as libkrun only supports Hypervisor.framework on arm64.
supported_archs     arm64

checksums           ${distname}${extract.suffix} \
                    rmd160  e7d180e5ec342f9672bfe8efa5c0e8453f4d0802 \
                    sha256  30998931a859b4853adb1d3e66ec5072a92edb9d3e46ad69c41a647584c619a0 \
                    size    18686

depends_run         port:libkrun

use_configure       no

# Patch upstream's Makefile to respect CARGO_BUILD_TARGET as that is automatically set by MacPorts and also to set binary rpath and entitlements.
patchfiles-append \
                patch-makefile.diff

post-patch {
    reinplace "s|@@DEFAULT_PREFIX@@|${prefix}|g" ${worksrcpath}/Makefile
}


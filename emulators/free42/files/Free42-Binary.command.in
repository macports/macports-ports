local User_Data="${HOME}/.free42"
local System_Data="@PREFIX@/share/free42";

if test ! -d "${User_Data}"; then
    mkdir "${User_Data}";
    ln -s "${System_Data}"/*  "${User_Data}/";
fi;

@PREFIX@/bin/free42bin &


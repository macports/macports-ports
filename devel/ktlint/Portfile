categories          devel java
platforms           {darwin any}
supported_archs     noarch

maintainers         {amake @amake} openmaintainer
license             MIT
homepage            https://pinterest.github.io/ktlint/

description         An anti-bikeshedding Kotlin linter with built-in formatter
long_description    {*}${description}

checksums           rmd160  cd8cc612d2a457e87b6d2f7af11c96ead7379798 \
                    sha256  9c64315aaa645ceeec867e22c511ec8614ae8dd77ff2102317052fa194249405 \
                    size    70271814

extract.only
use_configure       no

java.version        1.8+
java.fallback       openjdk8

build {}

destroot {
    xinstall -m 0755 ${distpath}/${distfiles} ${destroot}${prefix}/bin
}

github.livecheck.regex  {([^"-]+)}

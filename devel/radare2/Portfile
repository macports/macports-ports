# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=portfile:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0

github.setup        radare radare2 3.0.1
categories          devel
platforms           darwin
license             LGPL-3+
maintainers         {g5pw @g5pw} openmaintainer
description         Opensource tools to disasm, debug, analyze and manipulate binary files.
long_description    ${name} provides ${description}.
homepage            http://radare.org

depends_build       port:pkgconfig

depends_lib         port:capstone \
                    port:zlib \
                    port:libzip

checksums           rmd160  27cb5fb71e236c7146026ed39e29212dee1a1c25 \
                    sha256  4d215393ce2150397ba8fecfb88068167b8f643ec149d0bf1b7dd8e5d0a657c0 \
                    size    6641301

configure.args-append \
                    --with-syscapstone \
                    --with-syszip \
                    --with-compiler=clang

build.env-append    HOST_CC=${configure.cc}


variant openssl description {Use OpenSSL library} {
    depends_lib-append \
                    path:lib/libssl.dylib:openssl

    configure.args-append \
                    --with-openssl
}

default_variants    +openssl

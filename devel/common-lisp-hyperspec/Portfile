PortSystem          1.0

name                common-lisp-hyperspec
version             7.0
revision            0

homepage            http://www.lispworks.com/documentation/common-lisp.html
categories          devel
license             Noncommercial Restrictive/Distributable
maintainers         {@kakuhen github} openmaintainer
platforms           darwin freebsd
supported_archs     noarch
description         HTML version of the ANSI Common Lisp Standard, by LispWorks Ltd.
long_description    The Common Lisp HyperSpec (TM) is the acclaimed online \
    version of the ANSI Common Lisp Standard. It contains the full text of \
    the ANSI standard and ancillary information.

master_sites        http://ftp.lispworks.com/pub/software_tools/reference/
# Unfortunately, the filename differs very slightly on the server...
distfiles           HyperSpec-[string map {. -} ${version}]${extract.suffix}

checksums           rmd160  f6908e28635a45e8736293be11dbc1e478631674 \
                    sha256  1ac1666a9dc697dbd8881262cad4371bcd2e9843108b643e2ea93472ba85d7c3 \
                    size    2032830

extract.mkdir       yes

use_configure       no

build {}

set clhs_folder ${destroot}${prefix}/share/doc/${name}

destroot {
    xinstall -m 755 -d ${clhs_folder}
    file copy {*}[glob ${worksrcpath}/*] ${clhs_folder}
}


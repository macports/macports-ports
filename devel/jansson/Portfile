post-destroot {
    set docdir ${destroot}${prefix}/share/doc/${subport}
    xinstall -d ${docdir}
    xinstall -m 644 {*}[glob ${worksrcpath}/doc/*.rst] ${docdir}
}

livecheck.type      regex
livecheck.url       ${master_sites}
livecheck.regex     {jansson-(\d+(?:\.\d+)*)\.[tz]}

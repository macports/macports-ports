                      port:bison \
                      port:flex \
                      path:bin/pkg-config:pkgconfig

# `realpath` is not available on Monterey and earlier.
if {${macos_version_major} <= 12} {
    depends_build-append path:libexec/coreutils/libstdbuf.so:coreutils
}


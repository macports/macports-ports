configure {
	system "cd ${worksrcpath} && runghc Setup.hs configure"
}

build {
	system "cd ${worksrcpath} && runghc Setup.hs build"
}

destroot {
	system "cd ${worksrcpath} && runghc Setup.hs install"
}


    -DBUILD_SHARED_LIBS=ON

variant tests description "Enable testing" {
    test.run            yes
    configure.pre_args-replace  -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=ON \
                                -DCMAKE_BUILD_WITH_INSTALL_RPATH:BOOL=OFF

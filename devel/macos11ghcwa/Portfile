# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0

# workaround for stack/ghc issue on macOS 11
# https://github.com/commercialhaskell/stack/issues/5456
# https://github.com/yairchu/macos11-haskell-workaround
# remove after this issue is resolved

github.setup        yairchu macos11-haskell-workaround 62f08fc0ed61cc4c0fc8ac7c2dec558c85b4d4f3
name                macos11ghcwa
version             2021.01.11
revision            0
platforms           darwin
categories          devel lang
license             none
maintainers         nomaintainer
fetch.type          git

description         Make Haskell work on macOS again!

long_description    A work around for a bug in older GHCs (<= 8.10.3) \
                    on macOS 11 "Big Sur" (bug #18446).

if {${os.platform} eq "darwin" && ${os.major} < 20} {
    pre-fetch {
        ui_error "Port neither needed nor supported on your platform."
        error {unsupported platform}
    }
}

use_configure       no

build {
    system -W ${worksrcpath} \
        "${configure.cc} ${configure.cflags} ${configure.ldflags} [get_canonical_archflags cc] [get_canonical_archflags ld] -dynamiclib macos11ghcwa.c -o macos11ghcwa.dylib"
}

destroot {
    xinstall -m 644 -W ${worksrcpath} \
        macos11ghcwa.dylib ${destroot}${prefix}/lib
}

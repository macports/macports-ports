		ATokenBuffer.h \
		ATokenStream.h \
		BufFileInput.cpp \
		BufFileInput.h \
		DLG_stream_input.h \
		DLexer.h \
		DLexerBase.cpp \
		DLexerBase.h \
		PBlackBox.h \
		PCCTSAST.cpp \
		PCCTSAST.h \
		SList.h \
		antlr.h \
		ast.c \
		ast.h \
		charbuf.h \
		charptr.c \
		charptr.h \
		config.h \

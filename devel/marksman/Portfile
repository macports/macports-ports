                    sha256  ff006163615312703431584b7f32af4eb6ae2537e907ed2ca93c50d489cb8373 \
                    size    41041472

extract.mkdir       yes

extract {
    copy ${distpath}/marksman-macos ${worksrcpath}/marksman-macos
}


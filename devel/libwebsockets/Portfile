PortSystem          1.0
PortGroup           github 1.0
PortGroup           cmake 1.1

github.setup        warmcat libwebsockets 2.4.1 v
categories          devel net
platforms           darwin
license             LPGL-2.1

maintainers         nomaintainer

description         Canonical libwebsockets.org websocket library

long_description    \
    Libwebsockets is a lightweight pure C library built to use minimal \
    CPU and memory resources, and provide fast throughput in both directions \
    as client or server.

distname            v${version}
worksrcdir           ${name}-${version}

homepage            https://github.com/warmcat/libwebsockets
master_sites        https://github.com/warmcat/libwebsockets/archive

checksums           rmd160 846a9b70b19eae0e485f921e5f770edb16e42a0e \
                    sha256 29414be4f79f6abc0e6aadccd09a4da0f0c431e3b5691f496acd081ae6a8240c

cmake.out_of_source yes
configure.args-append \
                    -DLWS_WITHOUT_TESTAPPS=ON \
                    -DLWS_UNIX_SOCK=ON \
                    -DLWS_IPV6=ON \
                    -DLWS_WITH_HTTP2=1

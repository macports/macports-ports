depends_build-append port:go-bindata

build.cmd           make
build.target        bin

use_parallel_build  no

patch {
    reinplace -E {s/GOOS=(linux|windows)//g} ${worksrcpath}/Makefile
    reinplace {s|GOARCH=amd64||g} ${worksrcpath}/Makefile
}


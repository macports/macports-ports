installs_libs       no

maintainers         {gmail.com:herby.gillot @herbygillot} \
                    openmaintainer

checksums           rmd160  761e28ecf17bb3c15e27e9b43d3a0a0290eb11ca \
                    sha256  b6246cc58e5ad2c9566238bbe99ba8ba1e9593b016336ba5dd6320f66040ac40 \

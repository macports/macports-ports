PortSystem          1.0
PortGroup           github 1.0
PortGroup           cmake 1.0
PortGroup           cxx11 1.1

name                jsoncpp
categories          devel
platforms           darwin
maintainers         michaelld openmaintainer
license             MIT

description         JSON C++ library

long_description    JSON data format manipulation C++ library

subport jsoncpp-devel {}

if {${subport} eq ${name}} {

    # release
    github.setup    open-source-parsers jsoncpp 1.8.3
    checksums       rmd160 999e36b8c70eb401c0e073d1ab9c4de0e65afa4d \
                    sha256 eada72bcb0356748d8928d12ccc46c18b6068a460032432eff49c0550a7c8aad

    conflicts       jsoncpp-devel

} else {

    # devel

    github.setup    open-source-parsers jsoncpp adb9ab142416639a6b521230fd5126e6c90702d2
    version         20170905
    checksums       rmd160 1d41f24ef4032c3e467210da805d8457a8f7bd3d \
                    sha256 c310025cfc4df85572d6445a1a49156f9c0e238a3d0811a51811de5d432408c8

    conflicts       jsoncpp
    long_description ${description}: \
        This port follows the GIT master version of ${name}, which is typically updated every few days to weeks.

}

patchfiles          patch-CMakeLists.txt.diff

cmake.out_of_source yes

configure.args-append \
                    -DBUILD_SHARED_LIBS=ON \
                    -DJSONCPP_WITH_POST_BUILD_UNITTEST=OFF

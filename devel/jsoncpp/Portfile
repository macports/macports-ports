PortSystem          1.0
PortGroup           github 1.0
PortGroup           cmake 1.0
PortGroup           cxx11 1.1

name                jsoncpp
categories          devel
platforms           darwin
maintainers         {michaelld @michaelld} openmaintainer
license             MIT

description         JSON C++ library

long_description    JSON data format manipulation C++ library

subport jsoncpp-devel {}

if {${subport} eq ${name}} {

    # release
    github.setup    open-source-parsers jsoncpp 1.8.4
    checksums       rmd160 46ddb792a25c1ac62967adef604d760e68c084f9 \
                    sha256 9c2370371a76337e4afe3128cceec943620f97d12c720c3046f39eae6f85f4cd

    conflicts       jsoncpp-devel

} else {

    # devel

    github.setup    open-source-parsers jsoncpp 72f6cc7fd0b95f4113510d029eaa0eab7754cd1d
    version         20171221
    checksums       rmd160 9f2b3ba678fad56053160f91677f372db25c71dd \
                    sha256 682367a6ed4d76b44e5954cc3ac4445306fdac75d30f099312aa9af0f9331eb4

    conflicts       jsoncpp
    long_description ${description}: \
        This port follows the GIT master version of ${name}, which is typically updated every few days to weeks.

}

patchfiles          patch-CMakeLists.txt.diff

cmake.out_of_source yes

configure.args-append \
                    -DBUILD_SHARED_LIBS=ON \
                    -DJSONCPP_WITH_POST_BUILD_UNITTEST=OFF

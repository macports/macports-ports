 AC_PROG_CXX
+
+AC_ARG_ENABLE([cxx11],
+    [AS_HELP_STRING([--enable-cxx11],
+        [enable C++11 for C++ compiler [default=no]])],
+    [zmq_enable_cxx11=$enableval],

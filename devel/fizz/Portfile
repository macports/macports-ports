PortSystem          1.0
PortGroup           boost 1.0
PortGroup           cmake 1.1
PortGroup           compiler_blacklist_versions 1.0
PortGroup           github 1.0
PortGroup           openssl 1.0
PortGroup           legacysupport 1.1

# O_CLOEXEC
legacysupport.newest_darwin_requires_legacy 10

boost.version       1.81

github.setup        facebookincubator fizz 2024.01.08.00 v
revision            0
checksums           rmd160  1ada4432177892ea54580be6bdaaced8f0bc2c75 \
                    sha256  ec2dc1b2238e654e8b40b63157cfe343f44e05a59da53e095aadd5e4ec627144 \
                    size    680888

categories          devel
license             BSD
maintainers         {@barracuda156 gmail.com:vital.had} openmaintainer

description         Fizz is a TLS 1.3 implementation
long_description    {*}${description}

github.tarball_from releases
distname            ${name}-v${version}
extract.mkdir       yes

set port_libfmt     libfmt10
cmake.module_path-append \
                    ${prefix}/lib/${port_libfmt}/cmake

depends_lib-append  port:bzip2 \
                    port:double-conversion \
                    port:folly \
                    port:gflags \
                    port:google-glog \
                    port:libevent \
                    port:libsodium \
                    port:libunwind \
                    port:lz4 \
                    port:zlib \
                    port:zstd \
                    port:${port_libfmt}

cmake.source_dir    ${worksrcpath}/${name}

platform darwin powerpc {
    patchfiles-append \
                    0001-Revert-Read-b64-encoded-ECH-Config-List-in-fizz-clie.patch \
                    0002-Revert-235358c8b2e613b85d47b2088c21f7bd344910ec.patch
}

# Fix error: invalid output constraint '=@ccc' in asm
compiler.blacklist-append \
                    {clang < 1200}

compiler.cxx_standard   2017
cmake.generator     Ninja

configure.args-append \
                    -DBUILD_TESTS=OFF \
                    -DBUILD_SHARED_LIBS=ON

if {[string match *gcc* ${configure.compiler}]} {
    # ___atomic_fetch_add_8
    configure.ldflags-append  -latomic
}

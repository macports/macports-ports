PortSystem 1.0
name		orbit2
version		2.6.2
description	Code for an ORB written in C will spontaneously evolve here.
long_description        Code for an ORB written in C will spontaneously \
			evolve here.
maintainers	olegb@opendarwin.org
categories	devel
platforms	darwin 
homepage	http://www.labs.redhat.com/orbit/
master_sites    ftp://ftp.gnome.org/pub/GNOME/desktop/2.2/2.2.2/sources/
checksums	md5 6e255469741e56f1a77ae3a149e136b8
distname  	ORBit2-${version}
patchfiles	patch_ltmain.sh
depends_lib	lib:libglib-2.2:glib2 lib:libIDL-2:libidl \
		lib:liblinc:linc lib:libpopt:popt lib:libexpat:expat \
		lib:libintl:gettext lib:libiconv:libiconv 
depends_build   bin:pkg-config:pkgconfig
use_bzip2 	yes
configure.env	CPPFLAGS="-L${prefix}/lib -I${prefix}/include" \
		CFLAGS="-no-cpp-precomp -flat_namespace -undefined suppress"
destroot.vars	prefix=${destroot}/${prefix}

destroot {
    xinstall -m 0755 \
        ${worksrcpath}/target/[cargo.rust_platform]/release/${name} \
        ${destroot}${prefix}/bin/

    xinstall -d ${destroot}${prefix}/share/${name}/examples
    foreach _example [glob ${worksrcpath}/examples/*] {
        copy ${_example} ${destroot}${prefix}/share/${name}/examples/
    }
}


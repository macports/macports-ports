package require port 1.0

name		ruby-cocoa
version		0.3.2
categories	devel
maintainers	rooneg@electricjellyfish.net
description	ruby bindings for writing cocoa programs
platforms	darwin

master_sites	http://www.imasy.or.jp/~hisa/mac/rubyosx/files/
distname	rubycocoa-${version}
extract.sufx	.tgz

checksums	md5 9227caf4f401d6523a7972bf53cadc5c

configure {
	system "cd $worksrcpath && ruby install.rb config"
}

build {
	system "cd $worksrcpath && ruby install.rb setup"
}

install {
	system "cd $worksrcpath && ruby install.rb install"
}

contents {
	/usr/lib/ruby/site_ruby/1.6/osx/addressbook.rb
	/usr/lib/ruby/site_ruby/1.6/osx/appkit.rb
	/usr/lib/ruby/site_ruby/1.6/osx/cocoa.rb
	/usr/lib/ruby/site_ruby/1.6/osx/foundation.rb
	/usr/lib/ruby/site_ruby/1.6/osx/objc/addressbook.rb
	/usr/lib/ruby/site_ruby/1.6/osx/objc/appkit.rb
	/usr/lib/ruby/site_ruby/1.6/osx/objc/application.rb
	/usr/lib/ruby/site_ruby/1.6/osx/objc/cocoa.rb
	/usr/lib/ruby/site_ruby/1.6/osx/objc/cocoa_macros.rb
	/usr/lib/ruby/site_ruby/1.6/osx/objc/foundation.rb
	/usr/lib/ruby/site_ruby/1.6/osx/objc/oc_all.rb
	/usr/lib/ruby/site_ruby/1.6/osx/objc/oc_attachments.rb
	/usr/lib/ruby/site_ruby/1.6/osx/objc/oc_exception.rb
	/usr/lib/ruby/site_ruby/1.6/osx/objc/oc_import.rb
	/usr/lib/ruby/site_ruby/1.6/osx/objc/oc_object.rb
	/usr/lib/ruby/site_ruby/1.6/osx/objc/oc_types.rb
	/usr/lib/ruby/site_ruby/1.6/osx/objc/oc_wrapper.rb
	/usr/lib/ruby/site_ruby/1.6/osx/objc
	/usr/lib/ruby/site_ruby/1.6/osx
	/usr/lib/ruby/site_ruby/1.6/powerpc-darwin6.0/osx_objc.bundle
}

# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0
PortGroup           cmake 1.1

name                google-glog
github.setup        google glog 0.5.0 v
revision            0
checksums           rmd160  019faa965c4faef72c990cf010ee2ea62b3934b7 \
                    sha256  4bd6406219840295f961bfd850a04647d10ae508af81131ca6091f2cf71606a9 \
                    size    183395

categories          devel
maintainers         nomaintainer

description         Logging library for C++
long_description    The glog library implements application-level logging. \
                    This library provides logging APIs based on C++-style \
                    streams and various helper macros.

platforms           darwin
license             BSD

# see https://github.com/google/glog/pull/239
patchfiles-append   patch-pkg_file.diff
# fix api break, see https://github.com/google/glog/commit/0b3d4cb4
patchfiles-append   patch-fix-api-break.diff

configure.args-append \
                    -DWITH_GFLAGS=OFF \
                    -DBUILD_SHARED_LIBS=ON \
                    -DWITH_GTEST=OFF

variant gflags description {Includes gflags command line control of logging} {
    configure.args-replace \
                    -DWITH_GFLAGS=OFF -DWITH_GFLAGS=ON
    depends_lib-append \
                    port:gflags
}

default_variants +gflags

post-destroot {
    set dest_doc ${destroot}${prefix}/share/doc/${name}
    xinstall -d ${dest_doc}
    xinstall -m 0644 -W ${worksrcpath} \
        AUTHORS COPYING ChangeLog README.rst \
        ${dest_doc}
}

github.livecheck.regex {([0-9.]+)}

# access to version 0.4.0 until this issue is fixed
# https://github.com/pytorch/pytorch/issues/58054
subport ${name}-0.4 {
    github.setup    google glog 0.4.0 v
    revision        0

    distname        ${github.author}-${github.project}-${version}

    checksums       rmd160  c2627b9fc5c92a6f2f6d5475dbed9b8cf012ad86 \
                    sha256  217fd7e5c52b76d6163459d9b2a1ca790075f6e089887e48257362d4874ed133 \
                    size    200999

    conflicts       google-glog

    patchfiles-delete \
                    patch-fix-api-break.diff

    post-build {
        move ${worksrcpath}/README.md ${worksrcpath}/README.rst
    }
}

if {${name} eq ${subport}} {
    conflicts       google-glog-0.4
}

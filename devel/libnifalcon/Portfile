post-patch {
    set v [split ${version}.0.0 .]
    for {set i 0} {$i < 3} {incr i} {
        reinplace "s|@v${i}@|[lindex ${v} ${i}]|g" ${worksrcpath}/CMakeLists.txt
    }
}


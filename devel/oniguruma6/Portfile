conflicts           oniguruma5

use_autoreconf      yes

post-destroot {
    set dest_doc ${destroot}${prefix}/share/doc/oniguruma
    xinstall -d ${dest_doc}
    xinstall -m 644 -W ${worksrcpath} \
        AUTHORS COPYING HISTORY README index.html \
        ${dest_doc}
    copy ${worksrcpath}/doc ${dest_doc}
}

github.livecheck.regex  {(\d\.\d+(\.\d+)?(?!_))}

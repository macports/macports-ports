set port_libfmt     libfmt9
cmake.module_path-append \
                    ${prefix}/lib/${port_libfmt}/cmake

depends_build-append \
                    port:bison \
                    port:flex
depends_lib-append  port:fizz \
                    port:mstch \
                    port:wangle \
                    port:${port_libfmt}


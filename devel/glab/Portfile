# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0
PortGroup           legacysupport 1.1

github.setup        profclems glab 1.14.0 v
revision            0
name                glab
categories          devel
platforms           darwin
supported_archs     x86_64
license             MIT
maintainers         {l2dy @l2dy} \
                    {gmail.com:clementsam75 @profclems} \
                    openmaintainer

description         An open-source GitLab CLI Tool
long_description    glab is an open source GitLab CLI tool bringing GitLab to your terminal next to where you are already working with git and your code.

homepage            https://github.com/profclems/glab

github.tarball_from releases
distname            glab_${version}_macOS_x86_64

checksums           rmd160  363d054caf38e358f2576178f1be67a31ce1127e \
                    sha256  b33344fac099f81ad64b684fe0f7eef1eacace4c24c53fc767c64f950f499aff \
                    size    6092412

use_configure       no
installs_libs       no

build {}

destroot {
    xinstall -m 0755 -W ${worksrcpath} bin/glab ${destroot}${prefix}/bin

    # glab works on 10.10 and newer without legacysupport. standard
    # legacysupport tweaks don't work, since the install here is from
    # a binary tarball ... have to tweak the binary to use the legacy
    # support library, which in turn uses the System.B library.
    if {${os.major} <= 13} {
        system -W ${destroot}${prefix}/bin "install_name_tool -change /usr/lib/libSystem.B.dylib ${prefix}/lib/libMacportsLegacySupport.dylib glab"
    }

    xinstall -m 0644 -W ${worksrcpath} LICENSE ${destroot}${docdir}
}

github.livecheck.regex {([0-9.]+)}

                    port:p${perl5.major}-getopt-long \
                    port:p${perl5.major}-text-parsewords \
                    port:p${perl5.major}-version

perl5.link_binaries_suffix

post-destroot {
    ln -s ${prefix}/share/perl${perl5.major}/man/man1/ack.1pm ${destroot}${prefix}/share/man/man1/
}

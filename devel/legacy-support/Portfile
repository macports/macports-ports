PortSystem          1.0
PortGroup           github 1.0


github.setup        macports macports-legacy-support 0.5 v
name                legacy-support
revision            1

# Remove at the next version update
dist_subdir         ${name}/${version}_1

checksums           rmd160  6696fc5b8b380a2740fea1efacb4132ff2315cc5 \
                    sha256  79fef11cfd82a55ec94721e258730faab37a965d2225a8dc5c98adc09728cd01 \
                    size    7920

if {${subport} eq ${name}} {
    conflicts       ${name}-devel
}

subport ${name}-devel {
	conflicts           ${name}
	github.setup        macports macports-legacy-support 462d0d0951767032d80b6467beab03f1236cecec
	version             20181121
	checksums           rmd160  7db691b2531f15a6789e90ba5172b10b096875f3 \

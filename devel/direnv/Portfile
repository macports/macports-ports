    PortGroup   obsolete 1.0
    replaced_by direnv
    version     20191231-ab4d188d
    revision    1
    depends_build
    depends_lib

}

if {${name} eq ${subport}} {

    go.setup  github.com/direnv/direnv 2.21.0 v
    checksums rmd160 82d0720af677df3158815a17331dd9bd3ea1d4b3 \
              sha256 ed47b9ae38353c4be983f5aa51475406b86a5fc5bf87ea14828c67c4a14cb27c \
              size   92938
    revision  0

    depends_build-append port:shfmt

    build.cmd make
    build.target all

    destroot {
        system "cd ${worksrcpath} && make install DESTDIR=${destroot}${prefix}"
    }
}


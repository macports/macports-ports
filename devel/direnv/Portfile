    checksums       rmd160 8372c319e57ac8557c87b8dca32da6d874014afa \
                    sha256 837b208c0bbee6f250f051d53cc1d89cfcd7899dad4363ade9845dd955bce425 \
                    size   98939
    revision        0

    conflicts       direnv-devel
}

subport direnv-devel {

    go.setup  github.com/direnv/direnv d29eb0d7e1ccd406df2bf22dbd538d3d30dbf3e1
    version   20191007-[string range ${github.version} 0 7]
    checksums rmd160 e00aef7bf04c669e620773b4a8d1d4c1c9418be2 \
              sha256 52571ffd5b587b997970ea587fb05d233974a38edca116319a4500e5d6193bb8 \

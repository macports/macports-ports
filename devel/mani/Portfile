                    size    438545

# Allow Go to fetch deps at build time
go.offline_build no

build.cmd           make
build.pre_args      DATE=""
build.args          build

destroot {
    xinstall -m 0755 ${worksrcpath}/dist/${name} ${destroot}${prefix}/bin/
}

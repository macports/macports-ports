master_sites	sourceforge
checksums		sha1 f1ab8986af7a1ffa6760f4bacf5622924639bf4a

configure.args	--mandir=${prefix}/share/man \
				--disable-doxygen \
				--disable-dot

test.run		yes
test.target		check

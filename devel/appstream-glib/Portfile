PortSystem          1.0
PortGroup           compiler_blacklist_versions 1.0
PortGroup           meson 1.0
PortGroup           github 1.0
PortGroup           muniversal 1.0

github.setup        hughsie appstream-glib 0_8_1 appstream_glib_
version             [string map {_ .} ${version}]
revision            1
epoch               1
license             LGPL-2.1+
categories          devel
maintainers         {devans @dbevans} openmaintainer
platforms           darwin
homepage            https://github.com/hughsie/${name}

description         This library provides objects and helper methods to help \
                    reading and writing AppStream metadata.

long_description    {*}${description}

checksums           rmd160  5e12013de27ca95b8816ba902245e0b599818508 \
                    sha256  906e361a9303cb9a9268970bc94aa8b94deb80231731904ef1975e41d39d685a \
                    size    2596723

depends_build       port:pkgconfig \
                    port:gettext \
                    port:gtk-doc

depends_lib         port:curl \
                    port:docbook-xml \
                    port:docbook-xsl-nons \
                    port:fontconfig \
                    port:freetype \
                    port:gettext-runtime \
                    path:lib/pkgconfig/gdk-pixbuf-2.0.pc:gdk-pixbuf2 \
                    path:lib/pkgconfig/glib-2.0.pc:glib2 \
                    path:lib/pkgconfig/gobject-introspection-1.0.pc:gobject-introspection \
                    port:gperf \
                    path:lib/pkgconfig/gtk+-3.0.pc:gtk3 \
                    port:json-glib \
                    port:libarchive \
                    port:libstemmer \
                    port:libxslt \
                    port:libyaml

patchfiles          use-system-uuid.patch

post-patch {
    reinplace "s|__SDK_PATH__|${configure.sdkroot}|g" ${worksrcpath}/meson.build
}

compiler.c_standard 1999
# https://trac.macports.org/ticket/66257
compiler.blacklist-append *gcc-4.*

# gobject-introspection uses g-ir-scanner, which uses $CC from env
if {${universal_possible} && [variant_isset universal]} {
    foreach arch ${configure.universal_archs} {
        lappend merger_build_env(${arch})  "CC=${configure.cc} -arch ${arch}"
        lappend merger_destroot_env(${arch})  "CC=${configure.cc} -arch ${arch}"
    }
} else {
    build.env-append       "CC=${configure.cc} ${configure.cc_archflags}"
    destroot.env-append    "CC=${configure.cc} ${configure.cc_archflags}"
}

configure.args      -Drpm=false \
                    -Dgtk-doc=true

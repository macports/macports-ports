                    size    1441734

# Allow Go to fetch dependencies at build time
build.env-delete    GO111MODULE=off GOPROXY=off

build.cmd           make
build.target        build

destroot {
    xinstall -m 0755 ${worksrcpath}/stripe ${destroot}${prefix}/bin/
}

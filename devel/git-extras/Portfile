build {}

destroot.destdir        PREFIX=${destroot}${prefix}
post-destroot {
    set docdir ${destroot}${prefix}/share/doc/${subport}
    xinstall -d ${docdir}
    xinstall -m 644 {*}[glob ${worksrcpath}/man/*.html] ${docdir}
}

    revision        0
    checksums       rmd160  7f6963b882d05063d6120870e322a4e9f970ddcc \
                    sha256  680858a87ffde5293f1ae27a16e489b64392db6f0a7d312a53b0d7be5f7dab3e \
                    size    638795
} elseif {[vercmp ${php.branch} 5.2] >= 0} {
    version         2021.1
    revision        0
    checksums       rmd160  a9f33ee172b1a7384767901f464f8d0b48689e67 \
                    sha256  9fd473fc76e01a2ffcd087283d20e4ec14067b29a8336ac4acf9c564abbeaa55 \

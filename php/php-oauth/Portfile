PortSystem      1.0
PortGroup       php 1.1

name            php-oauth
license         BSD
categories-append       devel
maintainers     {ryandesign @ryandesign} openmaintainer

# Compatible with PHP 8.5 as of 2.0.10
php.branches    5.3 5.4 5.5 5.6 7.0 7.1 7.2 7.3 7.4 8.0 8.1 8.2 8.3 8.4 8.5
php.pecl        yes

if {[vercmp ${php.branch} >= 7.1]} {
    version     2.0.10
    revision    0
    checksums   rmd160  a4a08cf006592baf333a90d5b7f1d6d6dfeabd87 \

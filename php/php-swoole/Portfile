long_description        ${name} is ${description}.

if {${name} ne ${subport}} {
    # Not sure what version
    if {[vercmp ${version} 4.0.0] >= 0} {
        # strndup
        PortGroup       legacysupport 1.0
        legacysupport.newest_darwin_requires_legacy \
                        10

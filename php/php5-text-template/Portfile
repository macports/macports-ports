    ${description}

depends_lib             path:bin/php:php5

use_configure           no
build                   {}
destroot {
    xinstall -d ${destroot}${prefix}/lib/php
    file copy ${worksrcpath}/Text ${destroot}${prefix}/lib/php/Text
}

livecheck.type          regex
livecheck.url           ${homepage}/tags
livecheck.regex         {/([0-9.]+)"}

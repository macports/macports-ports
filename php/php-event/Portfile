name                    php-event
version                 1.11.1
categories-append       devel
platforms               darwin
maintainers             ryandesign openmaintainer
license                 PHP-3.01

php.branches            5.4 5.5 5.6
php.pecl                yes

description             efficiently schedule I/O, time and signal based events

long_description        PECL extension to ${description} using libevent.

checksums               rmd160  1ca3c58e1e97d8a986dec8432027f8428d2c3490 \
                        sha256  371e8d559461542058efd57be61fd8316121985dc455f2e7979722e37cedd526

if {${name} ne ${subport}} {
    depends_lib-append  port:libevent \
                        path:lib/libssl.dylib:openssl \
                        port:${php}-sockets

    configure.args-append \
                        --with-event-libevent-dir=${prefix} \
                        --with-openssl-dir=${prefix}
}

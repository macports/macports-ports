    test.run    yes
    
    post-destroot {
        set docdir ${prefix}/share/doc/${subport}
        xinstall -d ${destroot}${docdir}
        xinstall -m 644 -W ${worksrcpath} CREDITS LICENSE TODO ${destroot}${docdir}
    }
}

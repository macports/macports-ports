# $Id$

PortSystem              1.0
PortGroup               php 1.1

name                    php-xcache
version                 3.0.2
categories-append       www
platforms               darwin
maintainers             ryandesign openmaintainer
license                 BSD

php.branches            5.3 5.4

homepage                http://xcache.lighttpd.net/
master_sites            ${homepage}pub/Releases/${version}/
use_bzip2               yes

description             fast, stable PHP opcode cacher

long_description        ${name} is a ${description}.

checksums               rmd160  694c3e958fca00e616453fa9fd53eeaf4e90fe51 \
                        sha256  cddeaf4d6b9676ba351ab92b39d8837adf8d2fa3424616d60da12cf29dc0b2df

if {${name} != ${subport}} {
    conflicts           ${php}-APC ${php}-eaccelerator
    
    patchfiles          patch-xcache.ini.diff
    
    # gcc-4.2: -E, -S, -save-temps and -M options are not allowed with multiple -arch flags
    universal_variant   no
    
    post-destroot {
        set docdir ${destroot}${prefix}/share/doc/${subport}
        xinstall -d ${docdir}
        xinstall -W ${worksrcpath} -m 644 AUTHORS COPYING ChangeLog NEWS README THANKS xcache.ini ${docdir}
    }
}

livecheck.name          xcache

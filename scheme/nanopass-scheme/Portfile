    xinstall -d ${destroot}${prefix}/share/scheme/r6rs/nanopass
    xinstall ${worksrcpath}/nanopass.ss ${destroot}${prefix}/share/scheme/r6rs
    xinstall {*}[glob ${worksrcpath}/nanopass/*] ${destroot}${prefix}/share/scheme/r6rs/nanopass
}

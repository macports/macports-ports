package require port 1.0
name		libao
version		0.8.3
revision	0
categories	audio
maintainers	jpm@opendarwin.org
description	A Cross-platform Audio Library
long_description	 libao is a way to easily add cross-platform audio output to your program. Output devices are implemented as dynamic plugins, and support for OSS, ESD, ALSA, aRTs, Solaris, and Irix outputs are currently supported.
platforms	darwin
master_sites	http://www.vorbis.com/files/1.0/unix/ \
	http://www.xiph.org/ogg/vorbis/download/
checksums	md5 b1422a6ff7f58131921b9f2fabe2295c
patchfiles	apple-patches
depends_lib	lib:libdl.1:dlcompat
configure.env	LDFLAGS=-L${prefix}/lib \
	CPPFLAGS=-I${prefix}/include
configure.args	--disable-esd --disable-arts

include contents

variant esd {
	depends_lib-append	lib:libdl.1:dlcompat lib:libesd.0:esound
	configure.args-append	--enable-esd
	include contents-esd
#	contents-append \
#		lib/ao/plugins-2/libesd.so \
#		lib/ao/plugins-2/libesd.la
}

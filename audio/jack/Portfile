configure.args      --doxygen=no \
                    --alsa=no \
                    --firewire=no \
                    --iio=no \
                    --portaudio=no \
                    --winmme=no \
                    --celt=no \
                    --opus=no \
                    --samplerate=yes \
                    --sndfile=yes \
                    --readline=no \
                    --db=no

platform darwin {
    if {[string match *clang* ${configure.compiler}]} {
        configure.ldflags-append -stdlib=${configure.cxx_stdlib}
    }

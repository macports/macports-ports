patchfiles          patch-set-install-path-runtime.diff \
                    patch-set-install-path-components.diff

# Use ffmpeg7 if available
set ffmpeg_v 7
post-patch {
    foreach f [glob ${worksrcpath}/scripts/boca_*coder_ffmpeg*.xml] {
        reinplace "s|<command>ffmpeg</command>|<command>${prefix}/bin/ffmpeg${ffmpeg_v}</command>|g" $f
    }
}

makefile.prefix_name        prefix
compiler.blacklist-append   {clang < 600.0.57}

github.livecheck.regex {([0-9.]+)}

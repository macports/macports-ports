                        port:cdparanoia \
                        port:id3v2 \
                        port:normalize \
                        port:p${perl5.major}-digest-sha \
                        port:p${perl5.major}-musicbrainz-discid \
                        port:p${perl5.major}-webservice-musicbrainz


post-destroot {
    set docdir ${destroot}${prefix}/share/doc/${name}
    xinstall -d ${docdir}
    xinstall -m 0644 -W ${worksrcpath} \
        AUTHORS \
        COPYING \
        ChangeLog \
        README \
        ${docdir}
}

livecheck.type              regex
livecheck.url               http://launchpad.net/utimer/+download
livecheck.regex             ${name}-(\[0-9.\]+)\\.tar

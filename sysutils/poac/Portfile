PortSystem          1.0
PortGroup           cmake 1.1
PortGroup           github 1.0
PortGroup           boost 1.0
PortGroup           openssl 1.0
PortGroup           compiler_blacklist_versions 1.0

github.setup        poacpm poac 0.3.7
categories          sysutils
license             Apache-2

maintainers         {@ken-matsui kmatsui.me:poac} \
                    openmaintainer
description         Package manager for C++
long_description    Poac is a package manager for C++ like Cargo \
                    for Rust. Poac can download project's dependencies \
                    and compile a project.

checksums           rmd160  61abba06f3939f8763fd34ad166ed1ba238940b7 \
                    sha256  456280b8897a1ac9c2c910d072bc5deee16986a332b58680e667bf70ed61ad9b \
                    size    149441

depends_lib-append  port:libarchive \
                    port:libfmt \
                    port:libgit2 \
                    port:spdlog
boost.version       1.78

# requires C++20
compiler.blacklist-append \
                    {clang < 1300}
configure.args-append \
                    -DCPM_USE_LOCAL_PACKAGES=ON \
                    -DPOAC_BUILD_TESTING=ON

test.run            yes

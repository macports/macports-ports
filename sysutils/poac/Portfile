PortSystem          1.0
PortGroup           cmake 1.1
PortGroup           github 1.0
PortGroup           boost 1.0
PortGroup           openssl 1.0
PortGroup           legacysupport 1.1
PortGroup           compiler_blacklist_versions 1.0

# On <10.15 built-in libc++ has no support for std::filesystem
legacysupport.newest_darwin_requires_legacy 18
legacysupport.use_mp_libcxx                 yes

github.setup        poac-dev poac 0.5.1
github.tarball_from archive
revision            1
categories          sysutils
license             Apache-2

maintainers         {@ken-matsui kmatsui.me:poac} \
                    openmaintainer
description         Package Manager for C++
long_description    Poac is a package manager for C++, inspired by Cargo \
                    for Rust. Poac can download project's dependencies \
                    and compile a project.

# stealth update; remove for next version
dist_subdir         ${name}/${version}_1
checksums           rmd160  73f1c1ae15b9af103158282c229df5a8c61a6892 \
                    sha256  439ce4f3be89e33abbafe5ef5bef53e2c6209c0cc0a8e718698675c247fb2ca4 \
                    size    149514

# Do not allow CMake to use system Git on older systems
depends_fetch-append \
                    port:git

depends_lib-append  port:libarchive \
                    port:libfmt \
                    port:libgit2 \
                    port:spdlog
boost.version       1.81

# requires C++20
compiler.blacklist-append \
                    {clang < 1300}

test.run            yes

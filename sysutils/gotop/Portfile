                    size    997924


set time [clock format [clock seconds] -format %Y%m%dT%H%M%S]
build.args-append   -ldflags=\"-X 'main.Version=v${version}' -X 'main.BuildDate=${time}'\" -o ./gotop ./cmd/gotop

destroot {
    xinstall -m 755 ${worksrcpath}/gotop ${destroot}${prefix}/bin
}

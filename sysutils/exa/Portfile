checksums           exa-${version}.tar.gz \
                    rmd160  5809f633e71881eff721d2de34c1d0d8312d5f80 \
                    sha256  ff0fa0bfc4edef8bdbbb3cabe6fdbd5481a71abbbcc2159f402dea515353ae7c \
                    size    574807


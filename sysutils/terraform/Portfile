                        size    20848375 \
                        [terraformDistBase]_arm64.zip \
                        rmd160  b1007081803bd161303f4bfb8d848fdedc586eb7 \
                        sha256  f1c20b2180c982bdda8384b1316209d20fc55def4f0354ead7a2a8e04c89f54e \

license                 Apache-2
maintainers             {ogsite.net:sirn @sirn} @pedrohdz \
                        {lbschenkel @lbschenkel} \
                        {gmail.com:herby.gillot @herbygillot} \
                        openmaintainer

subport helm_select {}


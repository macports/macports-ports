PortSystem              1.0
PortGroup               select 1.0

name                    helm
categories              sysutils
platforms               darwin
license                 Apache-2
maintainers             {ogsite.net:sirn @sirn} @pedrohdz {lbschenkel @lbschenkel} \
                        openmaintainer

subport helm_select {}


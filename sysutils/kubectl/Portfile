    set patchNumber     5
    checksums           rmd160  2492d019a762096a2211b7fc38d0a0a493060d82 \
                        sha256  6bc71aa53567ad6dda92d0cc733adce67251434851847dbae6216a1f254336f3 \
                        size    48596112
}

subport kubectl-1.14 {
    set patchNumber     10
    checksums           rmd160  10bdebc38c14482972e0c344d349a6d450c8d182 \
                        sha256  43d2c24eafb2ef09a6ac77c2b99070668e83edaa325a16a362e304ba578fdc48 \

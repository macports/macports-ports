depends_lib-append      port:libiconv

variant fastfetch description {Use fastfetch backend} {
    depends_run-append  port:fastfetch
}

post-build {
    set hyfetch_bin ${worksrcpath}/target/[cargo.rust_platform]/release/${name}
    foreach shell {zsh bash fish} {
        system -W ${worksrcpath} \
            "${hyfetch_bin} --bpaf-complete-style-${shell} >> ${name}.${shell}"
    }
}

destroot {
    set bindir ${worksrcpath}/target/[cargo.rust_platform]/release
    xinstall -m 755 -W ${bindir} ${name} ${destroot}${prefix}/bin/
    xinstall -m 755 ${worksrcpath}/neofetch ${destroot}${prefix}/bin/neowofetch

    xinstall -d ${destroot}${prefix}/share/man/man1
    xinstall -m 644 ${worksrcpath}/docs/${name}.1 ${destroot}${prefix}/share/man/man1/
    xinstall -m 644 ${worksrcpath}/docs/neofetch.1 ${destroot}${prefix}/share/man/man1/neowofetch.1

    set zsh_comp_path ${destroot}${prefix}/share/zsh/site-functions
    xinstall -d ${zsh_comp_path}
    xinstall -m 644 ${worksrcpath}/${name}.zsh ${zsh_comp_path}/_${name}

    set bash_comp_path ${destroot}${prefix}/share/bash-completion/completions
    xinstall -d ${bash_comp_path}
    xinstall -m 644 ${worksrcpath}/${name}.bash ${bash_comp_path}/${name}

    set fish_comp_path ${destroot}${prefix}/share/fish/vendor_completions.d
    xinstall -d ${fish_comp_path}
    xinstall -m 644 ${worksrcpath}/${name}.fish ${fish_comp_path}
}


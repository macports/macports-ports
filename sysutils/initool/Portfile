                    path:libexec/coreutils/libstdbuf.so:coreutils \
                    port:mlton
depends_lib-append  port:gmp

# https://github.com/dbohdan/initool/issues/7
post-patch {
    reinplace "s,readlink,greadlink," ${worksrcpath}/test.sh
    reinplace "s,mktemp,gmktemp," ${worksrcpath}/test.sh
}

destroot {
    xinstall -d ${destroot}${prefix}/share/doc/${name}
    move ${worksrcpath}/${name} ${destroot}${prefix}/bin/${name}
    copy ${worksrcpath}/README.md ${destroot}${prefix}/share/doc/${name}
}

# MLton is not universal.
universal_variant   no

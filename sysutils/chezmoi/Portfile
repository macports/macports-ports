set cm_doc_dir      ${prefix}/share/doc/${name}

destroot {
    xinstall -m 755 ${worksrcpath}/${name} ${destroot}${prefix}/bin/
    xinstall -d ${destroot}${cm_doc_dir}
    copy {*}[glob ${worksrcpath}/docs/*] ${destroot}${cm_doc_dir}/
}

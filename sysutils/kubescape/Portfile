PortSystem          1.0
PortGroup           golang  1.0

go.setup            github.com/armosec/kubescape 2.0.153 v
github.tarball_from archive
revision            0

description         Tool for testing if Kubernetes is deployed securely as \
                    defined in Kubernetes Hardening Guidance by NSA and CISA

long_description    {*}${description}

categories          sysutils security 
installs_libs       no
license             Apache-2
maintainers         {gmail.com:herby.gillot @herbygillot} \
                    openmaintainer

checksums           rmd160  36b5d3630f5b045f57c239d221ed71becd69f460 \
                    sha256  2dd96ca4d78789c75491fb4babcbd2848bf134ad22426eeb84f305316b28ce84 \
                    size    17510617

# Allow Go to fetch dependencies at build time
build.env-delete    GO111MODULE=off GOPROXY=off
build.env-append    RELEASE=${version}

set py_ver          310
set py_branch       [string index ${py_ver} 0].[string range ${py_ver} 1 end]

depends_build-append \
                    port:python${py_ver}

build.cmd           ${prefix}/bin/python${py_branch} 
build.target        ./build.py

destroot {
    xinstall -m 0755 \
        [glob ${worksrcpath}/build/*/kubescape] \
        ${destroot}${prefix}/bin/
}

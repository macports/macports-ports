checksums-append    ${distname}${extract.suffix} \
                    rmd160 9a8cda1724dc30741e9bdb289478016f0552c49f \
                    sha256 e60e61d34fdaaa94aa9c4fa6fc4cd5ce07628758db989d15f97ce7b70d36fecd \

checksums-append    ${distname}${extract.suffix} \
                    rmd160 c7f88ece0e4559a6b482dc6183b73d86d4dff3d5 \
                    sha256 70c0d6cbc21b7d4e993cd0218d89f82e86498ac86762e785dc2fec6c65202905 \

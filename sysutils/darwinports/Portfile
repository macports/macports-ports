PortSystem 		1.0

name			darwinports
version			1.0
categories		misc sysutils
maintainers		mike+dports@gene-hacker.net

description		A port to install the latest darwinports
platforms		darwin freebsd

fetch.type		cvs
cvs.root		cvs -d :pserver:anonymous@anoncvs.opendarwin.org:/Volumes/src/cvs/od


cvs.module		darwinports/base
distname		darwinports/base

configure		{}


include contents

variant		cvs_all {

cvs.module		darwinports
distname		darwinports
post-install	{system "cp -fr ${worksrcpath}/dports /usr/"}

}

variant		cvs_dports {

cvs.module		darwinports/dports
distname		darwinports/dports
build 			{}
install			{system "cp -fr ${worksrcpath}/ /usr/"}
contents {
/usr/dports
}
}


#			${destroot}${prefix}/share/doc/${name}/${docname}.html
#		reinplace "s|/var/run|${prefix}/var/run|g" \
#			${destroot}${prefix}/share/doc/${name}/${docname}.html
#		reinplace "s|/var/bbackupd|${prefix}/var/bbackupd|g" \
#			${destroot}${prefix}/share/doc/${name}/${docname}.html

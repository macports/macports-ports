fetch.type          git

worksrcdir          ${name}

use_configure       no

build {
    ui_debug "${name} has no build step."
}

destroot {
    xinstall -m 755 ${worksrcpath}/${name}/${name} ${destroot}${prefix}/bin/${name}
}


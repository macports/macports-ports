post-destroot {
    # install man pages
    xinstall -d "${destroot}${prefix}/share/man/man1"
    foreach manpage [glob ${worksrcpath}/man/man1/*] {
        copy ${manpage} ${destroot}${prefix}/share/man/man1/
    }
}

compiler.cxx_standard 2014

configure.args-append \
                    --disable-silent-rules \
                    --disable-static \
                    --with-libarchive \
                    --with-libcurl=${prefix} \
                    --with-ncurses \
                    --with-pcre2 \
                    --with-readline \
                    --with-sqlite3


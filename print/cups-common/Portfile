    xinstall -m 755 -d ${destroot}${prefix}/share/cups/locale/en
    copy ${worksrcpath}/locale/cups_en.po ${destroot}${prefix}/share/cups/locale/en
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/locale/es

# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0

github.setup        OpenPrinting cups 2.4.2 v
github.tarball_from releases
distname            ${github.project}-${github.version}-source
name                cups-header
revision            0
categories          print
license             Apache-2
maintainers         nomaintainer
description         Header files
long_description    Header files to run CUPS
homepage            https://openprinting.github.io/cups/

checksums           rmd160  58a24fe177cfb66157899b6a53a90972a6080e74 \
                    sha256  f03ccb40b087d1e30940a40e0141dcbba263f39974c20eb9f2521066c9c6c908 \
                    size    8128785

depends_build       port:gmake \
                    port:autoconf \
                    port:pkgconfig
depends_lib         port:zlib \
                    port:libcups

patch {
    reinplace "s|/System/Library/LaunchDaemons||g" configure
}

configure.cflags-append     -I${prefix}/include
configure.cppflags-append   -I${prefix}/include
configure.cxxflags-append   -I${prefix}/include
configure.ldflags-append    -L${prefix}/lib
configure.env-append    DSOFLAGS=-L${prefix}/lib
configure.args      --disable-libusb \
                    --disable-pam \
                    --without-dnssd \
                    --without-tls \
                    --with-bundledir=""
build.type          gnu
build.target        all
build.args          

build {
    system -W ${worksrcpath}/cups ${build.cmd}
    foreach tool {ippevepcl ippeveps} {
        system -W ${worksrcpath}/tools "${build.cmd} ${tool}"
    }
    foreach tool {ipp} {
        system -W ${worksrcpath}/backend "${build.cmd} ${tool}"
    }
    foreach tool {bcp tbcp} {
        system -W ${worksrcpath}/monitor "${build.cmd} ${tool}"
    }
    foreach tool {mailto rss} {
        system -W ${worksrcpath}/notifier "${build.cmd} ${tool}"
    }
    foreach tool {cups-deviced cups-driverd cups-exec cups-lpd} {
        system -W ${worksrcpath}/scheduler "${build.cmd} ${tool}"
    }
}

destroot {
    xinstall -m 755 -d ${destroot}${prefix}
    foreach command {ippevepcl ippeveps} {
        xinstall -m 755 ${worksrcpath}/tools/${command} \
            ${destroot}${prefix}/libexec/command
    }
    ln -s ${prefix}/libexec/cups/apple/ipp ${destroot}${prefix}/libexec/cups/apple/http
    ln -s ${prefix}/libexec/cups/apple/ipp ${destroot}${prefix}/libexec/cups/apple/https
    ln -s ${prefix}/libexec/cups/apple/ipp ${destroot}${prefix}/libexec/cups/apple/ipps
    copy ${worksrcpath}/backend/ipp ${destroot}${prefix}/libexec/cups/backend
    foreach backend {ipp lpd usb snmp socket} {
        xinstall -m 755 ${worksrcpath}/backend/${backend} \
            ${destroot}${prefix}/libexec/backend
    }
    ln -s ${prefix}/libexec/cups/backend/ipp ${destroot}${prefix}/libexec/cups/backend/http
    ln -s ${prefix}/libexec/cups/backend/ipp ${destroot}${prefix}/libexec/cups/backend/https
    ln -s ${prefix}/libexec/cups/backend/ipp ${destroot}${prefix}/libexec/cups/backend/ipps
    foreach cgi-bin {admin.cgi classes.cgi help.cgi jobs.cgi printers.cgi} {
        xinstall -m 755 ${worksrcpath}/cgi-bin/${cgi-bin} \
            ${destroot}${prefix}/libexec/cgi-bin
    }
    foreach monitor {bcp tbcp} {
        xinstall -m 755 ${worksrcpath}/monitor/${monitor} \
            ${destroot}${prefix}/libexec/monitor
    }
    foreach notifier {mailto rss} {
        xinstall -m 755 ${worksrcpath}/notifier/${notifier} \
            ${destroot}${prefix}/libexec/notifier
    }
    foreach daemon {cups-deviced cups-driverd cups-exec cups-lpd} {
        xinstall -m 755 ${worksrcpath}/scheduler/${daemon} \
            ${destroot}${prefix}/libexec/daemon
    }
    foreach mime-share {mime.types} {
        xinstall -m 755 ${worksrcpath}/conf/${mime-share} \
            ${destroot}${prefix}/share/cups/mime
    }
    foreach cgi-bin {admin.cgi classes.cgi help.cgi jobs.cgi printers.cgi} {
        xinstall -m 755 ${worksrcpath}/cgi-bin/${cgi-bin} \
            ${destroot}${prefix}/libexec/cgi-bin
    }
    xinstall -m 755 -d ${destroot}${prefix}/libexec/cups/apple
    foreach man {classes.conf cups-files.conf cups-snmp.conf cupsd.conf mailto.conf mime.types printers.conf} {
        xinstall -m 0644 ${worksrcpath}/man/${tool}.5 \
            ${destroot}${prefix}/share/man/man5
    }
    foreach man {backend notifier} {
        xinstall -m 0644 ${worksrcpath}/man/${tool}.7 \
            ${destroot}${prefix}/share/man/man7
    }
    foreach man {cups-snmp cupsd} {
        xinstall -m 0644 ${worksrcpath}/man/${tool}.8 \
            ${destroot}${prefix}/share/man/man8
    }
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/var/log/cups
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/var/spool/cups/tmp
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/var/spool/cups/cache/rss
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/etc/pam.d
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/etc/cups/
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/etc/cups/certs
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/etc/cups/ppd
    
}

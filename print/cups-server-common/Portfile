# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0

github.setup        OpenPrinting cups 2.4.2 v
github.tarball_from releases
distname            ${github.project}-${github.version}-source
name                cups-server-common
revision            0
categories          print
license             Apache-2
maintainers         nomaintainer
description         Common CUPS Files
long_description    Common, non-architecture based files
homepage            https://openprinting.github.io/cups/

checksums           rmd160  58a24fe177cfb66157899b6a53a90972a6080e74 \
                    sha256  f03ccb40b087d1e30940a40e0141dcbba263f39974c20eb9f2521066c9c6c908 \
                    size    8128785

use_configure       no
build {}

destroot {
    xinstall -m 755 -d ${destroot}${prefix}
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/icons
    xinstall -m 755 {*}[glob ${worksrcpath}/desktop/*.png] \
        ${destroot}${prefix}/share/cups/icons
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/icons/hicolor/16x16/apps
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/icons/hicolor/32x32/apps
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/icons/hicolor/64x64/apps
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/icons/hicolor/128x128/apps
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/icons/hicolor/256x256/apps
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/icons/hicolor/512x512/apps
    move ${destroot}${prefix}/share/cups/icons/cups-16.png ${destroot}${prefix}/share/cups/icons/hicolor/16x16/apps/cups.png
    move ${destroot}${prefix}/share/cups/icons/cups-32.png ${destroot}${prefix}/share/cups/icons/hicolor/32x32/apps/cups.png
    move ${destroot}${prefix}/share/cups/icons/cups-64.png ${destroot}${prefix}/share/cups/icons/hicolor/64x64/apps/cups.png
    move ${destroot}${prefix}/share/cups/icons/cups-128.png ${destroot}${prefix}/share/cups/icons/hicolor/128x128/apps/cups.png
    move ${destroot}${prefix}/share/cups/icons/cups-256.png ${destroot}${prefix}/share/cups/icons/hicolor/256x256/apps/cups.png
    move ${destroot}${prefix}/share/cups/icons/cups-512.png ${destroot}${prefix}/share/cups/icons/hicolor/512x512/apps/cups.png
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/doc
    foreach doc {index.html.in cups.css cups-printable.css apple-touch-icon.png robots.txt} {
        xinstall -m 755 ${worksrcpath}/doc/${doc} \
            ${destroot}${prefix}/share/cups/doc
    }
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/doc/da
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/doc/de
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/doc/es
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/doc/fr
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/doc/ja
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/doc/pt_BR
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/doc/ru
    xinstall -m 755 ${worksrcpath}/doc/da/index.html.in \
        ${destroot}${prefix}/share/cups/doc/da
    xinstall -m 755 ${worksrcpath}/doc/de/index.html.in \
        ${destroot}${prefix}/share/cups/doc/de
    xinstall -m 755 ${worksrcpath}/doc/es/index.html.in \
        ${destroot}${prefix}/share/cups/doc/es
    xinstall -m 755 ${worksrcpath}/doc/fr/index.html.in \
        ${destroot}${prefix}/share/cups/doc/fr
    xinstall -m 755 ${worksrcpath}/doc/ja/index.html.in \
        ${destroot}${prefix}/share/cups/doc/ja
    xinstall -m 755 ${worksrcpath}/doc/pt_BR/index.html.in \
        ${destroot}${prefix}/share/cups/doc/pt_BR
    xinstall -m 755 ${worksrcpath}/doc/ru/index.html.in \
        ${destroot}${prefix}/share/cups/doc/ru
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/doc/help
    xinstall -m 755 {*}[glob ${worksrcpath}/doc/help/*] \
        ${destroot}${prefix}/share/cups/doc/help
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/templates
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/templates/da
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/templates/de
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/templates/es
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/templates/fr
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/templates/ja
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/templates/pt_BR
    xinstall -m 755 -d ${destroot}${prefix}/share/cups/templates/ru
    
    xinstall -m 755 {*}[glob ${worksrcpath}/templates/*.tmpl] \
        ${destroot}${prefix}/share/cups/templates
    xinstall -m 755 {*}[glob ${worksrcpath}/templates/da/*] \
        ${destroot}${prefix}/share/cups/templates/da
    xinstall -m 755 {*}[glob ${worksrcpath}/templates/de/*] \
        ${destroot}${prefix}/share/cups/templates/de
    xinstall -m 755 {*}[glob ${worksrcpath}/templates/es/*] \
        ${destroot}${prefix}/share/cups/templates/es
    xinstall -m 755 {*}[glob ${worksrcpath}/templates/fr/*] \
        ${destroot}${prefix}/share/cups/templates/fr
    xinstall -m 755 {*}[glob ${worksrcpath}/templates/ja/*] \
        ${destroot}${prefix}/share/cups/templates/ja
    xinstall -m 755 {*}[glob ${worksrcpath}/templates/pt_BR/*] \
        ${destroot}${prefix}/share/cups/templates/pt_BR
    xinstall -m 755 {*}[glob ${worksrcpath}/templates/ru/*] \
        ${destroot}${prefix}/share/cups/templates/ru
}

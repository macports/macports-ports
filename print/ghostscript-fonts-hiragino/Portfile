                                  UniGB-UTF16-V
                                  UniGB-UTF32-H
                                  UniGB-UTF32-V
                                  UniGB-UTF8-H
                                  UniGB-UTF8-V}
    set EncodeList(Adobe-CNS1)   {Adobe-CNS1-0
                                  Adobe-CNS1-1
                                  Adobe-CNS1-2
                                  Adobe-CNS1-3
                                  Adobe-CNS1-4

# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0
PortGroup           github 1.0

name                yabai

github.setup        koekeishiya yabai 3.3.0 v
revision            0

categories          aqua
platforms           darwin
license             MIT
maintainers         {@akabos akabos.com:ml}

description         Tiling window management for the Mac

long_description    yabai is a window management utility that is designed \
                    to work as an extension to the built-in window manager \
                    of macOS

homepage            https://github.com/koekeishiya/yabai

checksums           rmd160  73367ba51d055becbf98c97cf5f8ab95d9a9d1b7 \
                    sha256  4c7306f77d35a09bba3b228bbe8778c1673e0d6c30c486e9d7bc34169deefcdf \
                    size    1509115

use_configure       no

post-build {
    exec gzip ${worksrcpath}/doc/${name}.1
}

destroot {
    xinstall -m 0755 -W ${worksrcpath} bin/${name} ${destroot}${prefix}/bin

    xinstall -m 0755 -d ${destroot}${prefix}/share/doc/${name}
    xinstall -m 0644 -W ${worksrcpath} CHANGELOG.md LICENSE.txt README.md ${destroot}${prefix}/share/doc/${name}

    xinstall -m 0755 -d ${destroot}${prefix}/share/doc/${name}/examples
    xinstall -m 0644 -W ${worksrcpath}/examples yabairc skhdrc ${destroot}${prefix}/share/doc/${name}/examples

    xinstall -m 0644 -W ${worksrcpath}/doc ${name}.1.gz ${destroot}${prefix}/share/man/man1
}

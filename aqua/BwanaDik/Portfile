# $Id: Portfile,v 1.2 2004/12/14 23:01:27 matt Exp $

PortSystem 1.0

name			BwanaDik
version			1.3
categories		aqua net
platforms		darwin
maintainers		matt@opendarwin.org
homepage		http://www.jschilling.net/sw_bwanadik.php
description		IP address (WAN and LAN) reporter.

long_description	${description}
			
			
master_sites		http://uselessapps.crazyideas.info/software/
checksums		md5 9d9eaea7c77bc384564384000ff45798

distname		${name}Source
use_zip			yes

use_configure		no

build.type		pbx
build.args              -buildstyle Deployment
build.target            -project BwanaDik.xcode -target BwanaDik

destroot {		set appPath ${destroot}/Applications/DarwinPorts
			file mkdir ${appPath}
			file copy "${worksrcpath}/build/${name}.app" ${appPath}
			}


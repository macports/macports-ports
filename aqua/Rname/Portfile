# $Id: Portfile,v 1.2 2004/06/11 20:32:44 jkh Exp $

PortSystem 1.0

name			Rname
version			3.0
categories		aqua textproc
platforms		darwin
maintainers		matt@opendarwin.org
homepage		http://www2.mitsuya.nuem.nagoya-u.ac.jp/~tagaya/cocoa/rname_en.html
description		Cocoa tool to rename multiple files

long_description	Rname is a free Cocoa-based batch-file renaming utility.
			
			
master_sites		http://www2.mitsuya.nuem.nagoya-u.ac.jp/~tagaya/cocoa/archives/
checksums		md5 f41e9606e83c39ccd84b2ebd69d9f7cb

distname		R-Name3src

use_zip			yes

set worksrcdir		R-Name

use_configure		no

build.type		pbx
build.target		{}

destroot {		xinstall -d -m 755 ${destroot}/Applications/DarwinPorts
			file copy ${worksrcpath}/build/R-Name.app \
				${destroot}/Applications/DarwinPorts/R-Name.app
			}


                        size    3540775

    xcode.build.settings-append \
                        CODE_SIGN_IDENTITY= \
                        CODE_SIGNING_REQUIRED=NO
    xcode.destroot.settings-append \
                        CODE_SIGN_IDENTITY= \
                        CODE_SIGNING_REQUIRED=NO
}


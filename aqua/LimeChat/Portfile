name                    LimeChat

if {${os.platform} eq "darwin" && ${os.major} < 11} {
    # This is an old version, but it works.
    # Peg until this is addressed: https://github.com/psychs/limechat/issues/340
    github.setup        psychs limechat 2.15
    checksums           sha256  bb69d29c77f378a6b254e56ddef20be4528e8886dfedc9d141b2d35be7cb0048 \
                        rmd160  9961a42b7c83475636b4718b6de6d9d7c675ea35 \
                        size    2260657
    github.tarball_from archive
} else {
    github.setup        psychs limechat 2.47
    checksums           sha256  cb07c833d8bff0057b6bd1b38ee687e82a18466f8ab9e8b3c8db54ba21f48a12 \

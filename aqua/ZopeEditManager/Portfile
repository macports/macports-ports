# $Id: Portfile,v 1.5 2004/05/20 20:51:56 rshaw Exp $
PortSystem 1.0

name			ZopeEditManager
version			0.9.4
categories		aqua zope www python
maintainers		rshaw@opendarwin.org
description		Zope Edit Manager for External Editing support on Mac OS X
long_description	${description}
homepage		http://zope.org/Members/urbanape/${name}/
master_sites	${homepage}/${name}%20${version}
distname		${name}-src-${version}
distfiles		${name}-${version}-src${extract.suffix}
checksums		md5 ee13911aebcdb40720b11d6f296d425b
platforms		darwin

# Use Python 2.3 from DarwinPorts explicitly 
set python		${prefix}/bin/python2.3
set pythonlib	${prefix}/lib/python2.3

# Depends on Python and Py-Objc
depends_build	path:${python}:python23
depends_run		path:${pythonlib}/site-packages/PyObjC:py-objc

patchfiles		patch-buildapp.py \
				patch-Readme.html
post-patch {
	cd ${worksrcpath}
#	reinplace "s|@VERSION@|${version}_${revision}|" buildapp.py
	file rename Docs Resources/English.lproj/ZopeEditManagerHelp
}

use_configure	no

build.cmd		${python} buildapp.py
build.target	
build.args		--verbose \
				--python=${python} \
				--builddir=${worksrcpath} build

destroot {
	set appPath ${destroot}/Applications/DarwinPorts
	cd ${worksrcpath}
	xinstall -d -m 0755 ${appPath}
	system "cp -R ${name}.app ${appPath}/${name}.app"
}


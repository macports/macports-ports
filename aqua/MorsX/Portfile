# $Id: Portfile,v 1.2 2004/12/28 10:31:44 toby Exp $

PortSystem 1.0

name			MorsX
version			2.0b2
categories		aqua games
platforms		darwin
maintainers		matt@opendarwin.org
homepage		http://m.terreaux.free.fr/
description		Utility for (de)coding morse and rot13

long_description	${description}
			
			
master_sites		opendarwin
checksums		md5 ee69dea84644c9cebc7490a8b750be3b

distname		morsx-${version}

use_bzip2		yes
extract.suffix		.tbz

use_configure		no

build.dir		${workdir}/${name}

build.type		pbx
build.target

destroot {		xinstall -d -m 755 ${destroot}/Applications/DarwinPorts
			file copy ${build.dir}/build/${name}.app \
				${destroot}/Applications/DarwinPorts/${name}.app
			}


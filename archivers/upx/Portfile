PortSystem          1.0
PortGroup           cmake   1.1
PortGroup           github  1.0

name                upx
categories          archivers
license             GPL-2+
maintainers         {l2dy @l2dy} \
                    {gmail.com:herby.gillot @herbygillot} \
                    openmaintainer

description         compress or expand executable files
long_description    UPX is a free, portable, extendable, high-performance \
                    executable packer for several executable formats.
homepage            https://upx.github.io/

if {${name} eq ${subport}} {
    github.setup    upx upx 4.2.2 v
    github.tarball_from releases
    revision        0

    distname        upx-${version}-src
    use_xz          yes
    checksums       rmd160  924fddeb73c17a46d76d1806fcbfd105b94bedd1 \
                    sha256  42ee0455eea610ef7ee732aa1f657b34a351ebcfa64a24c1e2a7aaec74c1e038 \
                    size    1275320

    conflicts       upx-devel

    compiler.cxx_standard \
                    2017
}

subport upx-devel {
    github.setup    upx upx fa56a1d9cd574f2eabfbda40b319b0530e60c285
    github.livecheck.branch devel
    version         20230224
    revision        0

    fetch.type      git

    post-fetch {
        system -W ${worksrcpath} "git submodule update --init"
    }

    conflicts       upx

    compiler.cxx_standard \
                    2017
}

depends_lib-append  port:zlib \
                    port:ucl

configure.args      -DUPX_CONFIG_DISABLE_WERROR=ON

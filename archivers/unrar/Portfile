PortSystem 1.0
name			unrar
version			3.11
platforms		darwin freebsd
categories		archivers
maintainers		max@kruschwitz.biz
description		Extract, view & test RAR archives
long_description	The unRAR utility is a minor part of the \
			RAR archiver and contains RAR uncompression algorithm. \
			unRAR requires very small volume of memory to operate.

homepage		http://www.rarsoft.com/
master_sites		http://files2.rarlab.com/rar/
checksums		md5 1a55414d0288865a0f836a751884457a
distname		${name}src-3.1.4
worksrcdir		${name}

post-patch {
	system "cp -f ${worksrcpath}/makefile.unix ${worksrcpath}/Makefile"
}

configure               {}
build.type		gnu

install {
	system "install -d ${destroot}/${prefix}/bin"
	system "install -d ${destroot}/${prefix}/share/doc/${name}"
	system "install ${worksrcpath}/${name} \
		${destroot}/${prefix}/bin/${name}"
	system "install ${worksrcpath}/license.txt \
		${destroot}/${prefix}/share/doc/${name}"
	system "install ${worksrcpath}/readme.txt \
		${destroot}/${prefix}/share/doc/${name}"
}

install.destroot	prefix=${destroot}/${prefix}


post-destroot {
    set docdir ${prefix}/share/doc/${subport}
    xinstall -d ${destroot}${docdir}
    xinstall -m 0644 -W ${worksrcpath} changelog.md README.md \
        LICENSE.txt CONTRIBUTING.md AUTHORS.rst ${destroot}${docdir}
}

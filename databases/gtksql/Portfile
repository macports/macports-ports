PortSystem 1.0
name		gtksql
version		0.3
categories	databases
description	Graphical query tool for PostgreSQL and/or MySQL
platforms	darwin
maintainers	eric@opendarwin.org
master_sites	http://membres.lycos.fr/bbrox/GtkSQL/
checksums	md5 8f7a0a565e761fb649240cb46d6dd9cb
configure	{ reinplace "s|XXPREFIX|${prefix}|g" \
		  "${workpath}/${worksrcdir}/Makefile" }
depends_lib     lib:libpq.2:postgresql \
		lib:libgtk.1:gtk
patchfiles	patch-Makefile patch-postgres.c

variant mysql	{ reinplace "s|^#MYSQL|MYSQL|g" \
		  "${workpath}/${worksrcdir}/Makefile"
		  depends_lib-append lib:libmysql.3:databases/mysql }

contents	bin/gtksql

# -*- coding: utf-8; mode: tcl; tab-width: 4; indent-tabs-mode: nil; c-basic-offset: 4 -*- vim:fenc=utf-8:ft=tcl:et:sw=4:ts=4:sts=4

PortSystem          1.0

name                fastdb
version             3.76
categories          databases
platforms           darwin
maintainers         nomaintainer
license             permissive

description         Main Memory Relational Database Management System

long_description    ${description}

homepage            http://www.garret.ru/fastdb.html
master_sites        http://www.garret.ru/ \
                    sourceforge:project/${name}/${name}/${version}

checksums           rmd160  b91190466aadddd24077112804d537385aa740e6 \
                    sha256  5382ff0c17692118c4147999f300d50cf972f7096164896529ef61501b166841 \
                    size    3287628

patchfiles          patch-makefile-osx.diff \
                    patch-fastdb-apple-is-not-freebsd.diff

worksrcdir          ${name}

use_configure       no

build.args          -f makefile.osx

if {![variant_isset universal]} {
    build.args-append CC="${configure.cxx} {*}${configure.cxxflags} ${configure.cxx_archflags}"
}

variant universal {
    build.args-append CC="${configure.cxx} {*}${configure.cxxflags} ${configure.universal_cxxflags}"
}

destroot.destdir    -f makefile.osx \
                    PREFIX=${destroot}${prefix}

livecheck.type      regex
livecheck.regex     ${name}-(\[0-9.\]+)${extract.suffix}

# $Id: Portfile,v 1.4 2005/04/19 13:44:14 mww Exp $

PortSystem 1.0

name			mysql5
version			5.0.3-beta
revision		2
categories		databases
platforms		darwin
maintainers		mww@opendarwin.org
description		Multithreaded SQL database server
long_description	MySQL is an open-source, multi-threaded SQL database \
				with a command syntax very similar to mSQL.

homepage		http://www.mysql.com/
master_sites	http://ftp.plusline.de/mysql/Downloads/MySQL-5.0/
distname		mysql-${version}
checksums		md5 15913b736389992bd031fd1dbe6f4dfe
patchfiles		patch-configure

depends_lib		lib:XXX:openssl \
				lib:XXX:zlib \
				lib:XXX:readline

configure.args	--with-openssl=${prefix} \
				--with-openssl-includes=${prefix}/include \
				--with-openssl-libs=${prefix}/lib \
				--mandir=${prefix}/share/man \
				--program-transform-name='s/mysql/mysql5/g' \
				--with-zlib-dir=${prefix} \
				--with-readline \
				--without-docs \
				--without-bench

post-destroot {
	system "rm -rf ${destroot}${prefix}/mysql-test/"
}

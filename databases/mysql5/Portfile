# $Id$

PortSystem              1.0

name                    mysql5
version                 5.1.71
# Please set revision_client and revision_server to 0 if you bump version.
set revision_client     0
set revision_server     0
set version_branch      [join [lrange [split ${version} .] 0 1] .]
homepage                http://www.mysql.com/
categories              databases
platforms               darwin
maintainers             ryandesign pixilla
license                 GPL-2
distname                mysql-${version}
dist_subdir             mysql51
use_parallel_build      yes

description \
    Multithreaded SQL database server

long_description \
    MySQL is an open-source, multi-threaded SQL database \
    with a command syntax very similar to mSQL.

master_sites \
    http://artfiles.org/mysql/Downloads/MySQL-${version_branch}/ \
    http://ftp.arnes.si/mysql/Downloads/MySQL-${version_branch}/ \
    http://ftp.gwdg.de/pub/misc/mysql/Downloads/MySQL-${version_branch}/ \
    http://ftp.heanet.ie/mirrors/www.mysql.com/Downloads/MySQL-${version_branch}/ \
    http://ftp.iij.ad.jp/pub/db/mysql/Downloads/MySQL-${version_branch}/ \

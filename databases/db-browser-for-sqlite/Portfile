destroot {
        copy "${worksrcpath}/src/DB Browser for SQLite.app" ${destroot}${applications_dir}
}

post-destroot {
        ln -s "${applications_dir}/DB Browser for SQLite.app/Contents/MacOS/DB Browser for SQLite" ${destroot}${prefix}/bin/sqlitebrowser
}

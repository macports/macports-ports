package require port 1.0
portname	mysql
portversion	3.23.52
categories	databases
master_sites	ftp://ftp.sunet.se/pub/unix/databases/relational/mysql/Downloads/MySQL-3.23/
checksums	${distfiles} md5 88705b7f38e64b5c21ebb68c77b75e5a
depends_lib     lib:libdl.0:devel/dlcompat
# XXX configure.env has problems with spaces in vars, use temporary workaround
configure	{ cd ${workpath}/${worksrcdir}
		  system "LDFLAGS=-L${prefix}/lib\\ -lncurses\
		  CPPFLAGS=-I${prefix}/include ./configure --prefix=${prefix}" }

# Obtain the rather large contents list from a separate file
include		contents

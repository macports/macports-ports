package require port 1.0
portname	ssmtp
portversion	2.50
set num		10
categories	mail
maintainers	eric@opendarwin.org
description	"Sendmail alternative for small routers (outgoing mail only)"
master_sites	http://ftp.debian.org/debian/pool/main/s/${portname}/ \
		ftp://ftp.icm.edu.pl/pub/Linux/debian/pool/main/s/${portname}/
distname	${portname}_${portversion}.${num}
checksums	${distfiles} md5 5f6c891f38eda7aaabcad84b698f4215
worksrcdir	${portname}-${portversion}
patchfiles	patch-net.c patch-generate_config
make.type	gnu

contents	etc/ssmtp/revaliases \
		etc/ssmtp/ssmtp.conf \
		man/man8/ssmtp.8 \
		sbin/ssmtp

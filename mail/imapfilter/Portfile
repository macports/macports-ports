PortSystem          1.0
PortGroup           github      1.0
PortGroup           lua         1.0
PortGroup           makefile    1.0

github.setup        lefcha imapfilter 2.8.2 v
github.tarball_from archive
revision            0

description         IMAP message processor/filter

long_description    IMAPFilter connects to remote IMAP mail servers and \
                    processes messages according to defined filters (rules). \
                    It is intended to be executed before a user accesses \
                    his/her mailboxes.

categories          mail
installs_libs       no
license             BSD
maintainers         nomaintainer

checksums           rmd160  1dbc2b245bb2c8c3734bd0bad0846ac12135cc4c \
                    sha256  cfdf84598dcccc8a54597448f7cdc7efc450282e23a865ddf59819ec99ac944d \
                    size    58622

depends_lib-append  path:lib/libssl.dylib:openssl \
                    port:libiconv   \
                    port:lua        \
                    port:pcre2

build.dir           ${worksrcpath}/src

build.args-append   MYLDFLAGS="\$LDFLAGS" \
                    MYCFLAGS="\$CFLAGS" \
                    MYLIBS="-liconv" \
                    INCDIRS="\$CPPFLAGS" \
                    LIBLUA=-llua${lua.version}

makefile.override   PREFIX

destroot.args-append \
                    MANDIR="${prefix}/share/man"

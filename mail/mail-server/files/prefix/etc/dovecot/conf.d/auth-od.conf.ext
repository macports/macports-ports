## Create dovecot.keytab on macOS
# sudo /usr/sbin/kadmin -l
# kadmin> ext_keytab -k dovecot.keytab imap/@host@.@domain@.@tld@ smtp/@host@.@domain@.@tld@
# kadmin> exit
# sudo @PREFIX@/bin/klist -e -k -t dovecot.keytab

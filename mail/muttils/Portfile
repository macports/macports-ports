post-destroot {
   set examplesdir ${prefix}/share/examples/${name}
   xinstall -m 755 -d ${destroot}${examplesdir}
   xinstall -m 644 {*}[glob ${worksrcpath}/contrib/example*] \
      ${destroot}${examplesdir}
}

        configure.args-append       --with-mysql
    }

    variant mariadb10.5 \
        conflicts mariadb10.2 mariadb10.3 mariadb10.4 mariadb10.6 mariadb10.7 mariadb10.8 mysql57 mysql8 percona \
        description "Enable MariaDB 10.5 (MySQL) support" {

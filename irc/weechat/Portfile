    configure.args-replace  -DENABLE_PYTHON=OFF -DENABLE_PYTHON=ON
    configure.pkg_config_path-append \
                            ${frameworks_dir}/Python.framework/Versions/3.10/lib/pkgconfig
    depends_lib-append      port:python310
}


PortSystem 1.0
name		xchat
version		1.8.10
categories	irc
maintainers	mij@opendarwin.org
description	IRC client with gtk and text interfaces
platforms	darwin

long_description XChat is a graphical IRC client based on GTK that has \
		 many features and can be scripted with Perl and/or Python.

master_sites	http://www.xchat.org/files/source/1.8/
use_bzip2	yes
checksums	md5 9295830df5d040d7723620322a65f89c
depends_lib	lib:libintl.1:gettext
patchfiles	patch-intl-Makefile.in
configure.args	--disable-gtkfe --disable-xlib --disable-perl
configure.env	LIBS="-L${prefix}/lib" CFLAGS="-I${prefix}/include"

variant x11	{ depends_lib-append lib:libgtk.1:gtk
		  configure.args { --disable-perl --enable-gdk-pixbuf }
		  contents-append bin/xchat }

include		contents

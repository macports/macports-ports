PortSystem 1.0
name		xchat
version		1.8.10
categories	irc
maintainers	eric@opendarwin.org
description	IRC client with gtk and text interfaces
master_sites	http://www.xchat.org/files/source/1.8/
use_bzip2	yes
checksums	md5 9295830df5d040d7723620322a65f89c
depends_lib	lib:libintl.2:gettext
patchfiles	patch-intl-Makefile.in
configure.args	--disable-gtkfe --disable-xlib

post-configure	{ cd ${worksrcpath}/src
		  reinplace "s|-lm|-lm -lintl|g" fe-gtk/Makefile
		  reinplace "s|-lm|-lm -lintl|g" fe-text/Makefile }

variant x11	{ depends_lib-append lib:libgtk.1:gtk
		  configure.args {}
		  contents-append bin/xchat }

include		contents
